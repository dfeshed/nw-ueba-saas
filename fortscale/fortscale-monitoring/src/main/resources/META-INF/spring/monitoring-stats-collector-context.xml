<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <import resource="classpath*:META-INF/spring/fortscale-global-config-context.xml"/>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="file:resources/monitoring-stats-collector.properties"/>
        <property name="order" value="#{T(org.springframework.core.Ordered).HIGHEST_PRECEDENCE}"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="localOverride" value="true"/>
    </bean>

    <bean id="kafkaMetricsEventsWriter" class="fortscale.utils.kafka.KafkaEventsWriter">
        <constructor-arg name="topic" value="metrics"/>
    </bean>

    <bean id="monitoringMetricsWriter" class="fortscale.monitoring.stats.collector.writer.MonitoringStatsCollectorMetricsWriter">
        <property name="kafkaEventsWriter" ref="kafkaMetricsEventsWriter"/>
    </bean>

    <context:component-scan base-package="fortscale.monitoring,fortscale.global"/>

    <context:spring-configured />
    <context:annotation-config />

</beans>