<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mockito="http://www.mockito.org/spring/mockito"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd

        http://www.mockito.org/spring/mockito http://www.mockito.org/spring/mockito.xsd">

    <import resource="classpath*:META-INF/spring/collection-context-test-morphline.xml"/>

    <bean  class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="classpath:META-INF/fortscale-collection-test.properties"/>
        <property name="order" value="#{T(org.springframework.core.Ordered).HIGHEST_PRECEDENCE}"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="localOverride" value="true"/>
    </bean>

    <bean id="loginResolverCache" class="fortscale.services.cache.MemoryBasedCache">
        <constructor-arg name="maxSize" value="${adgroups.resolver.cache.max.items:30000}" />
        <constructor-arg name="timeToExpire" value="${adgroups.resolver.blacklist.timeToExpireSec:3600}" />
        <constructor-arg name="clazz" value="org.apache.commons.lang3.Range" />
    </bean>


    <bean id="collectionProperties" class="fortscale.utils.spring.SpringPropertiesUtil">
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        <property name="locations">
            <list>
                <value>classpath:META-INF/messages.en.collection.properties</value>
                <value>classpath:META-INF/messages.en.properties</value>
                <value>classpath:META-INF/fortscale-collection-test.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true" />
        <property name="localOverride" value="true" />
    </bean>

    <context:component-scan base-package="fortscale.collection.morphlines"/>

    <bean id="computerLoginResolver" class="fortscale.services.ipresolving.ComputerLoginResolver"/>

    <bean id="fortscaleDateFormatService" class="fortscale.collection.services.time.FortscaleDateFormatServiceImpl"/>

    <bean id="applicationConfigurationService" class="fortscale.services.impl.ApplicationConfigurationServiceImpl"/>

    <bean id="nullStatsServiceConfig" class="fortscale.utils.monitoring.stats.config.NullStatsServiceConfig" />

    <bean id="serversListConfiguration" class="fortscale.services.impl.ServersListConfigurationImpl"/>

    <mockito:mock id="activeDirectoryService" class="fortscale.services.ActiveDirectoryService"/>

    <mockito:mock id="filterMachinesService" class="fortscale.services.computer.filtering.impl.FilterMachinesServiceImpl"/>

    <mockito:mock id="collectionPropertiesResolver" class = "fortscale.collection.configuration.CollectionPropertiesResolver"/>

    <mockito:mock id="computerLoginEventRepository" class = "fortscale.domain.events.dao.ComputerLoginEventRepository"/>

    <mockito:mock id="hdfsPartitionsWriteMorphCmdBuilder" class = "fortscale.collection.morphlines.commands.HDFSPartitionsWriteMorphCmdBuilder"/>

    <mockito:mock id="impalaClient" class = "fortscale.utils.impala.ImpalaClient"/>

    <mockito:mock id="applicationConfigurationRepository" class = "fortscale.domain.core.dao.ApplicationConfigurationRepository"/>

    <mockito:mock id="repository" class="fortscale.domain.eventscache.CachedRecordRepository"/>

    <mockito:mock id="computerService" class="fortscale.services.impl.ComputerServiceImpl"/>

    <context:spring-configured />

</beans>
