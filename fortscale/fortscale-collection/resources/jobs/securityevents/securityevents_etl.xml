<?xml version='1.0' encoding='utf-8'?>
<job-scheduling-data
	xmlns="http://www.quartz-scheduler.org/xml/JobSchedulingData"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.quartz-scheduler.org/xml/JobSchedulingData http://www.quartz-scheduler.org/xml/job_scheduling_data_2_0.xsd"
	version="2.0">

	<schedule>
		<job>
			<name>ETL</name>
			<group>SecurityEvents</group>
			<description>process security events ssh events received from splunk into files</description>
			<job-class>fortscale.collection.jobs.event.process.SecurityEventsProcessJob</job-class>
			<durability>true</durability>
			<recover>true</recover>
			
			<job-data-map>
				<!-- common parameters -->
				<entry>
					<key>filesFilter</key>
					<value>user_SEC_\d+.csv$</value>
				</entry>
				<entry>
					<key>morphlineFile</key>
					<value>${readSecEvt_splunk.morphline}</value>
				</entry>
                <entry>
                    <key>morphlineEnrichment</key>
                    <value>${readSEC.morphline.enrichment}</value>
                </entry>
				
				<!--  4624 morphline -->
				<entry>
					<key>morphlineFile4624</key>
					<value>${processSecEvt4624.morphline}</value>
				</entry>
				<!--  4769 morphline  -->
				<entry>
					<key>morphlineFile4769</key>
					<value>${processSecEvt4769.morphline}</value>
				</entry>
				<!--  4768 morphline -->
				<entry>
					<key>morphlineFile4768</key>
					<value>${processSecEvt4768.morphline}</value>
				</entry>
				<!--  4771 morphline -->
				<entry>
					<key>morphlineFile4771</key>
					<value>${processSecEvt4771.morphline}</value>
				</entry>
				
				<entry>
					<key>impalaTables</key>
					<value>LoginEvt,SecEvt4769</value>
				</entry>
				<!--  secEvt4769 table parameters  -->
				<entry>
					<key>eventsToProcessSecEvt4769</key>
					<value>4769</value>
				</entry>				
				<entry>
					<key>outputFieldsSecEvt4769</key>
					<value>${impala.data.kerberos_logins.table.fields}</value>
				</entry>
				<entry>
					<key>messageOutputFieldsSecEvt4769</key>
					<value>${kafka.kerberos_logins.message.record.fields}</value>
				</entry>
				<entry>
					<key>partitionKeyFieldsSecEvt4769</key>
					<value>${impala.data.security.events.4769.table.morphline.fields.username}</value>
				</entry>
				<entry>
					<key>timestampFieldSecEvt4769</key>
					<value>${impala.data.security.events.4769.table.field.date_time_unix}</value>
				</entry>
				<entry>
					<key>outputSeparatorSecEvt4769</key>
					<value>${impala.data.kerberos_logins.table.delimiter}</value>
				</entry>
				<entry>
					<key>hadoopPathSecEvt4769</key>
					<value>${hdfs.user.data.kerberos_logins.path}</value>
				</entry>
				<entry>
					<key>hadoopFilenameSecEvt4769</key>
					<value>data4769.csv</value>
				</entry>
				<entry>
					<key>impalaTableNameSecEvt4769</key>
					<value>${impala.data.kerberos_logins.table.name}</value>
				</entry>
				<entry>
					<key>streamingTopicSecEvt4769</key>
					<value>${kafka.4769.struct.topic}</value>
				</entry>
                <entry>
                    <key>partitionStrategySecEvt4769</key>
                    <value>${impala.data.kerberos_logins.table.partition.type}</value>
                </entry>
				
				<!--  Login table parameters -->
				<entry>
					<key>eventsToProcessLoginEvt</key>
					<value>4768,4771,4624</value>
				</entry>
				<entry>
					<key>outputFieldsLoginEvt</key>
					<value>${impala.data.kerberos_tgt.table.fields}</value>
				</entry>
				<entry>
					<key>messageOutputFieldsLoginEvt</key>
					<value>${kafka.security.events.login.message.record.fields}</value>
				</entry>
				<entry>
					<key>partitionKeyFieldsLoginEvt</key>
					<value>${impala.rawdata.security.events.login.table.field.account_name}</value>
				</entry>
				<entry>
					<key>timestampFieldLoginEvt</key>
					<value>${impala.rawdata.security.events.login.table.field.date_time_unix}</value>
				</entry>
				<entry>
					<key>outputSeparatorLoginEvt</key>
					<value>${impala.data.kerberos_tgt.table.delimiter}</value>
				</entry>
				<entry>
					<key>hadoopPathLoginEvt</key>
					<value>${hdfs.user.data.kerberos_tgt.path}</value>
				</entry>
				<entry>
					<key>hadoopFilenameLoginEvt</key>
					<value>rawdatalogindata.csv</value>
				</entry>
				<entry>
					<key>impalaTableNameLoginEvt</key>
					<value>${impala.data.kerberos_tgt.table.name}</value>
				</entry>
				<entry>
					<key>streamingTopicLoginEvt</key>
					<value>${kafka.4768.struct.topic}</value>
				</entry>
                <entry>
                    <key>partitionStrategyLoginEvt</key>
                    <value>${impala.data.kerberos_tgt.table.partition.type}</value>
                </entry>

			</job-data-map>
		</job>
		
		<trigger>
			<cron>
				<name>sec_etl_hourly_trigger</name>
				<group>SecurityEvents</group>
				<job-name>ETL</job-name>
				<job-group>SecurityEvents</job-group>
				<cron-expression>0 10 * * * ?</cron-expression>
			</cron>
		</trigger>
		
	</schedule>
	
</job-scheduling-data>
