<?xml version='1.0' encoding='utf-8'?>
<job-scheduling-data
	xmlns="http://www.quartz-scheduler.org/xml/JobSchedulingData"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.quartz-scheduler.org/xml/JobSchedulingData http://www.quartz-scheduler.org/xml/job_scheduling_data_2_0.xsd"
	version="2.0">

	<schedule>
		<job>
			<name>Add_Partitions</name>
			<group>SecurityEvents</group>
			<description>Ensure Impala partitions are in sync with HDFS</description>
			<job-class>fortscale.collection.jobs.SyncImpalaPartitionsJob</job-class>
			<durability>true</durability>
			<recover>true</recover>
		</job>
	
		<trigger>
			<cron>
				<name>wmievents4768_partition_sync_hourly_trigger</name>
				<group>SecurityEvents</group>
				<job-name>Add_Partitions</job-name>
				<job-group>SecurityEvents</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.security.login.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.login.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.score.login.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.security.login.retention}</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 55 3 * * ?</cron-expression>
			</cron>
		</trigger>

		<trigger>
			<cron>
				<name>4768_rawdata_partition_sync_hourly_trigger</name>
				<group>SecurityEvents</group>
				<job-name>Add_Partitions</job-name>
				<job-group>SecurityEvents</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.rawdata.security.events.login.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.rawdata.security.events.login.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.rawdata.security.events.login.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.rawdata.security.events.login.retention}</value>
					</entry>
				</job-data-map>
				<cron-expression>0 56 3 * * ?</cron-expression>
			</cron>
		</trigger>

		<trigger>
			<cron>
				<name>wmievents4768_raw_partition_sync_hourly_trigger</name>
				<group>SecurityEvents</group>
				<job-name>Add_Partitions</job-name>
				<job-group>SecurityEvents</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.data.security.events.login.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.data.security.events.login.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.data.security.events.login.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.data.security.events.login.retention}</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 56 3 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>
			<cron>
				<name>wmievents4769_partition_sync_hourly_trigger</name>
				<group>SecurityEvents</group>
				<job-name>Add_Partitions</job-name>
				<job-group>SecurityEvents</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.data.security.events.4769.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.data.security.events.4769.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.data.security.events.4769.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.data.security.events.4769.retention}</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 37 3 * * ?</cron-expression>
			</cron>
		</trigger>
		
		
		<trigger>
			<cron>
				<name>authenticationScores_partition_sync_hourly_trigger</name>
				<group>SecurityEvents</group>
				<job-name>Add_Partitions</job-name>
				<job-group>SecurityEvents</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.security.events.4769.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.ldapauth.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.score.ldapauth_top.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.security.events.4769.retention}</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 52 3 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>
			<cron>
				<name>topAuthenticationScores_partition_sync_hourly_trigger</name>
				<group>SecurityEvents</group>
				<job-name>Add_Partitions</job-name>
				<job-group>SecurityEvents</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.security.top.events.4769.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.ldapauth_top.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.score.ldapauth_top.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.security.top.events.4769.retention}</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 52 3 * * ?</cron-expression>
			</cron>
		</trigger>
		
		
		
	</schedule>

</job-scheduling-data>
