<?xml version='1.0' encoding='utf-8'?>
<job-scheduling-data
	xmlns="http://www.quartz-scheduler.org/xml/JobSchedulingData"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.quartz-scheduler.org/xml/JobSchedulingData http://www.quartz-scheduler.org/xml/job_scheduling_data_2_0.xsd"
	version="2.0">

	<schedule>
		<job>
			<name>Add_Partitions</name>
			<group>NTLM</group>
			<description>Ensure Impala partitions are in sync with HDFS</description>
			<job-class>fortscale.collection.jobs.SyncImpalaPartitionsJob</job-class>
			<durability>true</durability>
			<recover>true</recover>
		</job>
			
		<trigger>
			<cron>
				<name>NTLMdata_partitions_hourly_trigger</name>
				<group>NTLM</group>
				<job-name>Add_Partitions</job-name>
				<job-group>NTLM</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.data.ntlm.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.data.ntlm.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.data.ntlm.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.data.ntlm.retention}</value>
					</entry>
	            </job-data-map>
 				<cron-expression>0 10 2 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>		
			<cron>
				<name>NTLMScores_partition_sync_hourly_trigger</name>
				<group>NTLM</group>
				<job-name>Add_Partitions</job-name>
				<job-group>NTLM</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.ntlm.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.ntlm.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.score.ntlm.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.ntlm.retention}</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 20 2 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>		
			<cron>
				<name>topNTLMScores_partition_sync_hourly_trigger</name>
				<group>NTLM</group>
				<job-name>Add_Partitions</job-name>
				<job-group>NTLM</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.ntlm.top.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.ntlm.top.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.score.ntlm.top.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.ntlm.top.retention}</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 30 2 * * ?</cron-expression>
			</cron>
		</trigger>

		<trigger>
			<cron>
				<name>ntlm_enriched_events_partition_sync_hourly_trigger</name>
				<group>NTLM</group>
				<job-name>Add_Partitions</job-name>
				<job-group>NTLM</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.enricheddata.ntlm.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.enricheddata.ntlm.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.enricheddata.ntlm.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.enricheddata.ntlm.retention}</value>
					</entry>
				</job-data-map>
				<cron-expression>0 40 2 * * ?</cron-expression>
			</cron>
		</trigger>
	</schedule>

</job-scheduling-data>
