<?xml version='1.0' encoding='utf-8'?>
<job-scheduling-data
	xmlns="http://www.quartz-scheduler.org/xml/JobSchedulingData"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.quartz-scheduler.org/xml/JobSchedulingData http://www.quartz-scheduler.org/xml/job_scheduling_data_2_0.xsd"
	version="2.0">

	<schedule>
		<job>
			<name>Fetch</name>
			<group>PXGRID</group>
			<description>Fetch data from pxGrid hourly</description>
			<job-class>fortscale.collection.jobs.siem.PxGridFetch</job-class>
			<durability>true</durability>
			<recover>true</recover>
			
			<job-data-map>
				<entry>
					<key>type</key>
					<value>pxGrid</value>
				</entry>
				<!-- HOUR = 10, MINUTE = 12, SECOND = 13, DATE = 5 -->
				<entry>
					<key>ceilingTimePartInt</key>
					<value>12</value>
				</entry>
				<entry>
					<key>fetchIntervalInSeconds</key>
					<value>900</value>
				</entry>
				<entry>
					<key>fetchDiffInSeconds</key>
					<value>960</value>
				</entry>
				<entry>
					<key>filenameFormat</key>
					<value>PXGRID_%d.csv</value>
				</entry>
				<entry>
					<key>hosts</key>
					<value>${pxgrid.hosts}</value>
				</entry>
				<entry>
					<key>userName</key>
					<value>${pxgrid.userName}</value>
				</entry>
				<entry>
					<key>group</key>
					<value>${pxgrid.group}</value>
				</entry>
				<entry>
					<key>keystorePath</key>
					<value>${pxgrid.keystorePath}</value>
				</entry>
				<entry>
					<key>keystorePassphrase</key>
					<value>${pxgrid.keystorePassphrase}</value>
				</entry>
				<entry>
					<key>truststorePath</key>
					<value>${pxgrid.truststorePath}</value>
				</entry>
				<entry>
					<key>truststorePassphrase</key>
					<value>${pxgrid.truststorePassphrase}</value>
				</entry>
				<entry>
					<key>connectionRetryMillisecond</key>
					<value>2000</value>
				</entry>
            </job-data-map>
		</job>
			
		<!-- trigger the job every 15 minutes -->
		<trigger>
			<cron>
				<name>pxGrid_fetch_every_15min_trigger</name>
				<group>PXGRID</group>
				<job-name>Fetch</job-name>
				<job-group>PXGRID</job-group>
 				<cron-expression>0 1/15 * * * ?</cron-expression>
			</cron>
		</trigger>

	</schedule>
	
</job-scheduling-data>