<?xml version='1.0' encoding='utf-8'?>
<job-scheduling-data
	xmlns="http://www.quartz-scheduler.org/xml/JobSchedulingData"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.quartz-scheduler.org/xml/JobSchedulingData http://www.quartz-scheduler.org/xml/job_scheduling_data_2_0.xsd"
	version="2.0">

	<schedule>
		<job>
			<name>Add_Partitions</name>
			<group>VPN</group>
			<description>Ensure Impala partitions are in sync with HDFS</description>
			<job-class>fortscale.collection.jobs.SyncImpalaPartitionsJob</job-class>
			<durability>true</durability>
			<recover>true</recover>
		</job>
	
		<trigger>
			<cron>
				<name>vpndata_partitions_hourly_trigger</name>
				<group>VPN</group>
				<job-name>Add_Partitions</job-name>
				<job-group>VPN</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.data.vpn.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.data.vpn.table.name}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>14</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>monthly</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 35 3 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>		
			<cron>
				<name>vpndataRes_partition_sync_hourly_trigger</name>
				<group>VPN</group>
				<job-name>Add_Partitions</job-name>
				<job-group>VPN</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.vpnscores.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.vpn.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>daily</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>90</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 40 3 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>		
			<cron>
				<name>topVpndataRes_partition_sync_hourly_trigger</name>
				<group>VPN</group>
				<job-name>Add_Partitions</job-name>
				<job-group>VPN</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.vpnscores_top.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.vpn_top.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>daily</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>90</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 40 4 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>		
			<cron>
				<name>vpnsessionRes_partition_sync_hourly_trigger</name>
				<group>VPN</group>
				<job-name>Add_Partitions</job-name>
				<job-group>VPN</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.vpnscores.session.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.vpn.session.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>daily</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>90</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 45 3 * * ?</cron-expression>
			</cron>
		</trigger>
		
		<trigger>		
			<cron>
				<name>topVpnsessionRes_partition_sync_hourly_trigger</name>
				<group>VPN</group>
				<job-name>Add_Partitions</job-name>
				<job-group>VPN</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.vpnscores.session.top.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.vpn.session.top.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>daily</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>90</value>
					</entry>
            	</job-data-map>
 				<cron-expression>0 45 4 * * ?</cron-expression>
			</cron>
		</trigger>
		
	</schedule>

</job-scheduling-data>
