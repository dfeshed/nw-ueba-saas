<?xml version='1.0' encoding='utf-8'?>
<job-scheduling-data
	xmlns="http://www.quartz-scheduler.org/xml/JobSchedulingData"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.quartz-scheduler.org/xml/JobSchedulingData http://www.quartz-scheduler.org/xml/job_scheduling_data_2_0.xsd"
	version="2.0">

	<schedule>
		<job>
			<name>Add_Partitions</name>
			<group>AMT</group>
			<description>Ensure Impala partitions are in sync with HDFS</description>
			<job-class>fortscale.collection.jobs.SyncImpalaPartitionsJob</job-class>
			<durability>true</durability>
			<recover>true</recover>
		</job>



		<trigger>
			<cron>
				<name>amtScores_partition_sync_hourly_trigger</name>
				<group>AMT</group>
				<job-name>Add_Partitions</job-name>
				<job-group>AMT</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.amtscores.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.amt.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.score.amt.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.amtscores.retention}</value>
					</entry>
				</job-data-map>
				<cron-expression>0 50 3 * * ?</cron-expression>
			</cron>
		</trigger>

		<trigger>
			<cron>
				<name>topAmtScores_partition_sync_hourly_trigger</name>
				<group>AMT</group>
				<job-name>Add_Partitions</job-name>
				<job-group>AMT</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.amtscores.top.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.score.amt_top.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.score.amt_top.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.amtscores.top.retention}</value>
					</entry>
				</job-data-map>
				<cron-expression>0 0 4 * * ?</cron-expression>
			</cron>
		</trigger>

		<trigger>
			<cron>
				<name>amtSessionScores_partition_sync_hourly_trigger</name>
				<group>AMT</group>
				<job-name>Add_Partitions</job-name>
				<job-group>AMT</job-group>
				<job-data-map>
					<entry>
						<key>hdfsPath</key>
						<value>${hdfs.user.processeddata.amtsession.path}</value>
					</entry>
					<entry>
						<key>tableName</key>
						<value>${impala.sessiondata.amt.table.name}</value>
					</entry>
					<entry>
						<key>partitionStrategy</key>
						<value>${impala.sessiondata.amt.table.partition.type}</value>
					</entry>
					<entry>
						<key>daysToRetain</key>
						<value>${hdfs.user.processeddata.amtsession.retention}</value>
					</entry>
				</job-data-map>
				<cron-expression>0 10 4 * * ?</cron-expression>
			</cron>
		</trigger>

        <trigger>
            <cron>
                <name>amtdata_partitions_hourly_trigger</name>
                <group>AMT</group>
                <job-name>Add_Partitions</job-name>
                <job-group>AMT</job-group>
                <job-data-map>
                    <entry>
                        <key>hdfsPath</key>
                        <value>${hdfs.user.data.amt.path}</value>
                    </entry>
                    <entry>
                        <key>tableName</key>
                        <value>${impala.data.amt.table.name}</value>
                    </entry>
                    <entry>
                        <key>partitionStrategy</key>
                        <value>${impala.data.amt.table.partition.type}</value>
                    </entry>
                    <entry>
                        <key>daysToRetain</key>
                        <value>${hdfs.user.data.amt.retention}</value>
                    </entry>
                </job-data-map>
                <cron-expression>0 20 4 * * ?</cron-expression>
            </cron>
        </trigger>



	</schedule>
</job-scheduling-data>
