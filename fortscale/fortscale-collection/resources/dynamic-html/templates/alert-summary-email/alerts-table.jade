td
   table(width="100%" border="0" cellpadding="0" cellspacing="0" style="border-bottom: 1px solid #E2E2E2;")
      tr.table-header(bgcolor!=cssTableHeaderBG style!=cssBaseFont + "color: #{cssTableHeaderColor}; font-totalFileSystemSize: 16px; line-height: 20px;")
         td.spacer-cell(style="padding-top: 10px; padding-bottom: 10px; width: 5px")
         td.severity-header(style="padding-top: 10px; padding-bottom: 10px; width: 50px")
         td.alert-name-header(width="40%" style="padding-left: 5px; padding-top: 10px; padding-bottom: 10px;") Alerts
         td.entity-name-header(width="30%" style="padding-left: 5px; padding-top: 10px; padding-bottom: 10px;") Entity Name
         td.start-time-header(width="15%" style="padding-left: 5px; padding-top: 10px; padding-bottom: 10px;") Start Time
         td.indicators-num-header(style="padding-left: 5px; padding-right: #{cssWidthPadding}; padding-top: 10px; padding-bottom: 10px;") #In.
      for alert,index in alerts
         - var tableItemBgColor = (index%2 == 0) ? cssTableItemOddBG: cssTableItemEvenBG
         tr.table-item(bgcolor!=tableItemBgColor style!=cssBaseFont + "line-height: 20px")
            td.spacer-cell(style="width: 5px; padding-top: 10px; padding-bottom: 10px; text-align: center; vertical-align: top;") &nbsp;
            td.severity(style="width: 50px; padding-top: 10px; padding-bottom: 10px; text-align: center; vertical-align: top;")
               +severityIcon(alert.severity, "32")
            td.alert-name(style="padding-left: 5px; padding-top: 10px; padding-bottom: 10px;vertical-align: top;")
               +alertHref(baseUrl, alert)
                  | #{alert.name}
            td.entity-name(style="word-break: break-all; word-wrap: break-word; padding-left: 5px; padding-top: 10px; padding-bottom: 10px;vertical-align: top;")
               +alertUserHref(baseUrl ,alert)
                  | #{alert.entityName}
            td.start-time(style="padding-left: 5px; padding-top: 10px; padding-bottom: 10px;vertical-align: top;")!=alert.startDateLong
            td.indicators-num(style="padding-left: 5px; padding-right: #{cssWidthPadding}; padding-top: 10px; padding-bottom: 10px;vertical-align: top; text-align: center;")!=alert.evidenceSize