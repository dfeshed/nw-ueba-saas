   td(style="font-family: 'Verdana', verdana, sans-serif;font-size: 16px; text-align: left;")
      table(width="100%" border="0" cellpadding="0" cellspacing="0")
         tr.total-alerts
            include total-alerts
         tr.alerts-table
            include alerts-table
