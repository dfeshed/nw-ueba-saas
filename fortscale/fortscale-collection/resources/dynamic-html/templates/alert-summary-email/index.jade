   - var cssWidthPadding = "2%";
   - var cssBaseFont = "font-family: 'Verdana', Verdana, sans-serif; color: #575757; font-size: 14px; font-weight: 400; line-height: 25px; text-align: left;"
   - var cssTableHeaderBG = "#6faae9"
   - var cssTableHeaderColor = "#ffffff"
   - var cssTableItemOddBG = "#ffffff"
   - var cssTableItemEvenBG = "#f6f6f6"

   //- Local Variables
   - var emailTitle = "ALERTS SUMMARY";
   - var severities = ["Critical", "High", "Medium", "Low"]

