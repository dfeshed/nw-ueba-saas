td(style="padding: 6%;")
    table(width="100%" border="0" cellpadding="0" cellspacing="0")
        tr#alert-description-title
            td
                table(width="100%" border="0" cellpadding="0" cellspacing="0")
                    tr
                        td#alert-description-severity-icon(width="7%;")
                            +alertHref(baseUrl, alert)(style="text-decoration: none;")
                                +severityIcon(alert.severity)
                        td#alert-description-alert-title(style="color: #2766a9; font-weight: 700; letter-spacing: 0.16px; padding-left: 3%;")
                            +alertHref(baseUrl, alert)(style="text-decoration: none; color: #2766a9; font-family: 'Verdana', verdana, sans-serif; font-size: 16px; font-weight: 700; letter-spacing: 0.16px;")
                                | #{alert.name}
        tr#alert-description-spacer(style="height: 21px;")
            td
        tr#alert-description-details
            td
                table(width="100%" border="0" cellpadding="0" cellspacing="0")
                    tr(style="font-size:14px; color:  #575757; font-weight: 700; text-align: left;")
                        td#alert-start-end(width="29%")
                            table(border="0" cellpadding="0" cellspacing="0" style="display: inline-block; padding-right: 20px; ")
                                tr#alert-start
                                    td.label(width="50") Start
                                    td(style="color: #818285; font-weight: 400;") #{alert.startDateShort}
                                tr#alert-end
                                    td.label End
                                    td(style="color: #818285; font-weight: 400;") #{alert.endDateShort}
                            table(border="0" cellpadding="0" cellspacing="0" style="display: inline-block")
                                tr#user-name
                                    td.label(width="50") Entity
                                    if user.adInfo.position != null || user.adInfo.position != ""
                                        td(style="color: #818285; font-weight: 400;") #{user.displayName}, #{user.adInfo.position}
                                    else
                                        td(style="color: #818285; font-weight: 400;") #{user.displayName}
                                tr#alert-status
                                    td.label Status
                                    td(style="color: #818285; font-weight: 400;") #{alert.status}