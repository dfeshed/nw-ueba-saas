td(style!=cssBaseFont + "font-size: 16px; letter-spacing: 0.16px; line-height: 20px; padding-left: #{cssWidthPadding}; padding-right: #{cssWidthPadding}; padding-top: 20px; padding-bottom: 20px;")
    table.date-range(width="100%" border="0" cellpadding="0" cellspacing="0" style="width: 100%;")
        tr(style="text-align: right")
            td(style="text-align: right")!=dateRange
    table.total-alerts(border="0" cellpadding="0" cellspacing="0")
        tr(style="vertical-align: middle;")
            td.title(style="padding-right: 10px; vertical-align: middle;") Total Alerts
            for severity in severities
                td.alerts-severity-icon(style="vertical-align: middle; padding-right: 6px")
                    +severityIcon(severity, "32")
                td.alerts-severity-amount(style="padding-right: 12px")!=alertsSeverity[severity]