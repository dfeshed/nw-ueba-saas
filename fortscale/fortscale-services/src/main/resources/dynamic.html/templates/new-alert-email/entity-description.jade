td
    table(width="100%" border="0" cellpadding="0" cellspacing="0" style="padding-left: 6%; padding-top: 20px; padding-bottom: 20px; padding-right: 2%;")
        tr
            td#entity-image(width="14.5%" style="height: 82px; padding-top: 2px; padding-bottom: 6px; padding-left: 2px; padding-right: 2px;vertical-align: middle; box-shadow: 2px 2px 4px rgba(0,0,0,0.2);" bgcolor="#ffffff")
                +alertUserHref(baseUrl, alert)(style="text-decoration: none; font-family: 'Verdana', Verdana, sans-serif; color: #575757; font-size: 14px; font-weight: 400; text-align: left;")
                    img(width="100%" src="../../assets/images/user-image.jpg" style="border-radius: 4px;" alt!=user.name)
                //- img(width="100%" src="#{'data:image/jpeg;base64,' + user.image}" style="border-radius: 4px;")
            td#entity-details(style="padding-left: 2%;vertical-align: middle;")
                table(width="100%" border="0" cellpadding="0" cellspacing="0")
                    tr.entity-name(style="font-weight: 800;")
                        td
                            +alertUserHref(baseUrl, alert)(style="text-decoration: none; font-family: 'Verdana', Verdana, sans-serif; color: #3c7db5; font-size: 16px; font-weight: 700; text-align: left;")
                                | #{user.name}
                    tr.entity-job-title(style="color:  #3c7db5;")
                        td #{user.jobTitle}
                    tr.entity-department(style="color:  #3c7db5;")
                        td #{user.department}
                    tr.entity-tags
                        td
                            span(style="padding-right: 1%; font-weight: 800;") Tags:
                            for tag,index in user.tags
                                span #{tag} #{index < user.tags.length - 1 ? ", " : ""}