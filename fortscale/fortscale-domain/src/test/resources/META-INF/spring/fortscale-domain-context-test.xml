<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
	<description>domain context for testing.</description>
	
	<import resource="classpath*:META-INF/spring/fortscale-global-config-context.xml"/>
	
	
	<mongo:db-factory id="mongoDbFactory" dbname="fortscale"  host="localhost" port="27017"/>
	
	<mongo:mapping-converter id="mongoConverter" base-package="fortscale.domain">
		<mongo:custom-converters base-package="fortscale.domain" />
	</mongo:mapping-converter>
	
	<bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
		<constructor-arg ref="mongoDbFactory" />
		<constructor-arg ref="mongoConverter" />
		<property name="writeConcern" value="SAFE" />
	</bean>
	
	<bean id="mongoDbRepositoryUtil" class="fortscale.domain.core.dao.MongoDbRepositoryUtil">
		<property name="mongoDbFactory" ref="mongoDbFactory" />
	</bean>
	
	<mongo:repositories base-package="fortscale.domain" />
</beans>
