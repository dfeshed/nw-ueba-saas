<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
	<description>domain light context.</description>


	<mongo:db-factory id="mongoDbFactory" dbname="${mongo.db.name}"  host="${mongo.host.name}" port="${mongo.host.port}" username="${mongo.db.user}" password="#{ T(fortscale.utils.EncryptionUtils).decrypt('${mongo.db.password}')}"/>
	
	<mongo:mapping-converter id="mongoConverter" base-package="fortscale.domain" mapping-context-ref="mongoMappingContext" >
		<mongo:custom-converters base-package="fortscale.domain" />
	</mongo:mapping-converter>
	
	<bean id="mongoConverterConfigurer" class="fortscale.domain.MongoConverterConfigurer" init-method="init" >
		<property name="mongoConverter" ref="mongoConverter"/>
		<property name="mapKeyDotReplacement" value="${mongo.map.dot.replacement}"/>
	</bean>
	
	<mongo:auditing />

	<mongo:template converter-ref="mongoConverter" db-factory-ref="mongoDbFactory" write-concern="SAFE"/>
	<bean id="fsMongoConfiguration" class="fortscale.utils.mongodb.config.SpringMongoConfiguration"/>


</beans>
