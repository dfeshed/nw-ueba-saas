        <dependency>
            <groupId>pl.pragmatists</groupId>
            <artifactId>JUnitParams</artifactId>
            <scope>test</scope>
        </dependency>
        <!--<dependency>-->
        <!--<groupId>org.kubek2k</groupId>-->
        <!--<artifactId>springockito</artifactId>-->
        <!--<scope>test</scope>-->
