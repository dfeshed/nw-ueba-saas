<?xml version="1.0" encoding="UTF-8"?>
<esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xmlns="http://www.espertech.com/schema/esper"
                     xsi:schemaLocation="
http://www.espertech.com/schema/esper
http://www.espertech.com/schema/esper/esper-configuration-2.0.xsd">

    <event-type-auto-name package-name="fortscale.domain.core"/>
    <event-type name="SessionTimeUpdate" class="fortscale.domain.core.SessionTimeUpdate"/>
    <plugin-singlerow-function name="hourStartTimestamp" function-class="fortscale.streaming.alert.rule.RuleUtils" function-method="hourStartTimestamp" />
    <plugin-singlerow-function name="dayStartTimestamp" function-class="fortscale.streaming.alert.rule.RuleUtils" function-method="dayStartTimestamp" />
    <plugin-singlerow-function name="hourEndTimestamp" function-class="fortscale.streaming.alert.rule.RuleUtils" function-method="hourEndTimestamp" />
    <plugin-singlerow-function name="dayEndTimestamp" function-class="fortscale.streaming.alert.rule.RuleUtils" function-method="dayEndTimestamp" />
    <plugin-singlerow-function name="extractNormalizedUsernameFromContextId" function-class="fortscale.streaming.alert.rule.RuleUtils" function-method="extractNormalizedUsernameFromContextId" />

</esper-configuration>