<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="fortscale.streaming.SamzaContainerShutdownErrorFilter" />
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>ERROR</level>
    	</filter>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d [%thread] %-5level %logger{36} - %msg%n%xEx{full}</Pattern>
		</encoder>
	</appender>

	<appender name="LogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="fortscale.streaming.SamzaContainerShutdownErrorFilter" />
		<file>log/logFile-${STREAM_TASK_NAME}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>log/logFile-${STREAM_TASK_NAME}.log.%i</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>5</maxIndex>
		</rollingPolicy>

		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>100MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<Pattern>%date{ISO8601} - %-5level [%t%C{1}@%L]: - %msg %xEx{full}%n</Pattern>
		</encoder>
	</appender>
		
	<appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
		<filter class="fortscale.streaming.SamzaContainerShutdownErrorFilter" />
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>ERROR</level>
    	</filter>
		<syslogHost>localhost</syslogHost>
		<facility>USER</facility>
		<suffixPattern>fortscale-streaming: %d [%thread] %-5level %logger{36} - %msg%n%xEx{full}</suffixPattern>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref name="LogFile" />
		<appender-ref name="SYSLOG" />
	</root>
	
	
</configuration>
