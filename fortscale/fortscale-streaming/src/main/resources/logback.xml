<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d [%thread] %-5level %logger{36} - %msg%n%xEx{full}</Pattern>
		</encoder>
	</appender>

	<appender name="LogFile" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator class="fortscale.utils.logging.SystemPropertyDiscriminator">
			<key>program</key>
		</discriminator>
		
		<sift>
			<appender class="ch.qos.logback.core.rolling.RollingFileAppender">
				<file>log/logFile-${program}.log</file>
				<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
					<fileNamePattern>log/logFile-${program}.log.%i</fileNamePattern>
					<minIndex>1</minIndex>
					<maxIndex>5</maxIndex>
				</rollingPolicy>
		
				<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
					<maxFileSize>100MB</maxFileSize>
				</triggeringPolicy>
				
				<encoder>
					<Pattern>%d [%thread] %-5level %logger{36} - %msg%n%xEx{full}
					</Pattern>
				</encoder>
			</appender>
		</sift>
	</appender>

		
	<appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>ERROR</level>
    	</filter>
	
		<syslogHost>localhost</syslogHost>
		<facility>USER</facility>
		<suffixPattern>fortscale-collection: %d [%thread] %-5level %logger{36} - %msg%n%xEx{full}</suffixPattern>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref name="LogFile" />
		<appender-ref name="SYSLOG" />
	</root>
	
	
</configuration>