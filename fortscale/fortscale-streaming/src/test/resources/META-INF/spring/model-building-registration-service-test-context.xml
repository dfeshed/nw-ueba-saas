<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mockito="http://www.mockito.org/spring/mockito"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.mockito.org/spring/mockito http://www.mockito.org/spring/mockito.xsd">

    <mockito:mock id="modelConfService" class="fortscale.ml.model.ModelConfService"/>
    <mockito:mock id="modelService" class="fortscale.ml.model.ModelService"/>
    <mockito:mock id="modelBuildingListener" class="fortscale.ml.model.listener.IModelBuildingListener"/>
    <mockito:mock id="modelBuildingStore" class="fortscale.streaming.service.model.ModelBuildingSamzaStore"/>
    <bean id="regService" class="fortscale.streaming.service.model.ModelBuildingRegistrationService">
        <constructor-arg index="0" ref="modelBuildingListener"/>
        <constructor-arg index="1" ref="modelBuildingStore"/>
    </bean>

    <context:spring-configured/>
    <context:annotation-config/>
</beans>
