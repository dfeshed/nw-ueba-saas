<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="featureBucketStrategyStore" class="fortscale.aggregation.feature.bucket.strategy.FeatureBucketStrategyMongoStore"/>
	<bean id="userInactivityFeatureBucketStrategyFactory" class="fortscale.aggregation.feature.bucket.strategy.UserInactivityFeatureBucketStrategyFactory"/>
	<bean id="vpnSessionFeatureBucketStrategyFactory" class="fortscale.aggregation.feature.bucket.strategy.VpnSessionFeatureBucketStrategyFactory"/>
	<bean id="featureBucketsStore" class="fortscale.aggregation.feature.bucket.FeatureBucketsMongoStore"/>
	<bean id="bucketConfigurationService" class="fortscale.aggregation.feature.bucket.BucketConfigurationService"/>
	<bean id="dataSourcesSyncTimer" class="fortscale.aggregation.DataSourcesSyncTimer"/>
	<bean id="aggregatedFeatureEventsConfService" class="fortscale.aggregation.feature.event.AggregatedFeatureEventsConfService"/>
	<bean id="aggrFeatureFuncService" class="fortscale.aggregation.feature.functions.AggrFeatureFuncService"/>
	<bean id="mongoDbUtils" class="fortscale.aggregation.util.MongoDbUtils" />

	<!-- supporting information beans-->
	<bean id="supportingInformationPopulatorFactory" class="fortscale.aggregation.feature.services.historicaldata.SupportingInformationPopulatorFactory"/>
	<bean id="supportingInformationDataCountPopulator" class="fortscale.aggregation.feature.services.historicaldata.populators.SupportingInformationCountPopulator" scope="prototype"/>
	<bean id="supportingInformationDataHourlyCountGroupByDayOfWeekPopulator" class="fortscale.aggregation.feature.services.historicaldata.populators.SupportingInformationHourlyCountGroupByDayOfWeekPopulator" scope="prototype"/>
	<bean id="supportingInformationDistinctEventsByTimePopulator" class="fortscale.aggregation.feature.services.historicaldata.populators.SupportingInformationDistinctEventsByTimePopulator" scope="prototype"/>
	<bean id="supportingInformationMongoVPNSessionQueryPopulator" class="fortscale.aggregation.feature.services.historicaldata.populators.SupportingInformationVPNSessionPopulator" scope="prototype"/>
	<bean id="supportingInformationVPNOverlappingSessionPopulator" class="fortscale.aggregation.feature.services.historicaldata.populators.SupportingInformationVPNOverlappingSessionPopulator" scope="prototype"/>
</beans>
