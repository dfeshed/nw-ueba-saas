<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="fakse">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d [%thread] %-5level %logger{36} - %msg%n%xEx{full}</Pattern>
		</encoder>
	</appender>


	<root level="ERROR">
		<appender-ref ref="STDOUT" />
    </root>

    <logger name="fortscale" additivity="false" level="INFO">
		<appender-ref ref="STDOUT" />
    </logger>
	
	
</configuration>