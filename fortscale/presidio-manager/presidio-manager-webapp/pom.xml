<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>presidio-manager-webapp</artifactId>
    <packaging>jar</packaging>
    <description>Fortscale Manager webapp</description>

    <parent>
        <artifactId>presidio-manager</artifactId>
        <groupId>fortscale</groupId>
        <version>11.4.0-0-SNAPSHOT</version>
    </parent>
    <version>11.4.0-0-SNAPSHOT</version>

    <dependencies>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.fge</groupId>
            <artifactId>json-patch</artifactId>
        </dependency>
        <dependency>
            <groupId>fortscale</groupId>
            <artifactId>presidio-configuration-client</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>fortscale</groupId>
            <artifactId>presidio-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.tomcat.embed</groupId>
            <artifactId>tomcat-embed-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-test</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-mongodb</artifactId>
            <version>2.1.9.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-commons</artifactId>
            <version>2.1.9.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-autoconfigure</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
        </dependency>
        <dependency>
            <groupId>io.swagger</groupId>
            <artifactId>swagger-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>fortscale</groupId>
            <artifactId>presidio-utils</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.github.kongchen</groupId>
            <artifactId>swagger-maven-plugin</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>presidio-manager</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>com.github.kongchen</groupId>
                <artifactId>swagger-maven-plugin</artifactId>
                <version>3.1.4</version>
                <dependencies>
                    <dependency>
                        <groupId>com.fasterxml.jackson.core</groupId>
                        <artifactId>jackson-databind</artifactId>
                        <version>2.9.8</version>
                        <scope>compile</scope>
                    </dependency>
                </dependencies>
                <configuration>
                    <apiSources>
                        <apiSource>
                            <swaggerApiReader>fortscale.utils.swagger.PresidioSwaggerReader</swaggerApiReader>
                            <springmvc>true</springmvc>
                            <locations>
                                <location>presidio.webapp.controller</location>
                                <location>presidio.webapp.model</location>
                            </locations>
                            <schemes>
                                <scheme>https</scheme>
                            </schemes>
                            <info>
                                <title>Presidio Rest API</title>
                                <version>${project.version}</version>
                                <description>Fortscale Presidio is a plug-in that can be natively embedded by security
                                    infrastructure solutions to deliver the visibility and risk-based analysis they need
                                    to make better, smarter security decisions. Leveraging the engine from Fortscale's
                                    award-winning user and entity behavioral analytics (UEBA) platform, Presidio enables
                                    SIEM, EDR/EPP, DLP, CASB, IAM and other security infrastructure vendors to quickly
                                    and simply incorporate real-time, risk-based intelligence on the activity of users
                                    and entities within the customer's environment to enhance their own analysis and
                                    security enforcement.
                                    [ Configuration sequence diagram
                                    ](https://www.draw.io/?state=%7B%22ids%22:%5B%220By8FcYQOrmVpVzNJQ2NuNkV0T1k%22%5D,%22action%22:%22open%22,%22userId%22:%22100443953654893261199%22%7D#G0By8FcYQOrmVpVzNJQ2NuNkV0T1k)
                                    [Find out more about Fortscale](http://presidio-domain)
                                </description>
                                <contact>
                                    <email>support@fortscale.com</email>
                                </contact>
                            </info>

                            <host>presidio-domain</host>
                            <basePath></basePath>
                            <swaggerDirectory>${basedir}/target/extra-resources/swagger</swaggerDirectory>
                            <swaggerFileName>presidio-manager-swagger</swaggerFileName>
                            <outputFormats>yaml</outputFormats>
                            <modelSubstitute>/manager-override.map</modelSubstitute>
                            <modelConverters>
                                <modelConverter>fortscale.utils.swagger.DateTimeModelConverter</modelConverter>
                            </modelConverters>
                            <securityDefinitions>
                                <securityDefinition>
                                    <name>basicAuth</name>
                                    <type>basic</type>
                                </securityDefinition>
                            </securityDefinitions>
                        </apiSource>
                    </apiSources>
                </configuration>
                <executions>
                    <execution>
                        <id>auto-generate-manager-yml</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.swagger</groupId>
                <artifactId>swagger-codegen-maven-plugin</artifactId>
                <version>2.2.3</version>
                <executions>
                    <execution>
                        <id>auto-generate-REST-client</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${basedir}/target/extra-resources/swagger/presidio-manager-swagger.yaml
                            </inputSpec>
                            <language>java</language>
                            <library>jersey2</library>
                            <modelPackage>presidio.manager.client.model</modelPackage>
                            <apiPackage>presidio.manager.client.api</apiPackage>
                            <invokerPackage>presidio.manager.client.client</invokerPackage>
                            <addCompileSourceRoot>false</addCompileSourceRoot>
                            <configOptions>
                                <groupId>fortscale</groupId>
                                <artifactId>presidio-manager-generated-client</artifactId>
                                <artifactVersion>${project.version}</artifactVersion>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.groovy.maven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>compile-client</id>
                        <phase>install</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <source>
                                pathname = String.format("%s/../../resources/groovy/utils/Maven.groovy", project.basedir)
                                command = String.format("%s clean install -f %s/target/generated-sources/swagger", project.properties.get('maven.command'), project.basedir)
                                new GroovyShell().parse(new File(pathname)).with {
                                    executeMavenCommand(command, project.properties.get('java.home'), project.properties.get('maven.home'))
                                }
                            </source>
                        </configuration>
                    </execution>
                    <execution>
                        <id>deploy-client</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <source>
                                pathname = String.format("%s/../../resources/groovy/utils/Maven.groovy", project.basedir)
                                repositoryId = project.version.endsWith("SNAPSHOT") ? "asoc-snapshots" : "asoc-releases"
                                command = String.format("%s deploy:deploy-file -f %s/target/generated-sources/swagger -DpomFile=pom.xml -Dfile=target/presidio-manager-generated-client-%s.jar -DrepositoryId=%s -Durl=https://repo1.rsa.lab.emc.com:8443/artifactory/%s", project.properties.get('maven.command'), project.basedir, project.version, repositoryId, repositoryId)
                                new GroovyShell().parse(new File(pathname)).with {
                                    executeMavenCommand(command, project.properties.get('java.home'), project.properties.get('maven.home'))
                                }
                            </source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven-resources-plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>../../target/extra-resources/swagger</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/target/extra-resources/swagger</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
