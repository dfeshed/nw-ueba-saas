<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <import resource="classpath*:META-INF/spring/fortscale-global-config-context.xml"/>


    <!-- Data Entities -->
    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:META-INF/fortscale-config.properties</value>
            </list>
        </property>
        <property name="order" value="1"/>
        <property name="ignoreUnresolvablePlaceholders" value="false" />
        <property name="localOverride" value="true" />
    </bean>
    <bean id="InfluxDBStatsInit" class="fortscale.monitoring.metricAdapter.init.InfluxDBStatsInit"/>

    <bean id="influxdbClient" class="fortscale.utils.influxdb.InfluxdbClient">
        <constructor-arg index="0" value="${influxdb.ip}" />
        <constructor-arg index="1" value="${influxdb.port}" />
        <constructor-arg index="2" value="${influxdb.rest.loglevel}"/>
    </bean>
    <bean id="kafkaTopicSyncReader" class="fortscale.utils.kafka.KafkaTopicSyncReader">
        <constructor-arg index="0" value="clientId"/>
        <constructor-arg index="1" value="metrics"/>
        <constructor-arg index="2" value="0"/>
    </bean>
    <context:component-scan base-package="fortscale.monitoring,fortscale.global"/>

    <context:spring-configured />
    <context:annotation-config />

</beans>