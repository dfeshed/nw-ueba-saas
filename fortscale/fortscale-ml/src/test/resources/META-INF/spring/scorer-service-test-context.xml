<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <import resource="classpath*:META-INF/spring/fortscale-global-config-context.xml"/>

    <bean id="nullStatsServiceConfig" class="fortscale.utils.monitoring.stats.config.NullStatsServiceConfig"/>
    <bean class="fortscale.ml.model.config.ModelBuildingDependencies"/>
    <bean class="fortscale.ml.model.config.ModelBuildingConfiguration"/>
    <bean class="fortscale.ml.scorer.spring.config.ScoringSpringConfiguration"/>
    <bean id="eventModelsCacheService" class="fortscale.ml.model.cache.EventModelsCacheService"/>
    <bean id="scorerConfService" class="fortscale.ml.scorer.config.TestScorerConfService">
        <constructor-arg value="classpath:config/asl/scorers/raw-events/*.json"/>
    </bean>

    <context:annotation-config/>
    <context:spring-configured/>
    <context:component-scan base-package="fortscale.global,fortscale.common.feature.extraction"/>
</beans>
