<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mockito="http://www.mockito.org/spring/mockito"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.mockito.org/spring/mockito http://www.mockito.org/spring/mockito.xsd">

    <mockito:mock id="bucketConfigurationService" class="fortscale.aggregation.feature.bucket.BucketConfigurationService"/>
    <mockito:mock id="featureBucketsReaderService" class="fortscale.aggregation.feature.bucket.FeatureBucketsReaderService"/>
    <mockito:mock id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate"/>
    <mockito:mock id="mongoDbUtilService" class="fortscale.aggregation.util.MongoDbUtilService"/>

    <bean id="modelConfService" class="fortscale.ml.model.ModelConfService"/>
    <bean id="modelStore" class="fortscale.ml.model.store.ModelStore"/>

    <context:spring-configured/>
    <context:annotation-config/>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="classpath:ModelServiceTest.properties"/>
        <property name="order" value="#{T(org.springframework.core.Ordered).HIGHEST_PRECEDENCE}"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="localOverride" value="true"/>
    </bean>
</beans>
