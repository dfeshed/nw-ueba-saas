<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mockito="http://www.mockito.org/spring/mockito"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.mockito.org/spring/mockito http://www.mockito.org/spring/mockito.xsd">

    <import resource="classpath*:META-INF/spring/fortscale-global-config-context.xml"/>

    <bean id="scorerFactoryService" class="fortscale.utils.factory.FactoryService"/>
    <bean id="reductionScorerFactory" class="fortscale.ml.scorer.factory.ReductionScorerFactory"/>
    <bean id="scoreMapperFactory" class="fortscale.ml.scorer.factory.ScoreMapperFactory"/>
    <bean id="modelBasedScoreMapperFactory" class="fortscale.ml.scorer.factory.ModelBasedScoreMapperFactory"/>
    <bean id="categoryRarityModelScorerFactory" class="fortscale.ml.scorer.factory.CategoryRarityModelScorerFactory"/>
    <bean id="paretoScorerFactory" class="fortscale.ml.scorer.factory.ParetoScorerFactory" />
    <bean id="priorityScorerContainerFactory" class="fortscale.ml.scorer.factory.PriorityScorerContainerFactory" />
    <bean id="constantRegexScorerFactory" class="fortscale.ml.scorer.factory.ConstantRegexScorerFactory" />
    <bean id="fieldValueScoreReducerScorerFactory" class="fortscale.ml.scorer.factory.FieldValueScoreReducerScorerFactory" />
    <bean id="eventModelsCacheService" class="fortscale.ml.model.cache.EventModelsCacheService"/>


    <mockito:mock id="modelConfService" class="fortscale.ml.model.ModelConfService" />
    <mockito:mock id="featureExtractService" class="fortscale.common.feature.extraction.FeatureExtractService"/>
    <mockito:mock id="modelsCacheService" class="fortscale.ml.model.cache.ModelsCacheService" />

    <context:annotation-config/>
    <context:spring-configured/>
</beans>
