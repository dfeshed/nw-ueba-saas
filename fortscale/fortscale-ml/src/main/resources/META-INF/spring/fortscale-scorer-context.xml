<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
		
	<description>Scorer context</description>

	<import resource="classpath*:META-INF/spring/fortscale-global-config-context.xml"/>
    <import resource="classpath*:META-INF/spring/fortscale-domain-light-context.xml"/>

	<bean id="scorerConfService" class="fortscale.ml.scorer.config.ScorerConfService" />
	<bean id="scorersFactoryService" class="fortscale.ml.scorer.factory.ScorersFactoryService" />
	<bean id="dataRetrieverFactoryService" class="fortscale.utils.factory.FactoryService" />
	<bean id="modelConfService" class="fortscale.ml.model.ModelConfService" />
	<bean id="modelStore" class="fortscale.ml.model.store.ModelStore" />
	<bean id="bucketConfigurationService" class="fortscale.aggregation.feature.bucket.BucketConfigurationService" />
	<bean id="featureBucketsReaderService" class="fortscale.aggregation.feature.bucket.FeatureBucketsReaderService" />
    <bean id="featureBucketsMongoStore" class="fortscale.aggregation.feature.bucket.FeatureBucketsMongoStore" />
    <bean id="mongoDbUtilService" class="fortscale.aggregation.util.MongoDbUtilService" />
    <bean id="entityEventConfService" class="fortscale.entity.event.EntityEventConfService" />
    <bean id="aggregatedFeatureEventsConfService" class="fortscale.aggregation.feature.event.AggregatedFeatureEventsConfService" />
    <bean id="retentionStrategiesConfService" class="fortscale.aggregation.feature.event.RetentionStrategiesConfService" />
    <bean id="entityEventGlobalParamsConfService" class="fortscale.entity.event.EntityEventGlobalParamsConfService"/>
    <bean id="aggregatedFeatureEventsConfUtilService" class="fortscale.aggregation.feature.event.AggregatedFeatureEventsConfUtilService"/>

	<context:annotation-config/>
	<context:spring-configured/>
	<context:component-scan base-package="fortscale.ml.scorer.factory, fortscale.ml.model.retriever, fortscale.domain.core.dao, fortscale.common.feature.extraction"/>
</beans>
