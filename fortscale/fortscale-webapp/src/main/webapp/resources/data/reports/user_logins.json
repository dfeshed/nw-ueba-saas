{
    "dataSource": "api",
    "endpoint": {
        "entity": "classifier",
        "method": "loginsEvents",
        "uid": "{{@username}}"
    },
    "query": {
        "entity": "logins",
        "conditions": [
            {
                "field": "username",
                "operator": "equals",
                "value": "{{username}}"
            },
            {
                "field": "score",
                "operator": "greaterThan",
                "value": 30
            }
        ]
    },
    "searchId": "user_logins",
    "fields": [
        {
            "name": "score",
            "type": "number"
        },
        {
            "name": "sourceIP",
            "type": "ip"
        },
        {
            "name": "sourceHostname",
            "type": "string"
        },
        {
            "name": "time",
            "type": "date"
        },
        {
            "name": "destinationHostname",
            "type": "string"
        },
        {
            "name": "destinationIP",
            "type": "string"
        },
        {
            "name": "destinationHostname",
            "type": "string"
        }
    ],
    "params": [
        {
            "field": "id",
            "name": "id",
            "dashboardParam": "entityId"
        }
    ]
}