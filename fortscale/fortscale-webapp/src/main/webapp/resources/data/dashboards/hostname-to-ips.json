{
    "dashboardId": "hostname-to-ips",
    "name": "IP History for hostname {{@machine}}",
    "description": "History of a hostname's IP's",
    "controls": [
        {
            "type": "search",
            "label": "Search: ",
            "settings": {
                "reports": [
                    {
                        "query": {
                            "searchId": "Search_Hostnames",
                            "dataSource": "splunk",
                            "options": {
                                "count": 10
                            },
                            "fields": {
                                "Host_Name":{"type":"string"}
                            },
                            "params": [
                                {
                                    "field": "hostname",
                                    "type": "string",
                                    "dashboardParam": "term"
                                }
                            ]
                        }
                    }
                ],
                "onSelect": {
                    "action": "setParams",
                    "actionOptions": {
                        "params": {
                            "machine": "{{value}}"
                        }
                    }
                },
                "placeholder": "Machine name"
            }
        }
    ],
    "widgets": [
        {
            "widgetId": 14,
            "reportId": 14,
            "requiredParams": ["machine"],
            "initMessage": "Please select a hostname from the search box to see its IP history.",
            "report": {
                "reportId": 14,
                "name": "Get Machine's IP's",
                "description": "",
                "query": {
                    "dataSource": "splunk",
                    "searchId": "Reports_Hostname_to_IP_Addresses",
                    "fields": {
                        "IP_Address": {
                            "type": "ip"
                        },
                        "_time": {
                            "type": "date"
                        }
                    },
                    "params": [
                        {
                            "field": "hostname",
                            "type": "string",
                            "dashboardParam": "machine"
                        },
                        {
                            "field": "timeStart",
                            "type": "string",
                            "dashboardParam": "timeStart",
                            "default": "-1month"
                        },
                        {
                            "field": "timeEnd",
                            "type": "string",
                            "dashboardParam": "timeEnd",
                            "default": "now"
                        }
                    ]
                }
            },
            "name": "IP's for this machine",
            "width": "100%",
            "views": [
                {
                    "type": "table",
                    "title": "IP Addresses history",
                    "settings": {
                        "fields": [
                            {
                                "name": "IP",
                                "value": "{{IP_Address}}",
                                "sortBy": "IP_Address"
                            },
                            {
                                "name": "Time",
                                "value": "{{_time}}",
                                "sortable": true,
                                "sortBy": "_time",
                                "format": "date",
                                "formatOptions": {
                                    "format": "MM/DD/YYYY HH:mm"
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ]
}