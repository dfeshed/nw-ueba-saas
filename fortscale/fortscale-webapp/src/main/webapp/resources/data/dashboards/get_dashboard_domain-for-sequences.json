{
    "dashboardId": "domain",
    "name": "Domain",
    "widgets": [
        {
            "updateFor": ["domain"],
            "widgetId": 6,
            "width": "100%",
            "views": [
                {
                    "type": "buttonsBar",
                    "settings": {
                        "buttons": [
                            {
                                "text": "Go to URL",
                                "tooltip": "Open the URL in a new tab",
                                "events": {
                                    "onClick": {
                                        "action": "openUrl",
                                        "actionOptions": {
                                            "target": "_blank",
                                            "url": "http://{{@domain}}"
                                        }
                                    }
                                }
                            },
                            {
                                "text": "Reputation",
                                "tooltip": "Get more information about this domain from McAfee's Site Advisor",
                                "events": {
                                    "onClick": {
                                        "action": "openUrl",
                                        "actionOptions": {
                                            "target": "_blank",
                                            "url": "http://www.siteadvisor.com/sites/{{@domain}}"
                                        }
                                    }
                                }
                            },
                            {
                                "text": "whois",
                                "tooltip": "Who owns the domain name by searching a WHOIS database",
                                "events": {
                                    "onClick": {
                                        "action": "openUrl",
                                        "actionOptions": {
                                            "target": "_blank",
                                            "url": "http://www.networksolutions.com/whois/results.jsp?domain={{@domain}}"
                                        }
                                    }
                                }
                            },
                            {
                                "text": "Alexa",
                                "tooltip": "The ranking by Alexa for this domain",
                                "events": {
                                    "onClick": {
                                        "action": "openUrl",
                                        "actionOptions": {
                                            "target": "_blank",
                                            "url": "http://www.alexa.com/search?q={{@domain}}&r=home_home&p=bigtop"
                                        }
                                    }
                                }
                            }
                        ]
                    }
                }
            ]
        },
        {
            "width": "100%",
            "widgetId": 7,
            "updateFor": ["domain"],
            "views": [
                {
                    "type": "buttonsBar",
                    "settings": {
                        "buttons": [
                            {
                                "text": "Add or remove from whitelist",
                                "tooltip": "Click to add this domain to the list of non-suspicious domains. The domain will not be considered suspicious in the future",
                                "width": "60%",
                                "events": {
                                    "onClick": {
                                        "action": "setGlobalParam",
                                        "actionOptions": {
                                            "param": "whitelistAddShowDialog",
                                            "value": "{{@domain}}"
                                        }
                                    }
                                }
                            },
                            {
                                "text": "Open whitelist",
                                "tooltip": "Open the list of white-listed domains",
                                "width": "40%",
                                "events": {
                                    "onClick": {
                                        "action": "openUrl",
                                        "actionOptions": {
                                            "target": "_self",
                                            "url": "#/d/domain-whitelist"
                                        },
                                        "afterAction": {
                                            "success": {
                                                "action": "closePopup"
                                            }
                                        }
                                    }
                                }
                            }
                        ]
                    }
                }
            ]
        },
        {
            "widgetId": 5,
            "reportId": 5,
            "report": {
                "reportId": 5,
                "name": "Get domain accesses",
                "description": "",
                "query": {
                    "dataSource": "splunk",
                    "searchId": "Domain_Accesses",
                    "fields": {
                        "IP_Address": {
                            "type": "ip"
                        },
                        "Number_of_Successes": {
                            "type": "number"
                        },
                        "Number_of_Failures": {
                            "type": "number"
                        }
                    },
                    "params": [
                        {
                            "field": "domain",
                            "type": "string",
                            "dashboardParam": "domain"
                        },
                        {
                            "field": "head",
                            "type": "number",
                            "default": "1000"
                        }
                    ]
                }
            },
            "name": "Domain accesses",
            "width": "100%",
            "views": [
                {
                    "type": "table",
                    "title": "Accessed by:",
                    "settings": {
                        "fields": [
                            {
                                "name": "Machine",
                                "value": "{{IP_Address}}",
                                "sortBy": "IP_Address",
                                "link": "#/d/malware/e/machine/{{IP_Address}}"
                            },
                            {
                                "name": "Failures",
                                "value": "{{Number_of_Failures}}",
                                "sortBy": "Number_of_Failures",
                                "sortDirection": -1,
                                "tooltip": "The number of times this machine attempted to access the domain in the specified time frame, but failed"
                            },
                            {
                                "name": "Successes",
                                "value": "{{Number_of_Successes}}",
                                "sortBy": "Number_of_Successes",
                                "tooltip": "The number of times this machine successfully attempted to access the domain in the specified time frame"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}