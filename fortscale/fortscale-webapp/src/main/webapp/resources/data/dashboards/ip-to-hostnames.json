{
    "dashboardId": "ip-to-hostnames",
    "name": "Hostname history for an IP address {{@machine}}",
    "description": "History of a an IP's hostnames",
    "controls": [
        {
            "type": "search",
            "label": "Search: ",
            "settings": {
                "reports": [
                    {
                        "query": {
                            "searchId": "Search_IP_Addresses",
                            "dataSource": "splunk",
                            "options": {
                                "count": 10
                            },
                            "fields": {
                                "IP_Address":{"type":"ip"}
                            },
                            "params": [
                                {
                                    "field": "IP",
                                    "type": "string",
                                    "dashboardParam": "term"
                                }
                            ]
                        }
                    }
                ],
                "onSelect": {
                    "action": "setParams",
                    "actionOptions": {
                        "params": {
                            "machine": "{{value}}"
                        }
                    }
                },
                "placeholder": "IP Address"
            }
        }
    ],
    "widgets": [
        {
            "widgetId": 15,
            "reportId": 15,
            "requiredParams": ["machine"],
            "initMessage": "Please select an IP from the search box to see its host name history.",
            "report": {
                "reportId": 15,
                "name": "Get IP's hostnames",
                "description": "",
                "query": {
                    "dataSource": "splunk",
                    "searchId": "Reports_IP_Address_to_Hostnames",
                    "fields": {
                        "Host_Name": {
                            "type": "string"
                        },
                        "_time": {
                            "type": "date"
                        }
                    },
                    "params": [
                        {
                            "field": "IP",
                            "type": "string",
                            "dashboardParam": "machine"
                        },
                        {
                            "field": "timeStart",
                            "type": "string",
                            "dashboardParam": "timeStart",
                            "default": "-1month"
                        },
                        {
                            "field": "timeEnd",
                            "type": "string",
                            "dashboardParam": "timeEnd",
                            "default": "now"
                        }
                    ]
                }
            },
            "name": "Hostnames for an IP address",
            "width": "100%",
            "views": [
                {
                    "type": "table",
                    "title": "Hostnames",
                    "settings": {
                        "fields": [
                            {
                                "name": "Hostname",
                                "value": "{{Host_Name}}",
                                "sortBy": "Host_Name"
                            },
                            {
                                "name": "Time",
                                "value": "{{_time}}",
                                "sortable": true,
                                "sortBy": "_time",
                                "format": "date",
                                "formatOptions": {
                                    "format": "MM/DD/YYYY HH:mm"
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ]
}