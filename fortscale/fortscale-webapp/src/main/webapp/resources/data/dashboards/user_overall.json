{
    "dashboardId": "user_overall",
    "name": "{{@entityId}}",
    "columns": [
        {
            "className": "span15",
            "widgets": [
                {
                    "report": {
                        "query": {
                            "searchId": "user_score_history",
                            "fields": [
                                {
                                    "name": "date",
                                    "type": "date"
                                },
                                {
                                    "name": "score",
                                    "type": "number"
                                },
                                {
                                    "name": "averageScore",
                                    "type": "number"
                                }
                            ],
                            "params": [
                                {
                                    "field": "userId",
                                    "name": "userId",
                                    "dashboardParam": "entityId"
                                }
                            ]
                        }
                    },
                    "title": "User score for the last 7 days",
                    "views": [
                        {
                            "type": "barChart",
                            "settings": {
                                "options": {
                                    "height": "200px",
                                    "width": "100%",
                                    "createAxes": false,
                                    "barLabelsFont": {
                                        "size": 16,
                                        "color": "#b7b7b7"
                                    },
                                    "labelsFont": {
                                        "size": "14px"
                                    },
                                    "labels": {
                                        "height": 20,
                                        "margin": 13,
                                        "handleEvents": true
                                    },
                                    "selectable": true,
                                    "showSelectionBar": true,
                                    "padding": { "top": 0, "right": 50, "left": 50, "bottom": 0 }
                                },
                                "selectedIndex": "last",
                                "series": [
                                    {
                                        "field": "score",
                                        "label": "{{@entityId}}'s score",
                                        "style": "score",
                                        "styleParams": {
                                            "value": "score"
                                        }
                                    },
                                    {
                                        "field": "averageScore",
                                        "label": "Average user's score",
                                        "color": "#e7e7e7",
                                        "barLabelsColor": "#aaaaaa"
                                    }
                                ],
                                "labels": {
                                    "field": "date",
                                    "value": "{{date}}",
                                    "styleField": "score",
                                    "format": "date",
                                    "formatOptions": { "format": "MM/DD" }
                                },
                                "selectionBar": {
                                    "styleField": "score"
                                },
                                "events": [
                                    {
                                        "eventName": "click",
                                        "action": "setParams",
                                        "actionOptions": {
                                            "updateUrl": false,
                                            "params": {
                                                "currentDate": "{{date}}"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "title": "Breakdown of the user's score",
                    "report": {
                        "query": {
                            "searchId": "user_profile",
                            "fields": [
                                {
                                    "name": "description",
                                    "type": "string"
                                },
                                {
                                    "name": "value",
                                    "type": "string"
                                },
                                {
                                    "name": "featureScore",
                                    "type": "number"
                                },
                                {
                                    "name": "organizational",
                                    "type": "number"
                                },
                                {
                                    "name": "permissions",
                                    "type": "number"
                                },
                                {
                                    "name": "destinations",
                                    "type": "number"
                                }
                            ],
                            "params": [
                                {
                                    "field": "userId",
                                    "name": "userId",
                                    "dashboardParam": "entityId"
                                }
                            ]
                        }
                    },
                    "views": [
                        {
                            "type": "table",
                            "settings": {
                                "rows": {
                                    "style": "highScore",
                                    "styleParams": {
                                        "value": "featureScore"
                                    }
                                },
                                "fields": [
                                    {
                                        "name": "Description",
                                        "value": "{{description}}"
                                    },
                                    {
                                        "name": "Value",
                                        "value": "{{value}}",
                                        "sortBy": "value"
                                    },
                                    {
                                        "name": "Feature Score",
                                        "value": "{{featureScore}}",
                                        "sortBy": "featureScore",
                                        "sortDirection": -1
                                    },
                                    {
                                        "name": "Organizational Score",
                                        "value": "{{organizational}}",
                                        "sortBy": "organizational"
                                    },
                                    {
                                        "name": "Permissions Score",
                                        "value": "{{permissions}}",
                                        "sortBy": "permissions"
                                    },
                                    {
                                        "name": "Destinations Score",
                                        "value": "{{destinations}}",
                                        "sortBy": "destinations"
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    ]
}