{
    "title": "User Details",
    "className": "round-items-list",
    "views": [
        {
            "type": "properties",
            "settings": {
                "properties": [
                    {
                        "icon": "user",
                        "tooltip": "SAM Account Name",
                        "list": [
                            {
                                "label": "SAM Account Name:",
                                "value": "{{samacountName}}"
                            },
                            {
                                "label": "AD User Name:",
                                "value": "{{adUserPrincipalName}}"
                            }
                        ]
                    },
                    {
                        "icon": "group",
                        "tooltip": "Group Membership",
                        "value": "{{name}}",
                        "array": "groups"
                    },
                    {
                        "icon": "sitemap",
                        "tooltip": "Manager",
                        "value": "{{manager.name}}",
                        "link": "#/d/user/{{manager.id}}"
                    },
                    {
                        "icon": "sitemap",
                        "tooltip": "Direct Reports",
                        "value": "{{firstname}} {{lastname}}",
                        "link": "#/d/user/{{id}}",
                        "array": "userDirectReports"
                    },
                    {
                        "icon": "check",
                        "tooltip": "Active Directory Flags",
                        "booleanList": [
                            {
                                "label": "Account is Disabled",
                                "show": "accountIsDisabled"
                            },
                            {
                                "label": "Inter-domain trust account",
                                "show": "interdomainTrustAccountValue"
                            },
                            {
                                "label": "Locked out",
                                "show": "lockout"
                            },
                            {
                                "label": "No password required",
                                "show": "noPasswordRequiresValue"
                            },
                            {
                                "label": "Normal user account",
                                "show": "normalUserAccountValue"
                            },
                            {
                                "label": "Password expired",
                                "show": "passwordExpired"
                            },
                            {
                                "label": "Password never expires",
                                "show": "passwordNeverExpiresValue"
                            },
                            {
                                "label": "Server-trusted account",
                                "show": "serverTrustAccount"
                            },
                            {
                                "label": "Smart-card required",
                                "show": "smartcardRequired"
                            },
                            {
                                "label": "Trusted for delegation",
                                "show": "trustedForDelegation"
                            },
                            {
                                "label": "Trusted to authenticate for delegation",
                                "show": "trustedToAuthForDelegation"
                            },
                            {
                                "label": "Workstation-trusted account",
                                "show": "workstationTrustAccount"
                            }
                        ]
                    },
                    {
                        "icon": "group",
                        "tooltip": "Organizational Unit",
                        "value": "{{ou}}",
                        "transform": {
                            "method": "ou",
                            "options": {
                                "divider": " <i class='icon-caret-right'></i> "
                            }
                        }
                    },
                    {
                        "icon": "time",
                        "tooltip": "Account timeline",
                        "list": [
                            {
                                "label": "Created:",
                                "value": "{{adWhenCreated}}",
                                "transform": {
                                    "method": "date"
                                }
                            },
                            {
                                "label": "Last modified:",
                                "value": "{{adWhenChanged}}",
                                "transform": {
                                    "method": "date"
                                }
                            },
                            {
                                "label": "Expires:",
                                "value": "{{adAcountExpires}}",
                                "transform": {
                                    "method": "date"
                                },
                                "className": "error"
                            }
                        ]
                    },
                    {
                        "icon": "info",
                        "tooltip": "Description",
                        "value": "{{description}}"
                    },
                    {
                        "icon": "envelope",
                        "tooltip": "Email",
                        "value": "{{email}}",
                        "link": "mailto:{{email}}"
                    },
                    {
                        "icon": "barcode",
                        "tooltip": "Employee ID",
                        "value": "{{adEmployeeID || adEmployeeNumber}}"
                    },
                    {
                        "icon": "phone",
                        "tooltip": "Phone",
                        "value": "{{phone || homePhone || otherTelephone || otherHomePhone || otherFacsimileTelephoneNumber || }}"
                    },
                    {
                        "icon": "mobile-phone",
                        "tooltip": "Mobile phone",
                        "value": "{{mobilePhone || otherMobile}}"
                    },
                    {
                        "icon": "location-arrow",
                        "tooltip": "Address",
                        "value": "{{address}}"
                    },
                    {
                        "icon": "globe",
                        "tooltip": "Department",
                        "value": "{{department || division || company}}"
                    },
                    {
                        "icon": "building",
                        "tooltip": "Room Number",
                        "value": "{{roomNumber}}"
                    }
                ]
            }
        }
    ]
}