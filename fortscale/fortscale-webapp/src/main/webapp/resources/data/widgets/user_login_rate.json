{
    "reportId": "user_login_rate",
    "title": "Logins count - last 7 days",
    "refreshOn": ["loginsUser"],
    "views": [
        {
            "type": "barsChart",
            "settings": {
                "options": {
                    "height": "200px",
                    "width": "100%",
                    "createAxes": false,
                    "barLabelsFont": {
                        "size": 16,
                        "color": "#999999"
                    },
                    "labelsFont": {
                        "size": "14px",
                        "color": "#999999"
                    },
                    "labels": {
                        "height": 20,
                        "margin": 13,
                        "handleEvents": true
                    },
                    "selectable": false,
                    "padding": { "top": 0, "right": 50, "left": 50, "bottom": 0 },
                    "tooltip": "{{seriesLabel}}'s logins for {{barLabel}}: {{barValue}}",
                    "values": {
                        "min": 0
                    }
                },
                "series": [
                    {
                        "field": "eventscount",
                        "label": "{{@userName}}",
                        "default": 0
                    }
                ],
                "labels": {
                    "field": "day",
                    "value": "{{day}}",
                    "styleField": "day",
                    "predefinedValues": {
                        "type": "date",
                        "first": "-7 days",
                        "last": "now"
                    },
                    "transform": {
                        "method": "date",
                        "options": {
                            "format": "MM/DD/YYYY"
                        }
                    }
                },
                "legend": {
                    "items": [
                        {
                            "value": "Number of successful logins",
                            "color": "#98A3AC"
                        }
                    ]
                }
            }
        }
    ]
}