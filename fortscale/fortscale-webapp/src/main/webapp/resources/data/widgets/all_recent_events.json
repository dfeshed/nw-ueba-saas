{
    "reportId": "recent_events",
    "title": "Recent Events",
    "linkTo": {
        "url": "#/d/user_logins",
        "tooltip": "Investigate user logins",
        "text": "View all"
    },
    "views": [
        {
            "type": "table",
            "className": "widget-table-list",
            "settings": {
                "fields": [
                    {
                        "name": "Icon",
                        "icon": {
                            "type": "{{type}}",
                            "typeMap": {
                                "user": "user",
                                "machine": "desktop"
                            }
                        },
                        "style": "score",
                        "styleParams": {
                            "value": "score"
                        }
                    },
                    {
                        "name": "Description",
                        "value": "<a href='#/d/{{type}}/{{id}}'>{{name}}</a> {{text}}<p class='note'>{{explanation}}</p>",
                        "className": "table-large-cell"
                    },
                    {
                        "name": "Time",
                        "value": "{{time}}",
                        "icon": "time",
                        "format": "date",
                        "className": "sideNote",
                        "formatOptions": { "prettyDate": true, "shortPrettyDate": true }
                    }
                ]
            }
        }
    ]
}