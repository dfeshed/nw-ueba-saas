{
    "title": "Related Machines",
    "reportId": "user_machines",
    "controls": [
        {
            "type": "link",
            "text": "View all",
            "href": "#/d/investigator?entities=usernametohostname&username={{@vpnUser}}",
            "refreshOn": ["vpnUser"]
        }
    ],
    "views": [
        {
            "type": "pieChart",
            "settings": {
                "height": "150px",
                "width": "150px",
                "showInfo": true,
                "calculatePercent": true,
                "info": {
                    "labelLink": "#/d/investigator?entities=usernametohostname&hostname={{hostname}}",
                    "properties": [
                        {
                            "label": "Last Sign-in",
                            "value": "{{lastSignIn}}",
                            "transform": {
                                "method": "date",
                                "options": {
                                    "prettyDate": true
                                }
                            }
                        },
                        {
                            "label": "IP",
                            "value": "{{ipAddress}}",
                            "link": "#/d/investigator?entities=usernametohostname&hostnameip={{hostnameip}}"
                        }
                    ]
                },
                "chartValue": "count",
                "chartLabel": "hostname"
            }
        }
    ]
}