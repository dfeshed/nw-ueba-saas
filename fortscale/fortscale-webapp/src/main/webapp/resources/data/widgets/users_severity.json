{
    "title": "{{@usersSeverity}} Severity",
    "className": "widget-normal-padding",
    "reportId": "users_severity",
    "refreshOn": [
        "usersSeverity"
    ],
    "controls": [
        {
            "type": "link",
            "text": "View all",
            "href": "#/d/investigator?entity=users&severity={{@usersSeverity}}"
        }
    ],
    "views": [
        {
            "type": "table",
            "settings": {
                "fields": [
                    {
                        "name": "Username",
                        "value": "{{userName}}",
                        "sortBy": "userName",
                        "link": "#/d/user/{{userId}}"
                    },
                    {
                        "name": "Trend",
                        "value": "{{trend}}%",
                        "sortBy": "trend"
                    },
                    {
                        "name": "Score",
                        "value": "{{score}}",
                        "sortBy": "score",
                        "sortDirection": -1,
                        "style": "score",
                        "styleParams": {
                            "value": "score"
                        }
                    }
                ]
            }
        }
    ]
}