{
	"show": {
		"conditions": [
			{
				"operator": "entityExists",
				"value": "vpn"
			}
		]
	},
    "views": [
        {
            "type": "map",
            "settings": {
                "onSelect": {
                    "action": "setParams",
                    "actionOptions": {
                        "updateUrl": true,
                        "params": {
                            "vpn.countrycode": "[]{{code}}"
                        }
                    }
                }
            }
        }
    ]
}
