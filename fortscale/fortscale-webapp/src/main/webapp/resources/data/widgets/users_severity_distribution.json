{
    "renderControls": false,
    "renderHeader": false,
    "className": "no-border no-margins",
    "style": { "margin-bottom": "none" },
    "reportId": "users_severity_distribution",
    "views": [
        {
            "type": "percentChart",
            "settings": {
                "options": {
                    "height": "145px",
                    "width": "100%",
                    "labelsFont": {
                        "size": "20px"
                    },
                    "selectable": true,
                    "showSelectionBar": true,
                    "selectFirstOnLoad": true
                },
                "series": [{
                    "field": "percentage",
                    "label": "{{percentage}}%",
                    "style": "severity",
                    "styleParams": {
                        "value": "name"
                    }
                }],
                "labels": {
                    "field": "percentage",
                    "value": "{{percentage}}",
                    "styleField": "percentage"
                },
                "selectionBar": {
                    "styleField": "percentage"
                },
                "events": [
                    {
                        "eventName": "click",
                        "action": "setParams",
                        "actionOptions": {
                            "updateUrl": false,
                            "params": {
                                "usersSeverity": "{{name}}"
                            }
                        }
                    }
                ]
            }
        }
    ]
}