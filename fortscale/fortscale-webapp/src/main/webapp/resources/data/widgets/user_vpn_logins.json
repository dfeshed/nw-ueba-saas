{
    "reportId": "user_vpn_logins",
    "title": "Suspicious VPN Logins",
    "controls": [
        {
            "type": "link",
            "text": "View all",
            "href": "#/d/investigator?entities=vpndatares&username={{@vpnUser}}",
            "refreshOn": ["vpnUser"]
        }
    ],
    "views": [
        {
            "type": "table",
            "settings": {
                "fields": [
                    {
                        "name": "Severity",
                        "icon": "stop",
                        "style": "score",
                        "styleParams": {
                            "value": "eventScore"
                        },
                        "renderHeader": false,
                        "className": "table-small-cell"
                    },
                    {
                        "name": "Source IP",
                        "value": "{{sourceIp}}",
                        "link": "#/d/investigator?entities=vpndatares&username={{@vpnUser}}&source_ip={{sourceIp}}",
                        "headerColspan": 2
                    },
                    {
                        "name": "Internal IP",
                        "value": "{{internalIP}}",
                        "link": "#/d/investigator?entities=vpndatares&username={{@vpnUser}}&local_ip={{internalIP}}"
                    },
                    {
                        "name": "Time",
                        "value": "{{eventTime}}",
                        "transform": {
                            "method": "date",
                            "options": {
                                "format": "MM/DD/YY HH:mm:ss"
                            }
                        }
                    },
                    {
                        "name": "Status",
                        "value": "{{status}}",
                        "style": "failOrSuccess",
                        "styleParams": {
                            "value": "status"
                        },
                        "link": "#/d/investigator?entities=vpndata&status={{status}}&username={{@vpnUser}}"
                    },
                    {
                        "name": "Score",
                        "value": "{{eventScore}}",
                        "transform": {
                            "method": "round"
                        }
                    }
                ]
            }
        }
    ]
}