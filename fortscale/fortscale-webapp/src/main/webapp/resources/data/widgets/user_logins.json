{
    "reportId": "user_logins",
    "title": "Suspicious Logins",
    "controls": [
        {
            "type": "link",
            "text": "View all",
            "href": "#/d/investigator?entities=wmievents4769&account_name={{@loginsUser}}",
            "refreshOn": ["loginsUser"]
        }
    ],
    "views": [
        {
            "type": "table",
            "settings": {
                "fields": [
                    {
                        "name": "Source IP",
                        "value": "{{sourceIp}}",
                        "link": "#/d/investigator?entities=wmievents4769&client_address={{sourceIp}}&account_name={{@loginsUser}}",
                        "style": "textScore",
                        "styleParams": {
                            "value": "sourceIpScore"
                        },
                        "valueTooltip": "Source IP score: {{sourceIpScore}}"
                    },
                    {
                        "name": "Destination Hostname",
                        "value": "{{destinationHostname}}",
                        "link": "#/d/investigator?entities=wmievents4769&service_name={{destinationHostname}}&account_name={{@loginsUser}}",
                        "style": "textScore",
                        "styleParams": {
                            "value": "targetIdScore"
                        },
                        "valueTooltip": "Destination hostname score: {{targetIdScore}}"
                    },
                    {
                        "name": "Error Code",
                        "value": "{{errorCode}}",
                        "link": "#/d/investigator?entities=wmievents4769&failure_code={{errorCode}}&account_name={{@loginsUser}}",
                        "style": "textScore",
                        "styleParams": {
                            "value": "errorCodeScore"
                        },
                        "valueTooltip": "Error code score: {{errorCodeScore}}"
                    },
                    {
                        "name": "Time",
                        "value": "{{eventTime}}",
                        "transform": {
                            "method": "date",
                            "options": {
                                "format": "MM/DD/YY HH:mm:ss"
                            }
                        },
                        "style": "textScore",
                        "styleParams": {
                            "value": "eventTimeScore"
                        },
                        "valueTooltip": "Login time score: {{eventTimeScore}}"
                    },
                    {
                        "name": "Severity",
                        "icon": "stop",
                        "style": "score",
                        "styleParams": {
                            "value": "eventScore"
                        },
                        "renderHeader": false,
                        "className": "table-small-cell"
                    },
                    {
                        "name": "Score",
                        "headerColspan": 2,
                        "value": "{{eventScore}}"
                    }
                ]
            }
        }
    ]
}