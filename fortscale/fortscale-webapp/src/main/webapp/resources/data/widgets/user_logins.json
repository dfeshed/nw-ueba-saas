{
    "reportId": "user_logins",
    "title": "Suspicious Logins",
    "controls": [
        {
            "type": "link",
            "text": "View all",
            "href": "#/d/investigator?entity=logins&username={{@entityId}}"
        }
    ],
    "views": [
        {
            "type": "table",
            "settings": {
                "fields": [
                    {
                        "name": "Source IP",
                        "value": "{{sourceIp}}",
                        "sortBy": "sourceIp",
                        "link": "#/d/investigator?entity=logins&username={{@entityId}}&sourceIp={{sourceIp}}"
                    },
                    {
                        "name": "Destination IP",
                        "value": "{{destinationIp}}",
                        "sortBy": "destinationIp",
                        "link": "#/d/investigator?entity=logins&username={{@entityId}}&destinationIp={{destinationIp}}"
                    },
                    {
                        "name": "Time",
                        "value": "{{eventTime}}",
                        "sortBy": "eventTime",
                        "sortDirection": -1,
                        "format": "date",
                        "formatOptions": { "format": "MM/DD/YY HH:mm:ss" }
                    },
                    {
                        "name": "Score",
                        "value": "{{eventScore}}",
                        "style": "score",
                        "styleParams": {
                            "value": "eventScore"
                        }
                    }
                ]
            }
        }
    ]
}