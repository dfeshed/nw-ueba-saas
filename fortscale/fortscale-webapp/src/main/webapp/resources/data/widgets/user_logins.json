{
    "reportId": "user_logins",
    "title": "Suspicious Logins",
    "controls": [
        {
            "type": "link",
            "text": "View all",
            "href": "#/d/investigator?entities=authenticationscores&userid={{@loginsUser}}",
            "refreshOn": ["loginsUser"]
        }
    ],
    "views": [
        {
            "type": "table",
            "settings": {
                "fields": [
                    {
                        "name": "Source IP",
                        "value": "{{sourceIp}}",
                        "sortBy": "sourceIp",
                        "link": "#/d/investigator?entities=authenticationscores&sourceip={{sourceIp}}"
                    },
                    {
                        "name": "Destination Hostname",
                        "value": "{{destinationHostname}}",
                        "sortBy": "destinationHostname",
                        "link": "#/d/investigator?entities=authenticationscores&targetid={{destinationHostname}}"
                    },
                    {
                        "name": "Time",
                        "value": "{{eventTime}}",
                        "sortBy": "eventTime",
                        "sortDirection": -1,
                        "transform": {
                            "method": "date",
                            "options": {
                                "format": "MM/DD/YY HH:mm:ss"
                            }
                        }
                    },
                    {
                        "name": "Score",
                        "value": "{{eventScore}}",
                        "style": "score",
                        "styleParams": {
                            "value": "eventScore"
                        }
                    }
                ]
            }
        }
    ]
}