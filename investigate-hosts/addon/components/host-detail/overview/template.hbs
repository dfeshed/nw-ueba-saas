{{#if hostDetails }}
  {{#rsa-page-layout as |layout|}}
    {{#layout.center}}
      {{#rsa-form-button class='open-properties' isIconOnly=true click=(action layout.open 'right') }}
        {{rsa-icon name='layout-2'}}
      {{/rsa-form-button}}
      {{host-detail/overview/summary}}
    {{/layout.center}}
    {{#layout.right as |right|}}
      {{right.header}}
      <vbox class="host-properties-box">
        {{#if domIsReady}}
          <box class='scroll-box'>
            {{host-detail/overview/property-panel
              title=(t 'investigateHosts.hosts.properties.title')
              data=propertyData
              localeNameSpace='investigateHosts.hosts.properties'}}
          </box>
        {{else}}
          <centered>
            {{rsa-loader size='medium'}}
          </centered>
        {{/if}}
      </vbox>
    {{/layout.right}}
  {{/rsa-page-layout}}
{{/if}}
