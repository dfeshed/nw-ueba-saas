{{#liquid-bind hostDetails use=(if hostDetails animation "default")}}
  {{#if hostDetails }}
    <vbox xs="9" class="host-detail-box scroll-box">
      {{host-detail/overview/summary}}
    </vbox>
    <vbox xs="3" class="host-properties-box">
      {{#if domIsReady}}
      <box class='scroll-box'>
        {{host-detail/overview/property-panel
          title=(t 'investigateHosts.hosts.properties.title')
          data=propertyData
          localeNameSpace='investigateHosts.hosts.properties'}}
      </box>
      {{else}}
        <centered>
          {{rsa-loader size='medium'}}
        </centered>
      {{/if}}
    </vbox>
  {{/if}}
{{/liquid-bind}}