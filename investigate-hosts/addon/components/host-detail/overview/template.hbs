{{#liquid-bind hostDetails use=(if hostDetails animation "default")}}
  {{#if hostDetails }}
    <vbox xs="9" class="host-detail-box scroll-box">
      {{host-detail/overview/summary}}
    </vbox>
    <vbox xs="3" class="host-properties-box">
      {{#if domIsReady}}
        <box fit>
          {{#host-detail/utils/host-title-bar tabs=hostPropertyTabs defaultAction=(action 'setHostPropertyTabView') as |tab|}}
            {{#if (eq tab.name 'ALERT')}}
              <div class="label">{{t tab.label count=alertsCount}}</div>
            {{else if (eq tab.name 'INCIDENT')}}
              <div class="label">{{t tab.label count=incidentsCount}}</div>
            {{else}}
              <div class="label">{{t tab.label}}</div>
            {{/if}}
          {{/host-detail/utils/host-title-bar}}
        </box>
      <box class='scroll-box'>
        {{#if (eq activePropertyTab 'HOST')}}
          {{host-detail/overview/property-panel
            data=propertyData
            localeNameSpace='investigateHosts.hosts.properties'}}
        {{else}}
          {{endpoint/risk-panel activeDataSourceTab=activePropertyTab data=context errorMessage=contextError}}
        {{/if}}
      </box>
      {{else}}
        <centered>
          {{rsa-loader size='medium'}}
        </centered>
      {{/if}}
    </vbox>
  {{/if}}
{{/liquid-bind}}