<box class="{{datatableWidth}}">
  {{host-detail/utils/datatable
    status=detailDisplayInputs.status
    items=detailDisplayInputs.tableItems
    type=detailDisplayInputs.type
    columnsConfig=detailDisplayInputs.columnsConfig
    selectRowAction=detailDisplayInputs.selectRowAction
    isPaginated=detailDisplayInputs.isPaginated
    totalItems=detailDisplayInputs.totalItems
    loadMoreStatus=detailDisplayInputs.loadMoreStatus
    customSort=detailDisplayInputs.customSort
    selectedIndex=selectedIndex
    getPagedItems=detailDisplayInputs.getPagedItems}}
</box>
{{#if detailDisplayInputs.propertyConfig}}
  <box xs='3'>
    {{host-detail/utils/file-property-panel
      title=detailDisplayInputs.propertyPanelTitle
      localeNameSpace=detailDisplayInputs.localeNameSpace
      config=detailDisplayInputs.propertyConfig
      data=detailDisplayInputs.propertyData}}
  </box>
{{/if}}