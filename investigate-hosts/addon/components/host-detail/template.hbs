{{host-detail/header}}
{{#if selectedServiceData.isServiceOnline}}
  <box class="host-detail-wrapper {{if isFileAnalysisView 'is-show-file-analysis'}}">

    {{host-detail/utils/file-analysis-wrapper}}
    {{#if showSnapshotEmptyMessage}}
      {{rsa-panel-message message=(t 'investigateHosts.noSnapshotMessage')}}
    {{else if isSnapshotsLoading}}
      <centered>
        {{rsa-loader size='larger'}}
      </centered>
    {{else if isProcessDetailsView}}
      {{host-detail/process/process-details}}
    {{else}}
      {{component selectedTabComponent}}
    {{/if}}

  </box>
{{else}}
  {{error-page
    errorDescription=(t 'investigateFiles.errorPage.serviceDownDescription' serviceType=selectedServiceData.name)
    title=(t 'investigateFiles.errorPage.serviceDown' serviceType=selectedServiceData.name)}}
{{/if}}