{{#rsa-form-button
  isDisabled=disableAnalyzeButton
  click=(action 'toggleServiceSelection' item)}}
  {{rsa-icon name='expand-6' style='filled' size='small'}}
  {{t 'investigateHosts.process.analyzeProcess'}}
{{/rsa-form-button}}

{{#if showServiceModal}}
  {{#endpoint/core-services-modal
    onClose=(action 'onModalClose')
    modalTitle=(t 'investigateHosts.pivotToInvestigate.title')
    serviceList=serviceList as |selectedService isDisabled|}}

    {{#rsa-form-button defaultAction='onCancel'}}
      {{t 'forms.cancel'}}
    {{/rsa-form-button}}

    {{#rsa-form-button
      isDisabled=isDisabled
      style='primary'
      click=(action 'navigateToProcessAnalysis' selectedService.id)}}
      Process Analysis
    {{/rsa-form-button}}

  {{/endpoint/core-services-modal}}
{{/if}}