<vbox class="rsa-application-layout-panel-content" xs="12" fit>
  {{#each selectedWindowsLogPolicy as |section|}}
    {{#if section.channels}}
      <div class="content-section__section-name ">{{t section.header}}</div>     
      {{#each section.channels as |channel|}}
        <hbox fit class="col-xs-12 content-section__property">
          <hbox class="property-name col-xs-6 col-md-5">{{channel.name}}</hbox>
          <hbox class="win-value col-xs-6 col-md-7">
            {{#rsa-text-with-tooltip value=channel.value tipPosition='left'}}
              {{channel.value}}
            {{/rsa-text-with-tooltip}}
          </hbox>
        </hbox>
      {{/each}}
    {{else}}      
      <div class="content-section__section-name ">{{t section.header}}</div>
      {{#each section.props as |prop|}}
        <hbox fit class="col-xs-12 content-section__property">
          <hbox class="property-name col-xs-6 col-md-5">{{t prop.name}}</hbox>          
          <hbox class="win-value col-xs-6 col-md-7">
            {{#rsa-text-with-tooltip value=prop.value tipPosition='left'}}
              {{prop.value}}
            {{/rsa-text-with-tooltip}}
          </hbox>
        </hbox>
      {{/each}}
    {{/if}}
    <hr class="divider">
  {{/each}}
</vbox>
