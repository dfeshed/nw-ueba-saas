<box class='host-table'>
  {{#rsa-data-table
    lazy=true
    items=hostList
    columnsConfig=updatedColumns
    onRowClick=(action 'toggleSelectedRow')}}
    {{host-list/host-table/host-table-header}}
    {{#if (eq hostFetchStatus 'wait')}}
      <centered>
        {{rsa-loader size='larger'}}
      </centered>
    {{else if (eq hostFetchStatus 'error')}}
      <centered>
        {{rsa-panel-message message=(t 'investigateHosts.hosts.list.errorOffline')}}
      </centered>
    {{else}}
      {{#rsa-data-table/body noResultsMessage=(t 'investigateHosts.hosts.list.noResultsMessage') as |item index column|}}
        {{host-list/host-table/body-cell
          column=column
          serviceList=serviceList
          item=item
          serverId=serverId
          onButtonClick=(action 'setSelectedHost' item.id item.machine.agentVersion)
          checkBoxAction=(action 'toggleMachineSelected' item.id item.machine.agentVersion)
          onMouseEnter=(action 'toggleIconVisibility' true item.id)
          onMouseLeave=(action 'toggleIconVisibility' false)}}
      {{/rsa-data-table/body}}
      {{rsa-data-table/load-more status=loadMoreHostStatus click=(action 'getNextMachines') class="rsa-hosts-load-more"}}
    {{/if}}
  {{/rsa-data-table}}
</box>
<box class="host-table__footer">
  {{host-table-footer total=hostTotal index=hostList.length label='hosts' selectedHosts=selectedHostsCount}}
</box>
