{{#liquid-if hasMachineId use=(if hasMachineId "toLeft" "toRight")}}
  <vbox class="host-container-detail host-detail">
    {{host-detail}}
  </vbox>
{{else}}

<vbox class="host-container-list">
  {{host-list}}
</vbox>

{{/liquid-if}}

{{#if showInitiateScanModal}}
  {{host-container/host-scan-modal/initiate selectedHostList=selectedHostList showScanningMessage=areSomeScanning}}
{{/if}}

{{#if showCancelScanModal}}
  {{host-container/host-scan-modal/cancel selectedHostList=selectedHostList}}
{{/if}}

