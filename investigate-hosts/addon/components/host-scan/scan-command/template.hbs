{{#if (eq command 'START_SCAN')}}
  {{host-scan/start-scan-button
    warningMessage=warningMessages
    isDisabled=isScanStartButtonDisabled
    agentIds=agentIds
    modalTitle=modalTitle
    buttonText=(t 'investigateHosts.hosts.button.initiateScan')
    title=actionsDisableMessage
    isStartScanIconDisplayed=isStartScanIconDisplayed
    serverId=serverIdForScanCommand}}
{{else if (eq command 'STOP_SCAN')}}
  {{host-scan/stop-scan-button
    warningMessage=warningMessages
    isDisabled=isScanStopButtonDisabled
    agentIds=agentIds
    modalTitle=title
    buttonText=(t 'investigateHosts.hosts.moreActions.cancelScan')
    serverId=serverIdForScanCommand}}
{{/if}}
