{{#rsa-form-button
  isDisabled=isDisabled
  defaultAction=(action 'toggleScanStartModal')
  isIconOnly=isIconOnly}}
  {{#if isIconOnly}}
    {{rsa-icon name='play-button-2'}}
  {{else}}
    {{buttonText}}
  {{/if}}
{{/rsa-form-button}}

{{#if _showStartScanModal}}
  {{host-scan/scan-modal
    command='START_SCAN'
    modalStyle='start-scan-modal'
    eventId='start-scan'
    modalTitle=modalTitle
    warningMessages=warningMessage
    onModalClose=(action 'onModalClose')
    primaryAction=(action 'handleInitiateScan')}}
{{/if}}