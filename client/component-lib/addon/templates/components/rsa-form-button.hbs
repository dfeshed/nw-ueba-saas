{{yield}}

{{#if withDropdown}}
  {{#unless isIconOnly}}
    <button class="expand" {{action 'toggleOptions' on='click'}}>
        {{rsa-icon size="small" name="arrow-down-12"}}
    </button>
  {{else}}
    <button class="expand">
        {{rsa-icon size="smaller" name="arrow-down-12"}}
    </button>
  {{/unless}}
{{/if}}