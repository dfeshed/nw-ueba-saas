<div class="page-header">
    <h1>{{t 'login.loginTitle'}}</h1>
</div>

<form {{action 'authenticate' on='submit'}}>
    {{#if errorMessage}}
        <div>
            <strong>{{t 'login.errorPrompt'}}:</strong> <span class="login-errormessage">{{errorMessage}}</span>
        </div>
    {{/if}}
    <div class="form-group">
        <label for="username">{{t 'login.loginTitle'}}</label>
        {{input value=username placeholder=(t 'login.loginPrompt') class='login-username form-control'}}
    </div>
    <div class="form-group">
        <label for="password">{{t 'login.passwordTitle'}}</label>
        {{input value=password placeholder=(t 'login.passwordPrompt') class='login-password form-control' type='password'}}
    </div>
    <button type="submit" class="login-submit btn btn-default">{{t 'login.loginTitle'}}</button>
</form>
