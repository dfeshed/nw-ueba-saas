<article class="login-screen u-fill-fixed">
    {{#rsa-curtain classExtra="login-screen__curtain" delay=250 opened=isLoginVisible}}
        <form class="login-screen__form rsa-curtain__child" autocomplete="off" {{action "authenticate" on="submit"}}>
            <div class="login-screen__header">
                {{rsa-logo class="login-screen__rsa-logo" delays="500,1000,1500" title=(t "sa.title")}}
            </div>
            <div class="login-screen__field bg-pttn-grey-checkers" data-status={{status}}>
                {{input class="login-screen__uid" type="text" placeholder=(t "login.loginPrompt") value=username autofocus="true"}}
            </div>
            <div class="login-screen__field bg-pttn-grey-checkers" data-status={{status}}>
                {{input class="login-screen__pwd" type="password" placeholder=(t "login.passwordPrompt") value=password}}
            </div>
            {{rsa-arrow-button class="login-screen__ok-btn bg-pttn-grey-checkers" type="submit" status=status disabled=isLoginDisabled}}
        </form>
    {{/rsa-curtain}}
    <footer class="login-screen__footer">
        <section class="login-screen__version">
            {{t "sa.title"}} {{t "sa.version"}}
        </section>
        <section class="login-screen__copyright">
            {{t "sa.copyright"}}
        </section>
    </footer>
</article>
