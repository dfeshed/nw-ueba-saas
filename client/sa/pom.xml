<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rsa.asoc.netwitness.ui</groupId>
        <artifactId>client-parent</artifactId>
        <version>11.0.0.0-SNAPSHOT</version>
    </parent>

    <name>Netwitness UI :: Client :: Netwitness</name>
    <groupId>com.rsa.asoc.netwitness.ui</groupId>
    <artifactId>ember-netwitness</artifactId>

    <profiles>
        <profile>
            <id>rpm</id>
            <properties>
                <buildStability>1</buildStability>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <version>2.1.5</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>rpm</goal>
                                </goals>
                                <phase>package</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <name>sa-ui-client</name>
                            <group>Applications/Internet</group>
                            <release>${rpmDate}.${buildStability}.${vcsRevision}</release>
                            <requires>
                                <require>nginx</require>
                            </requires>
                            <postinstallScriptlet>
                                <scriptFile>rpm/scripts/postInstall.sh</scriptFile>
                            </postinstallScriptlet>
                            <mappings>
                                <mapping>
                                    <directory>/etc/nginx</directory>
                                    <configuration>true</configuration>
                                    <sources>
                                        <source>
                                            <location>rpm/nginx</location>
                                        </source>
                                    </sources>
                                </mapping>
                                <mapping>
                                    <directory>/opt/rsa/sa-ui/html</directory>
                                    <sources>
                                        <source>
                                            <location>target/classes/production</location>
                                        </source>
                                    </sources>
                                </mapping>
                            </mappings>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.rsa.asoc.netwitness.ui</groupId>
            <artifactId>ember-component-library</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>ember-build-fixtured</id>
                        <goals>
                            <goal>ember</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <arguments>build -e fixtured -o target/classes/fixtured</arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-fixtured</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>fixtured</classifier>
                            <includes>
                                <include>fixtured/**</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
