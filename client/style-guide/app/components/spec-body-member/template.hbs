<h4 class="spec-body-member__title">{{model.title}}</h4>

{{#if model.subtitle}}
  <p class="spec-body-member__subtitle">{{model.subtitle}}</p>
{{/if}}

{{#if model.description}}
  <section class="spec-body-member__description">{{{model.description}}}</section>
{{/if}}

{{hbs-example class="spec-body-member__example"
  title="Example"
  code=model.code.hbs
  noSnippet=(is-equal spec.dataType "typography")
}}
