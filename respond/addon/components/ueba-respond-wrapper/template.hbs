<hbox nowrap class="ueba-container__main" style={{resolvedWidth}}>
  <vbox class="ueba-container__main__inner" nowrap fill>
    <header class="ueba-container__header">
      <hbox class="ueba-container__header__inner">
        <vbox xs="10">
          <div class="ueba-respond-header">{{t 'respond.ueba.label'}}</div>
        </vbox>
        <vbox xs="2" class="ueba-container__header-icons">
          <div>
            <button test-id="eventUebaContextualHelp" class="rsa-form-button event-ueba-contextual-help" onclick={{action 'goToHelp' 'respond' 'incUeba'}}>
              {{rsa-icon style='lined'  name='help-circle'}}
            </button>
            <button test-id="uebaRespondCloseBtn" onclick={{action "close"}} class="event-ueba-close" title={{t 'respond.close'}}>
              {{rsa-icon style='filled' name='close'}}
            </button>
          </div>
        </vbox>
      </hbox>
    </header>
    <div class='ueba-container'>
      {{#if entityModel}}
        {{mount "entity-details" model=entityModel}}
      {{/if}}
    </div>
  </vbox>
</hbox>
