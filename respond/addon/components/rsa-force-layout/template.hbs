<svg width="100%" height="100%" {{action (action singleSelectAction)}}>
  <defs>
    <marker id="force-layout__arrow" viewBox="0 -3 6 6" refX="6" refY="0" markerWidth="6" markerHeight="6" orient="auto">
      <path d="M0,-3L6,0L0,3L0,-3" class="link-arrow" />
    </marker>
    <marker id="force-layout__arrow--disabled" viewBox="0 -3 6 6" refX="6" refY="0" markerWidth="6" markerHeight="6" orient="auto">
      <path d="M0,-3L6,0L0,3L0,-3" class="link-arrow" />
    </marker>
    <marker id="force-layout__arrow--selected" viewBox="0 -3 6 6" refX="6" refY="0" markerWidth="6" markerHeight="6" orient="auto">
      <path d="M0,-3L6,0L0,3L0,-3" class="link-arrow" />
    </marker>
  </defs>
  <g class="centering-element">
    <g class="links-layer">
      {{#each data.links as |link|}}
        {{rsa-force-layout/link
          datum=link
          clickAction=(action singleSelectAction "link")
          shiftClickAction=(action toggleSelectAction "link")
          ctrlClickAction=(action toggleSelectAction "link")
        }}
      {{/each}}
    </g>
    <g class="nodes-layer">
      {{#each data.nodes as |node|}}
        {{rsa-force-layout/node
          datum=node
          clickAction=(action singleSelectAction "node")
          shiftClickAction=(action toggleSelectAction "node")
          ctrlClickAction=(action toggleSelectAction "node")
        }}
      {{/each}}
    </g>
  </g>
</svg>
{{yield}}
