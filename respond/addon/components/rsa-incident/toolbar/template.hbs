{{rsa-incident/update-action-button
  fieldName="priority"
  options=priorityTypes
  optionLabelProperty='labelKey'
  translateOptionLabel=true
  optionValueProperty="name"
  selectedValue=priority
  incidentId=incidentId
  isDisabled=(or (eq status 'CLOSED') (eq status 'CLOSED_FALSE_POSITIVE'))
  iconName="gauge"
  isIconOnly=false
  searchEnabled=false
  label=(if priority (t (concat 'respond.priority.' priority)) (t 'respond.incident.priority'))
  style="primary"
}}
{{rsa-incident/update-action-button
  fieldName='status'
  options=statusTypes
  optionLabelProperty='labelKey'
  translateOptionLabel=true
  optionValueProperty="name"
  selectedValue=status
  incidentId=incidentId
  iconName="flag-1"
  isIconOnly=false
  searchEnabled=false
  label=(if status (t (concat 'respond.status.' status)) (t 'respond.incident.status'))
  style="primary"
}}
{{rsa-incident/update-action-button
  fieldName='assignee'
  options=users
  optionLabelProperty="name"
  selectedValue=assignee.id
  incidentId=incidentId
  isDisabled=(or (eq status 'CLOSED') (eq status 'CLOSED_FALSE_POSITIVE'))
  isIconOnly=false
  iconName="female"
  label=(if assignee assignee.name (t 'respond.assignee.none'))
  style="primary"
}}

{{#rsa-form-button
  style="primary"
  class="journal js-test-journal"
  defaultAction=(action "clickJournalAction")
}}
  {{t 'respond.journal.title'}}
{{/rsa-form-button}}
