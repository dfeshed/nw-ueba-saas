{{#rsa-form-button
  class="viz js-test-hide-viz-false"
  title=(t 'respond.incident.view.graph')
  isActive=(not hideViz)
  isIconOnly=true
  defaultAction=(action "setHideVizAction" false)
}}
  {{rsa-icon name="flow-chart-3" size="small"}}
  <span class="nodal-graph-icon">Nodal Graph</span>
{{/rsa-form-button}}

{{#rsa-form-button
  class="datasheet js-test-hide-viz-true"
  title=(t 'respond.incident.view.eventslist')
  isActive=hideViz
  isIconOnly=true
  defaultAction=(action "setHideVizAction" true)
}}
  {{rsa-icon name="list-bullets-1" size="small"}}
  <span class="events-list-icon">Events List</span>
{{/rsa-form-button}}

{{#unless isShowingTasksAndJournal}}
  {{#rsa-form-button
    title=(t 'respond.incident.journalTasksRelated')
    class="journal-and-tasks js-test-journal"
    isActive=isShowingTasksAndJournal
    defaultAction=(action "toggleTasksAndJournalPanel")
  }}
    {{rsa-icon name='checklist' size='small'}}
    <span class="journal-tasks-icon">Journal & Tasks</span>
  {{/rsa-form-button}}
{{/unless}}
