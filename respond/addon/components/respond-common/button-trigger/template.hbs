<button class="rsa-form-button" disabled={{isDisabled}}>
  {{#if (and iconName (eq iconPosition 'before'))}}
    {{rsa-icon name=iconName title=label}}
  {{/if}}

  {{#unless isIconOnly}}
    {{#if label}}
      {{label}}
    {{else}}
      {{yield}}
    {{/if}}
  {{/unless}}

  {{#if (and iconName (eq iconPosition 'after'))}}
    {{rsa-icon name=iconName title=label}}
  {{/if}}
</button>