<header class="header">

  <div class="connector">
    <div class="line"></div>
  </div>

  <hbox class="content">
    <box fill class="p source">
      {{rsa-alerts-table/ueba-link alert=group.indicator.alert storyPointId=group.indicator.id}}
    </box>
    <box fit nowrap align="end" class="p time">
      {{rsa-content-datetime
        timestamp=group.indicator.timestamp
        displayAsTimeAgo=false
        displayDate=true
        displayTime=true
        displayMilliseconds=false
      }}
    </box>
  </hbox>

</header>
<section class="main">

  <div class="connector">
    <div class="severity">{{group.indicator.alert.severity}}</div>
    <div class="line"></div>
  </div>

  <div class="content">
    <h3 title={{group.indicator.alert.name}}>{{group.indicator.alert.name}}</h3>
    <nav>
      {{#if group.events}}
        {{#if group.enrichments.length}}
          <span
            test-id="alertsTableToggleEnrichments"
            class="rsa-alerts-table-alert-header__enrichments tab {{if isEnrichmentsTabActive "active"}}"
            {{action "toggleEnrichments" bubbles=false}}>
            {{group.enrichments.length}} enrichments
            {{rsa-icon name="arrow-down-8" size="smaller"}}
          </span>
        {{/if}}
        <span
          test-id="alertsTableToggleEvents"
          class="rsa-alerts-table-alert-header__events tab {{if isEventsTabActive "active"}}"
          {{action "toggleEvents" bubbles=false}}>
          {{#if group.supportsRecon}}
            <span title={{group.mixedModeWarning}} test-id="alertsTableReconVisualCue" class="event-analysis-supported tab {{if group.mixedModeWarning "off" "on"}}">EA</span>
          {{/if}}
          {{group.events.length}} {{t "respond.storyline.events"}}
          {{rsa-icon name="arrow-down-8" size="smaller"}}
        </span>
      {{else}}
        {{t "respond.incident.loadingEvents"}}
      {{/if}}
    </nav>
  </div>
</section>
