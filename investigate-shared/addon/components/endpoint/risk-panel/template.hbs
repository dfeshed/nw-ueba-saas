{{endpoint/risk-panel/header activeDataSourceTab=activeDataSourceTab data=data}}
<box class="risk-properties-panel__content">
  {{#if errorMessage}}
    {{rsa-panel-message message=(t errorMessage)}}
  {{else}}
    <section class="filter-option">
      <h2>{{ t 'investigateHosts.context.score'}}</h2>
      {{range-slider
        start=filterRange
        step=1
        on-change=(action 'updateFilter')}}
    </section>
    <box>
      {{#unless filteredData.completed}}
        <centered>
          {{rsa-loader size='medium'}}
        </centered>
      {{/unless}}
      {{#if hasfilteredData}}
        <div class="filter-message">
          {{t 'investigateHosts.context.filterMessage' filterCount=filteredData.data.length totalCount=data.resultList.length}}
        </div>
        {{#each filteredData.data as |entry|}}
          {{#endpoint/risk-panel/risk-accordion isCollapsed=true class='risk-properties-panel__content__title' entry=entry}}
            {{endpoint/risk-panel/entry entry=entry type=activeDataSourceTab}}
          {{/endpoint/risk-panel/risk-accordion}}
        {{/each}}
      {{else}}
        {{rsa-panel-message message=(t 'investigateHosts.common.emptyMessage')}}
      {{/if}}
    </box>
  {{/if}}
</box>
{{endpoint/risk-panel/footer data=data activeDataSourceTab=activeDataSourceTab}}

