<vbox class='risk-properties-panel__entry'>
  {{#each-in entry as |key value|}}
    {{#unless (eq key 'name')}}
      <hbox class='risk-properties-panel__entry__field'>
        <span class='entry-label'>{{t (get-label 'investigateHosts.context' key)}}</span>
        {{#if (or (eq key 'timestamp')(eq key 'created'))}}
          <span class="entry-value">{{parse-timestamp value timezone dateFormat timeFormat i18n.locale}}</span>
        {{else if (or (eq key 'incident')(eq key '_id'))}}
          <span>{{endpoint/risk-panel/respond-link entryId=value}}</span>
        {{else}}
          <span>{{value}}</span>
        {{/if}}
      </hbox>
    {{/unless}}
  {{/each-in}}
</vbox>