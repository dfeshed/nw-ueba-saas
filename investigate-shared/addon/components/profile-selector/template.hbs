{{#list-manager
  stateLocation=stateLocation
  listName=listName
  modelName=modelName
  shouldSelectedItemPersist=false
  list=profiles
  itemSelection=(action 'setProfile')
  helpId=helpId
  as |manager|
}}

  {{manager.filter}}

  {{#manager.itemList as |itemList|}}
    {{#itemList.item as |item|}}
      {{profile-selector/profile-item profile=item}}
    {{/itemList.item}}
  {{/manager.itemList}}

  {{#manager.details as |item|}}
    {{profile-selector/profile-details profile=item}}
  {{/manager.details}}

{{/list-manager}}
