<span class="rsa-form-label">
  {{#if tooltip}}
    {{#rsa-text-with-tooltip value=tooltip
      style="standard"
      alwaysShow=true}}
      {{label}}
    {{/rsa-text-with-tooltip}}
  {{else}}
    {{label}}
  {{/if}}
</span>
{{textarea
  value=value
  placeholder=placeholder
  maxlength=maxlength
  disabled=resolvedDisabled}}
