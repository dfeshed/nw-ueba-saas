<span class="rsa-form-label">
  {{label}}
</span>

{{input
  type=type
  value=value
  maxlength=maxLength
  placeholder=placeholder
  disabled=resolvedDisabled
  spellcheck=spellcheck
  autocomplete=autocomplete
  autofocus=autofocus}}

{{#if (and isError errorMessage)}}
  <div class="input-error">
    {{errorMessage}}
  </div>
{{/if}}
