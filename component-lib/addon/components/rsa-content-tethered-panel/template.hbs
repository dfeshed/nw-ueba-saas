{{#if isDisplayed}}
  <span>
    {{#ember-tether target=target attachment=attachment offset=offset class=tetherClass}}
      <div class="panel-content {{panelClass}} {{_position}} {{style}} {{elementId}} {{if isPopover "is-popover"}}" style={{panelContentStyle}}>
        {{#if displayCloseButton}}
          <span class="close-icon" {{action "hidepanel"}}>
            {{rsa-icon name="close" size="small"}}
          </span>
        {{/if}}

        {{yield (action "hidepanel") model}}

        <div class="triangle">
          <div class="inner-triangle"></div>
        </div>

        <svg>
          <line class="left" x1="0" y1="0" x2="7" y2="10"></line>
          <line class="right" x1="7" y1="10" x2="14" y2="0"></line>
          <line class="bottom" x1="14" y1="0" x2="0" y2="0"></line>
          <polygon points="0,0 7,10 14,0"></polygon>
        </svg>

      </div>
    {{/ember-tether}}
  </span>
{{/if}}
