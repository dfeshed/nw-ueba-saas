{{#if hasBlock}}
  {{yield status clickAction}}
{{else}}
  {{#if (is-equal status 'streaming')}}
    {{rsa-loader size="small" label=(t 'investigate.loading')}}
  {{else if (is-equal status 'stopped')}}
    {{#if (is-equal nextPayloadSize undefined)}}
      {{#rsa-form-button defaultAction=clickAction}}{{t 'investigate.loadMore'}}{{/rsa-form-button}}
    {{else if nextPayloadSize }}
      {{#rsa-form-button defaultAction=clickAction}}{{t 'investigate.showNextXEvents' count=nextPayloadSize}}{{/rsa-form-button}}
    {{/if}}
  {{/if}}
{{/if}}
