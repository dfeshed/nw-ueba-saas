<h2 class='filter-text'>{{options.label}}</h2>
<hbox class='text-filter-content'>
  {{#power-select
    tagName='div'
    class='operators'
    options=options.operators
    selected=filterValue.selectedOperator
    searchEnabled=false
    onchange=(action 'changeOperator') as |option|}}
    {{option.label}}
  {{/power-select}}
  {{rsa-form-input focusOut=(action 'onInputFocusOut') value=_tempValue.value class='file-name-input' placeholder='Enter Value'}}
</hbox>