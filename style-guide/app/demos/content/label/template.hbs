{{#rsa-grid}}
  {{#rsa-grid-row collapseHeight=true}}
    {{#rsa-grid-column span=12}}
      {{spec-masthead model=model}}
    {{/rsa-grid-column}}
  {{/rsa-grid-row}}

  {{#rsa-grid-row}}
    {{#rsa-grid-column span=12 isScrollable=true}}
      {{#spec-category title="Styles"}}
        {{#spec-member title="Default"}}
          {{rsa-content-label label='label'}}

          <code>
            &#123;{rsa-content-label label='label'}}
          </code>
        {{/spec-member}}

        {{#spec-member
          title="With Remove Option"
          subtitle="Adding a click handler and action adds the close icon for removing. What it means to remove a Label would be defined by the action called in the consumer."}}
          {{rsa-content-label label='label' click=(action 'removeLabel')}}

          <code>
            &#123;{rsa-content-label label='label' click=(action 'removeLabel')}}
          </code>
        {{/spec-member}}

        {{#spec-member title="Disabled"}}
