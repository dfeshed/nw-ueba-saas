<hbox fit>
  {{spec-masthead model=model}}
</hbox>

<vbox class="scroll-box">
  {{#spec-category title="Horizontal Layout"}}
    {{#spec-member title="With Single IP"}}
      {{rsa-content-ip-connections flow="horizontal" toIPs=model.singleIP fromIPs=model.singleIP}}
      {{!-- BEGIN-SNIPPET ip1
        {{rsa-content-ip-connections flow="horizontal" toIPs=model.singleIP fromIPs=model.singleIP}}
      END-SNIPPET --}}
      {{code-snippet name="ip1.hbs"}}
    {{/spec-member}}

    {{#spec-member title="With Multiple IPs"}}
      {{rsa-content-ip-connections flow="horizontal" toIPs=model.multipleIPs fromIPs=model.multipleIPs}}
      {{!-- BEGIN-SNIPPET ip2
        {{rsa-content-ip-connections flow="horizontal" toIPs=model.multipleIPs fromIPs=model.multipleIPs}}
      END-SNIPPET --}}
      {{code-snippet name="ip2.hbs"}}
    {{/spec-member}}
  {{/spec-category}}

  {{#spec-category title="Vertical Layout"}}
    {{#spec-member title="With Single IP"}}
      {{rsa-content-ip-connections flow="vertical" toIPs=model.singleIP fromIPs=model.singleIP}}
      {{!-- BEGIN-SNIPPET ip3
        {{rsa-content-ip-connections flow="vertical" toIPs=model.singleIP fromIPs=model.singleIP}}
      END-SNIPPET --}}
      {{code-snippet name="ip3.hbs"}}
    {{/spec-member}}

    {{#spec-member title="With Multiple IPs"}}
      {{rsa-content-ip-connections flow="vertical" toIPs=model.multipleIPs fromIPs=model.multipleIPs}}
      {{!-- BEGIN-SNIPPET ip4
        {{rsa-content-ip-connections flow="vertical" toIPs=model.multipleIPs fromIPs=model.multipleIPs}}
      END-SNIPPET --}}
      {{code-snippet name="ip4.hbs"}}
    {{/spec-member}}
  {{/spec-category}}

  {{#spec-category title="One Sided"}}
    {{#spec-member title="With Single IP"}}
      {{rsa-content-ip-connections toIPs=model.singleIP}}
      {{!-- BEGIN-SNIPPET ip5
        {{rsa-content-ip-connections toIPs=model.singleIP}}
      END-SNIPPET --}}
      {{code-snippet name="ip5.hbs"}}
    {{/spec-member}}

    {{#spec-member title="With Multiple IPs"}}
      {{rsa-content-ip-connections toIPs=model.multipleIPs}}
      {{!-- BEGIN-SNIPPET ip6
        {{rsa-content-ip-connections toIPs=model.multipleIPs}}
      END-SNIPPET --}}
      {{code-snippet name="ip6.hbs"}}
    {{/spec-member}}
  {{/spec-category}}
</vbox>
