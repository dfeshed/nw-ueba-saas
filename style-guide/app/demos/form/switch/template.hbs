<hbox fit>
  {{spec-masthead model=model}}
</hbox>

<hbox>
  <fill block class="scroll-box">
  {{#spec-category title="States"}}
    {{#spec-member title="Default"}}
      {{x-toggle
        value=toggledA
        onToggle=(action (mut toggledA))
      }}
      {{!-- BEGIN-SNIPPET switch1
      {{x-toggle
        value=toggledA
        onToggle=(action (mut toggledA))
      }}
      END-SNIPPET --}}
      {{code-snippet name="switch1.hbs"}}
    {{/spec-member}}

    {{#spec-member title="Disabled"}}
      {{x-toggle
        disabled=true
        value=toggledC
        onToggle=(action (mut toggledC))
      }}
      {{!-- BEGIN-SNIPPET switch3
      {{x-toggle
        disabled=true
        value=toggledC
        onToggle=(action (mut toggledC))
      }}
      END-SNIPPET --}}
      {{code-snippet name="switch3.hbs"}}
    {{/spec-member}}
  {{/spec-category}}

  {{#spec-category title="Presentations"}}
    {{#spec-member title="With One Clickable Label"}}
      {{#x-toggle
        showLabels=true
        onLabel='Switch Value label'
        value=(readonly toggledB)
        onToggle=(action (mut toggledB)) as |toggle|}}
        {{toggle.switch}}
        {{toggle.onLabel value=(readonly (not toggledB))}}
      {{/x-toggle}}
      {{!-- BEGIN-SNIPPET switch2
      {{#x-toggle
        showLabels=true
        onLabel='Switch Value label'
        value=(readonly toggledB)
        onToggle=(action (mut toggledB)) as |toggle|}}
        {{toggle.switch}}
        {{toggle.onLabel value=(readonly (not toggledB))}}
      {{/x-toggle}}
      END-SNIPPET --}}
      {{code-snippet name="switch2.hbs"}}
    {{/spec-member}}
  {{/spec-category}}
</fill>
</hbox>
