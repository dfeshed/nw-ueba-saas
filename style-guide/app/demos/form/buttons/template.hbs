<hbox fit>
  {{spec-masthead model=model}}
</hbox>

<hbox>
  <div class="scroll-box">
    {{#spec-category title="Styles"}}
      {{#spec-member title="Default"}}
        {{#rsa-form-button}}{{rsa-icon name='account-circle-1'}} Standard Button{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Full Width"}}
        {{#rsa-form-button isFullWidth=true}}{{rsa-icon name='account-circle-1'}} Full Width Button{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Primary"}}
        {{#rsa-form-button isFullWidth=true style='primary'}}Primary{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Danger"}}
        {{#rsa-form-button style='danger'}}Danger{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Disabled"}}
        {{#rsa-form-button isDisabled=true}}Disabled{{/rsa-form-button}}
      {{/spec-member}}
    {{/spec-category}}

    {{#spec-category title="Dropdowns"}}
      {{#spec-member title="Default"}}
        {{#rsa-form-button dropdown='standard'}}Standard Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Full Width"}}
        {{#rsa-form-button isFullWidth=true dropdown='standard'}}{{rsa-icon name='account-circle-1'}} Full Width Button<ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Primary"}}
        {{#rsa-form-button style='primary' dropdown='standard'}}Primary Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Danger"}}
        {{#rsa-form-button style='danger' dropdown='standard'}}Danger Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Disabled"}}
        {{#rsa-form-button isDisabled=true dropdown='standard'}}Disabled Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Align Right"}}
        {{#rsa-form-button positionOptions='right' dropdown='standard'}}Position Options Right Dropdown <ul><li>right:0. Grows to the left as needed</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}
    {{/spec-category}}

    {{#spec-category title="Split Dropdowns"}}
      {{#spec-member title="Default"}}
        {{#rsa-form-button dropdown='split'}}Standard Split Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Full Width"}}
        {{#rsa-form-button isFullWidth=true dropdown='split'}}{{rsa-icon name='account-circle-1'}} Full Width Button<ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Primary"}}
        {{#rsa-form-button style='primary' dropdown='split'}}Primary Split Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Danger"}}
        {{#rsa-form-button style='danger' dropdown='split'}}Danger Split Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Disabled"}}
        {{#rsa-form-button dropdown='split' isDisabled=true}}Disabled Split Dropdown <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}
    {{/spec-category}}

    {{#spec-category title="Icon Only"}}
      {{#spec-member title="Default"}}
        {{#rsa-form-button isIconOnly=true}}{{rsa-icon name='account-circle-1'}}{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Danger"}}
        {{#rsa-form-button style='danger' isIconOnly=true}}{{rsa-icon name='account-circle-1'}}{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Disabled"}}
        {{#rsa-form-button isIconOnly=true isDisabled=true}}{{rsa-icon name='account-circle-1'}}{{/rsa-form-button}}
      {{/spec-member}}
    {{/spec-category}}

    {{#spec-category title="Icon Only with Dropdown"}}
      {{#spec-member title="Default"}}
        {{#rsa-form-button dropdown='standard' isIconOnly=true}}{{rsa-icon name='account-circle-1'}} <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Danger"}}
        {{#rsa-form-button dropdown='standard' isIconOnly=true style='danger'}}{{rsa-icon name='account-circle-1'}} <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}

      {{#spec-member title="Disabled"}}
        {{#rsa-form-button dropdown='standard' isIconOnly=true isDisabled=true}}{{rsa-icon name='account-circle-1'}} <ul><li>foo</li><li>bar</li></ul>{{/rsa-form-button}}
      {{/spec-member}}
    {{/spec-category}}
  </div>
</hbox>
