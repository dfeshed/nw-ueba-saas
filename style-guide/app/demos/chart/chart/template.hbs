<hbox fit>
  {{spec-masthead model=model}}
</hbox>

<hbox>
  <div class="scroll-box">
    {{#spec-category}}
      {{#spec-member title="base chart"}}
        {{#rsa-chart data=model.singleSeries xProp='value' yProp='count' as |data xScale yScale graphWidth graphHeight|}}
        {{/rsa-chart}}
        <code>
          <div>
            &#123;{#rsa-chart data=model.singleSeries xProp='value' yProp='count' as |data xScale yScale graphWidth graphHeight|}}
          </div>
          <div>
            &#123;{/rsa-chart}}
          </div>
        </code>
      {{/spec-member}}

      {{#spec-member title="chart with series and axis"}}
        {{#rsa-chart data=model.singleSeries xProp='value' yProp='count' width='100%' as |data xScale yScale graphWidth graphHeight|}}
          {{rsa-line-series data=data xScale=xScale yScale=yScale xProp='value' yProp='count'}}
          {{rsa-x-axis height=graphHeight scale=xScale rotation=-25}}
          {{rsa-y-axis scale=yScale}}
        {{/rsa-chart}}
        <code>
          <div>
            &#123;{#rsa-chart data=model.singleSeries xProp='value' yProp='count' width='100%' as |data xScale yScale graphWidth graphHeight|}}
            <div>
              &#123;{rsa-line-series data=data xScale=xScale yScale=yScale xProp='value' yProp='count'}}
            </div>
            <div>
              &#123;{rsa-x-axis height=graphHeight scale=xScale rotation=-25}}
            </div>
            <div>
              &#123;{rsa-y-axis scale=yScale}}
            </div>
            &#123;{/rsa-chart}}
          </div>
        </code>
      {{/spec-member}}
    {{/spec-category}}
  </div>
</hbox>
