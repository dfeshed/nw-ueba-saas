<h2>{{model.title}}</h2>

{{#if model.subtitle}}
  <p class="subtitle">{{model.subtitle}}</p>
{{/if}}

{{#if model.description}}
  <div class="description">
    <p>{{description}}</p>
    {{yield}}
  </div>
{{/if}}

<h3>Reference Links:</h3>
<ul>
  {{#if model.testFilterURL}}
    <li><a href="{{model.testFilterURL}}" target="_blank">Tests</a></li>
  {{/if}}

  {{#if model.jsRepo}}
    <li><a href="{{model.jsRepo}}" target="_blank">Javascript</a></li>
  {{/if}}

  {{#if model.styleRepo}}
    <li><a href="{{model.styleRepo}}" target="_blank">Styles</a></li>
  {{/if}}

  {{#if model.templateRepo}}
    <li><a href="{{model.templateRepo}}" target="_blank">Template</a></li>
  {{/if}}
</ul>
