<vbox class='rsa-form-radio-group'>
  <h4 class='rsa-form-radio-group-label'>{{t scanScheduleConfig.label}} <span {{action 'removeFromSelectedSettings' 'schedOrManScan'}}>{{rsa-icon name="remove-circle-1" style="lined"}}</span></h4>
  <vbox class="radio-buttons">
    {{#each scanScheduleConfig.items as |item|}}
      <label class="rsa-form-radio-label {{if (eq item.name scheduleConfig.scanType) 'checked'}}">
        {{radio-button
          radioClass='scan-type'
          value=item.name
          changed=(action 'updatePolicyProperty' 'scanType' item.name)
          groupValue=(readonly scheduleConfig.scanType)}}
        {{t item.label}}
      </label>
    {{/each}}
  </vbox>
</vbox>