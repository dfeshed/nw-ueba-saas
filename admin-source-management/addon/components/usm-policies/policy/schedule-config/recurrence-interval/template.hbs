<vbox class='rsa-form-radio-group'>
  <h4 class='rsa-form-radio-group-label'>
    {{t radioButtonConfig.label}}
    <span {{action 'removeFromSelectedSettings' 'recurrenceInterval'}}>
      {{rsa-icon name="remove-circle-1" style="lined"}}
    </span>
  </h4>
  <vbox class="radio-buttons">
    {{#each radioButtonConfig.items as |item|}}
      <label class="rsa-form-radio-label {{if (eq item.name intervalType) 'checked'}}">
        {{radio-button
          radioClass='recurrence-type'
          value=item.name
          changed=(action 'updatePolicyProperty' 'recurrenceUnit' item.name)
          groupValue=(readonly intervalType)}}
        {{t item.label}}
      </label>
    {{/each}}
  </vbox>
</vbox>
<hbox class="recurrence-run-interval">
  <span class='text'>{{t 'adminUsm.policy.scheduleConfiguration.recurrenceInterval.every'}}</span>
  <div class="recurrence-run-interval__list">
    <label class="rsa-form-label power-select">
      {{#power-select
        triggerClass="inline"
        options=runIntervalConfig.options
        selected=interval
        onchange=(action 'updatePolicyProperty' 'recurrenceInterval') as |selectedDays|}}
        {{selectedDays}}
      {{/power-select}}
    </label>
  </div>
  <span class="text">
    {{t runIntervalConfig.runLabel}}
    {{#if isWeeklyInterval}}
      {{t 'adminUsm.policy.scheduleConfiguration.recurrenceInterval.on'}}
    {{/if}}
  </span>
</hbox>
{{#if isWeeklyInterval}}
  <hbox class="recurrence-run-interval__week-options">
    {{#each weekOptions as |option|}}
      {{#rsa-form-button class='week-button' click=(action 'selectWeek' option.week) isPrimary=option.isActive }}
        {{t option.label}}
      {{/rsa-form-button}}
    {{/each}}
  </hbox>
{{/if}}