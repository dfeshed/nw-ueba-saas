<h4 class='title'>{{t 'adminUsm.policy.scheduleConfiguration.startTime'}}
  <span class="remove-setting"{{action 'removeFromSelectedSettings' 'scanStartTime'}}>
    {{rsa-icon name="remove-circle-1" style="lined"}}
  </span>
</h4>
<hbox class="schedule-time">
  <label class="rsa-form-input">
    {{rsa-icon name="calendar-timeout" style='lined' class='datetime-picker-icon'}}
    {{ember-flatpickr
      enableTime=true
      noCalendar=true
      enableSeconds=false
      time_24hr=true
      dateFormat='H:i'
      onChange=(action 'onTimeChange')
      minuteIncrement=1
      locale=locale
      defaultHour=12
      defaultMinute=0
      date=(readonly startTime)
    }}
  </label>
</hbox>
