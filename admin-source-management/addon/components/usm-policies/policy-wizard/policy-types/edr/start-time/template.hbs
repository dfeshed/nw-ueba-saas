<h4 class='title'>
  {{#rsa-text-with-tooltip value=tooltip
  style="standard"
  alwaysShow=true}}
    {{t 'adminUsm.policyWizard.edrPolicy.startTime'}}
  {{/rsa-text-with-tooltip}}
  <span class="remove-setting {{if isDefaultPolicy 'is-greyed-out' 'not-greyed-out'}}"
  {{action 'removeFromSelectedSettings' 'scanStartTime'}}>
    {{rsa-icon name="remove-circle-1" style="lined"}}
  </span>
</h4>
<hbox class="schedule-time">
  <label class="rsa-form-input">
    {{rsa-icon name="calendar-timeout" style='lined' class='datetime-picker-icon'}}
    {{ember-flatpickr
      enableTime=true
      noCalendar=true
      enableSeconds=false
      time_24hr=true
      dateFormat='H:i'
      onChange=(action 'onTimeChange')
      minuteIncrement=1
      locale=locale
      defaultHour=12
      defaultMinute=0
      date=(readonly startTime)
    }}
  </label>
</hbox>
