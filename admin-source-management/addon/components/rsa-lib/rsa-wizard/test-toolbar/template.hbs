{{#if step.prevStepId}}
  {{#rsa-form-button
    class='prev-button'
    defaultAction=(action 'transitionToPrevStep')
  }}
    Previous
  {{/rsa-form-button}}
{{/if}}

{{#if step.nextStepId}}
  {{#rsa-form-button
    class='next-button'
    style='primary'
    defaultAction=(action 'transitionToNextStep')
  }}
    Next
  {{/rsa-form-button}}
{{/if}}

{{#rsa-form-button
  class='cancel-button'
  defaultAction=(action 'cancel')
}}
  Cancel
{{/rsa-form-button}}
