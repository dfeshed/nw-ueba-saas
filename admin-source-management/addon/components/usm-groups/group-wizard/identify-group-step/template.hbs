<box class="form">

  <hbox class="control">
    {{rsa-form-input class='group-name'
      tabIndex='1'
      label=(t 'adminUsm.group.name')
      placeholder=(t 'adminUsm.group.namePlaceholder')
      value=(readonly group.name)
      maxLength=256
      isError=(and nameValidator.isError nameValidator.isVisited)
      errorMessage=(t nameValidator.errorMessage)
      focusOut=(action 'handleNameChange' value='target.value')
    }}
  </hbox>

  <hbox class="control">
    {{rsa-form-textarea class='group-description'
      tabIndex='2'
      label=(t 'adminUsm.group.description')
      placeholder=(t 'adminUsm.group.descPlaceholder')
      value=(readonly group.description)
      maxLength=8000
      focusOut=(action 'handleDescriptionChange' value='target.value')
    }}
  </hbox>
</box>

{{!-- Overlay to prevent interactions while loading --}}
{{#if isGroupLoading}}
  <div class="loading-overlay">
    <centered>
      {{rsa-loader size="large"}}
    </centered>
  </div>
{{/if}}
