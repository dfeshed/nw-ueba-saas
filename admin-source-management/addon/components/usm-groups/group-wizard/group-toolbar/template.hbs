{{!-- previous is visible if prevStepId is defined, and always enabled --}}
{{#if step.prevStepId}}
  {{#rsa-form-button
    class='prev-button'
    defaultAction='transitionToPrevStep'
  }}
    {{t 'adminUsm.groupWizard.previous'}}
  {{/rsa-form-button}}
{{/if}}

{{!-- next is visible if nextStepId is defined, and enabled if the current step is valid --}}
{{#if step.nextStepId}}
  {{#rsa-form-button
    class='next-button'
    style='primary'
    defaultAction='transitionToNextStep'
    isDisabled=(not isStepValid)
  }}
    {{t 'adminUsm.groupWizard.next'}}
  {{/rsa-form-button}}
{{/if}}

{{!-- publish is visible if nextStepId is NOT defined, and enabled if all steps are valid --}}
{{#unless step.nextStepId}}
  {{#rsa-form-button
    class='publish-button'
    style='primary'
    defaultAction='publish'
    isDisabled=(not isWizardValid)
  }}
    {{t 'adminUsm.groupWizard.publishGroup'}}
  {{/rsa-form-button}}
{{/unless}}

{{!-- save is always visible, and enabled if the current step is valid --}}
{{#rsa-form-button
  class='save-button'
  defaultAction='save'
  isDisabled=(not isStepValid)
}}
  {{t 'adminUsm.groupWizard.saveAndClose'}}
{{/rsa-form-button}}

{{!-- cancel is always visible & enabled --}}
{{#rsa-form-button
  class='cancel-button'
  defaultAction='cancel'
}}
  {{t 'adminUsm.groupWizard.cancel'}}
{{/rsa-form-button}}
