{{#rsa-form-button
  class='prev-button'
  defaultAction='transitionToPrevStep'
  isDisabled=step.prevButtonDisabled
}}
  {{t 'adminUsm.groupWizard.previous'}}
{{/rsa-form-button}}

{{#rsa-form-button
  class='next-button'
  style='primary'
  defaultAction='transitionToNextStep'
  isDisabled=step.nextButtonDisabled
}}
  {{t 'adminUsm.groupWizard.next'}}
{{/rsa-form-button}}

{{#rsa-form-button
  class='save-button'
  defaultAction=(action 'save')
  isDisabled=step.saveButtonDisabled
}}
  {{t 'adminUsm.groupWizard.saveAndClose'}}
{{/rsa-form-button}}

{{#rsa-form-button
  class='publish-button'
  defaultAction=(action 'publish')
  isDisabled=step.publishButtonDisabled
}}
  {{t 'adminUsm.groupWizard.publishGroup'}}
{{/rsa-form-button}}

{{#rsa-form-button
  class='cancel-button'
  defaultAction='cancel'
  isStepValid=isStepValid
}}
  {{t 'adminUsm.groupWizard.cancel'}}
{{/rsa-form-button}}
