<vbox>
  <hbox class="source-type-top-text">
    {{t 'adminUsm.groupRankingWizard.chooseSourceTopText'}}
  </hbox>
  <hbox class="source-type-selector">
    <label class="rsa-form-label power-select">
      <div class="label-text">
        {{t 'adminUsm.groupWizard.applyPolicy.sourceType'}}
      </div>
      {{#power-select
        searchEnabled=true
        placeholder=(t 'adminUsm.groupWizard.sourceTypePlaceholder')
        selected=selectedSourceType
        options=availablePolicySourceTypes
        onchange=(action 'handleSourceTypeChange') as |option|
      }}
        {{t (concat 'adminUsm.policyTypes.' option.policyType)}}
      {{/power-select}}
    </label>
  </hbox>
  <hbox class='loading'>
    {{#if (eq groupRankingStatus 'wait')}}
      <span class='loading-spinner'>
        {{rsa-loader size='medium'}}
      </span>
    {{else if (eq groupRankingStatus 'error')}}
      <span class='loading-error'>
        {{t 'adminUsm.groupRankingWizard.error.generic'}}
      </span>
    {{/if}}
  </hbox>
</vbox>