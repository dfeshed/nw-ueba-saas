{{!-- previous is visible if prevStepId is defined, and always enabled --}}
{{#if step.prevStepId}}
  {{#rsa-form-button
    class='prev-button'
    defaultAction=(action 'transitionToPrevStep')
  }}
    {{t 'adminUsm.groupWizard.previous'}}
  {{/rsa-form-button}}
{{/if}}

{{!-- next is visible if nextStepId is defined, and enabled if the current step is valid --}}
{{#if step.nextStepId}}
  {{#rsa-form-button
    class='next-button'
    style='primary'
    defaultAction=(action 'transitionToNextStep')
    isDisabled=(not isStepValid)
  }}
    {{t 'adminUsm.groupWizard.next'}}
  {{/rsa-form-button}}
{{else}}

  {{#rsa-form-button
    class='publish-button'
    style='primary'
    defaultAction=(action 'handleSaveRanking')
    isDisabled=cannotPublishRanking
  }}
    {{t 'adminUsm.groupWizard.publishRanking'}}
  {{/rsa-form-button}}

{{/if}}

{{#rsa-form-button
  class='cancel-button'
  defaultAction=(action 'cancel')
}}
  {{t 'adminUsm.groupWizard.cancel'}}
{{/rsa-form-button}}
