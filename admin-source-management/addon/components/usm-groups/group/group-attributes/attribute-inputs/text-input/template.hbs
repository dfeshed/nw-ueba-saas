{{rsa-form-input class='operator-input'
  placeholder=(t (concat 'adminUsm.groupCriteria.placeholders.' selectedAttribute '_' selectedOperator))
  maxLength=1024
  value=localValue
  isError=(or validator.showError lockError)
  errorMessage=(t (concat 'adminUsm.groupCriteria.inputValidations.' validation))
  focusIn=(action 'handleFocusIn')
  focusOut=(action 'handleInputChange')
  spellcheck=false
}}

<div class="tooltip">
  {{#rsa-text-with-tooltip value=(t (concat 'adminUsm.groupCriteria.tooltips.' selectedAttribute '_' selectedOperator))
    style="standard"
    alwaysShow=true}}
    {{rsa-icon size='large' name="information-circle" style='lined'}}
  {{/rsa-text-with-tooltip}}
</div>
