<vbox class='schedule-form__content'>
  <div class="schedule-form__content-fields">
    <div>
      {{#x-toggle
        showLabels=true
        onLabel=(t 'adminUsm.policy.scheduleConfiguration.enable')
        value=(readonly isEnabled)
        onToggle=(action 'toggleEnable')  as |toggle|}}
        {{toggle.switch}}
        {{toggle.onLabel value=(readonly (not isEnabled))}}
      {{/x-toggle}}
    </div>
    <box class='schedule-time'>
      {{rsa-form-datetime
        label=(t 'adminUsm.policy.scheduleConfiguration.startDate')
        enableTime=false
        minDate='today'
        yearRange="currentYear, 2050"
        value=(readonly startDate)
        onChange=(action 'onDateChange')
      }}
    </box>
    {{form-container/schedule-config/recurrence-interval}}
    <box class="schedule-time">
      <label class="rsa-form-input">
        <h4 class='rsa-form-label'>{{t 'adminUsm.policy.scheduleConfiguration.startTime'}}</h4>
        {{rsa-icon name="calendar-timeout" style='lined' class='datetime-picker-icon'}}
        {{ember-flatpickr
          enableTime=true
          noCalendar=true
          enableSeconds=false
          time_24hr=true
          dateFormat='H:i'
          onChange=(action 'onTimeChange')
          minuteIncrement=1
          locale=locale
          defaultHour=12
          defaultMinute=0
          date=(readonly startTime)
        }}
      </label>
    </box>
    {{form-container/schedule-config/scan-options}}
  </div>
</vbox>