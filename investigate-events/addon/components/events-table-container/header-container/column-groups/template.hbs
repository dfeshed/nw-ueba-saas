{{#list-manager
  listName="Column Groups"
  selectedItem=selectedColumnGroup
  list=columnGroups
  itemSelection=(action 'selectColumnGroup')
  helpId=helpId
  as |manager|
}}

  {{manager.filter}}

  {{#manager.itemList as |itemList|}}
    {{#itemList.item as |item|}}
      {{events-table-container/header-container/column-groups/column-group-item columnGroup=item}}
    {{/itemList.item}}
  {{/manager.itemList}}

  {{#manager.details as |item|}}
    {{events-table-container/header-container/column-groups/column-group-details columnGroup=item}}
  {{/manager.details}}

{{/list-manager}}
