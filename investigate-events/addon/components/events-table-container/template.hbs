{{#if hasColumnGroups}}
  {{events-table-container/header-container
    toggleReconSize=toggleReconSize
    toggleSlaveFullScreen=toggleSlaveFullScreen
    dropdownKeydownAction=(action 'handleDropdownKeydown')
    dropdownCloseAction=(action 'handleDropdownClose')
  }}
  <section class="rsa-investigate-events-table__body">
    {{progress-bar
      percent=percent
      enabled=(is-equal status 'streaming')
    }}
    {{events-table-container/events-table
      keyboardActivated=(not tableKeyboardDeactivated)
      selectEvent=selectEvent}}
  </section>

  <footer class="scroll-message">
    {{rsa-icon style='filled' name='arrow-circle-down-1'}}
    <span>{{t 'investigate.events.scrollMessage'}}</span>
  </footer>
{{else}}
  <centered>
    {{rsa-loader size='largest' label=(concat (t 'investigate.loading') ' ...')}}
  </centered>
{{/if}}
