{{#if isExpensive}}
  {{rsa-icon
    name='stopwatch'
    style='lined'
    class='is-expensive expensive-indicator'
    title=(t 'queryBuilder.expensive')
  }}
{{/if}}

{{query-container/pill-meta
  isActive=(readonly isMetaActive)
  isAutoFocused=(readonly isMetaAutoFocused)
  isExpanded=(readonly shouldMetaExpand)
  isFirstPill=(eq position 0)
  metaOptions=metaOptions
  selection=(readonly selectedMeta)
  sendMessage=(action 'handleMessage')
}}

{{query-container/pill-operator
  isActive=(readonly isOperatorActive)
  isExpanded=(readonly shouldOperatorExpand)
  isFocusAtBeginning=(readonly isOperatorFocusedAtBeginning)
  meta=(readonly selectedMeta)
  selection=(readonly selectedOperator)
  sendMessage=(action 'handleMessage')
}}

{{query-container/pill-value
  isActive=(readonly isValueActive)
  isFocusAtBeginning=(readonly isValueFocusedAtBeginning)
  sendMessage=(action 'handleMessage')
  valueString=(readonly valueString)
}}

{{#if isDeletable}}
  {{query-container/delete-pill
    sendMessage=(action 'handleMessage')
  }}
{{/if}}

{{#if isFocused}}
  {{query-container/focus-holder
    sendMessage=(action 'handleMessage')
  }}
{{/if}}