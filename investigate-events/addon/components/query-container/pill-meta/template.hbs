{{#if isActiveWithOptions}}
  {{#power-select-typeahead
    allowClear=false
    defaultHighlighted=undefined
    extra=(hash labelPath='metaName')
    initiallyOpened=false
    matcher=_matcher
    matchTriggerWidth=false
    noMatchesMessage='All Meta Filtered out'
    onchange=(action 'onChange')
    onfocus=(action 'onFocus')
    oninput=(action 'onInput')
    onkeydown=(action 'onKeyDown')
    options=options
    optionsComponent=(
      component 'query-container/power-select-options'
      onmousedown=(action 'onOptionMouseDown')
    )
    preventScroll=true
    selected=selection
    triggerComponent='query-container/resizable-input'
    as |meta|
  }}
    {{meta.formattedName}}
  {{/power-select-typeahead}}
{{else}}
  {{selection.metaName}}
{{/if}}