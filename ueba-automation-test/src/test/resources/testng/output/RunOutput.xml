<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="output test">
    <parameter name="outputProcessingStartDaysBack" value="5" />
    <parameter name="outputProcessingEndDaysBack" value="1" />
    <parameter name="historical_days_back" value="35" />
    <parameter name="anomaly_day" value="2" />
    <parameter name="generator_format" value="MONGO_ADAPTER" />

    <test name="data preparation">
        <classes>
            <class name="com.rsa.netwitness.presidio.automation.test.data.generation.NetworkDataPreparation"/>
            <class name="com.rsa.netwitness.presidio.automation.test.data.generation.AlertsScenarioDataPreparation"/>
        </classes>
    </test>

    <test name="data processing">
        <classes>
            <class name="com.rsa.netwitness.presidio.automation.test.data.processing.AdapterProcessData"/>
            <class name="com.rsa.netwitness.presidio.automation.test.data.processing.InputProcessData"/>
            <class name="com.rsa.netwitness.presidio.automation.test.data.processing.ProcessSmarts_ForCoreTest"/>
            <class name="com.rsa.netwitness.presidio.automation.test.data.processing.OutputRunPrepareData"/>
        </classes>
    </test>

    <suite-files>
        <suite-file path="Adapter_Tests.xml"/>
        <suite-file path="Output_Tests.xml"/>
    </suite-files>

    <test name="presidio.data.generators.output.Verifications">
        <classes>
            <class name="com.rsa.netwitness.presidio.automation.common.validator.LogErrorsTestData"/>
            <class name="com.rsa.netwitness.presidio.automation.test.rest.E2EMongoRestValidation"/>
        </classes>
    </test>


</suite>


