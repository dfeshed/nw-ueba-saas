<hbox fit>
  <vbox fit class="events-count">
    <label class="label">{{t 'investigateProcessAnalysis.tabs.events' count=eventsFilteredCount}}</label>
  </vbox>
</hbox>
{{#rsa-data-table
  items=eventsData
  columnsConfig=config
  lazy=true}}
  {{#rsa-data-table/header as |column|}}
    {{column.title}} 
    {{#if column.enableSort}}
      {{rsa-icon
        click=(action 'sort' column)
        name=(if column.isDescending "arrow-down-7" "arrow-up-7")
        class="sort"}}
    {{/if}}
  {{/rsa-data-table/header}}

  {{#rsa-data-table/body as |item index column|}}
    {{process-details/events-table/table/body-cell item=item column=column}}
  {{/rsa-data-table/body}}
{{/rsa-data-table}}