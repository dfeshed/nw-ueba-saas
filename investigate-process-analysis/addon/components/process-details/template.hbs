<hbox>
  <hbox class="rsa-nav-tab-group">
    {{#each tabs as |tab|}}
      {{#rsa-nav-tab align='left' isActive=tab.isActive click=(action 'activate' tab)}}
        <div class="label">
          {{#if (eq tab.name 'Events')}}
            {{t tab.label count=eventsCount}}
          {{else}}
            {{t tab.label}}
          {{/if}}
          <span class="icon">{{rsa-icon name='expand-6'}}</span>
        </div>
      {{/rsa-nav-tab}}
    {{/each}}
  </hbox>
  <div class='process-details-buttons'>
    {{rsa-icon
      class='header-button'
      click=(action 'toggleDetailsExpanded')
      name=toggleEventsClass
      title=(t 'processAnalysis.buttons.expandDetails')}}

    {{rsa-icon
      class='header-button'
      click=(action 'closeDetails')
      name='close'
      title=(t 'processAnalysis.buttons.close')}}
  </div>
</hbox>
  {{component tabComponent}}
