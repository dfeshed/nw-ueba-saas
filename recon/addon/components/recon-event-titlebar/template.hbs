<hbox class='heading'>
  <h2>
    {{displayTitle}}
  </h2>
</hbox>
<grid class='action-buttons'>
  <centered xs="2">
    {{#rsa-form-button active=showHeaderData isIconOnly=true}}
      {{rsa-icon class='toggle-header' name='layout-6' click=toggleHeaderData}}
    {{/rsa-form-button}}
  </centered>
  <centered xs="2">
    {{#rsa-form-button isIconOnly=true}}
      {{rsa-icon class='toggle-meta' name='layout-12' click=toggleMetaDetails}}
    {{/rsa-form-button}}
  </centered>
  <centered xs="2">
    {{#rsa-form-button isIconOnly=true}}
      {{rsa-icon name='infomation-circle' size='large' style='lined'}}
    {{/rsa-form-button}}
  </centered>
  <centered xs="2">
    <div class="divider"></div>
  </centered>
  <centered xs="2">
    {{#rsa-form-button isIconOnly=true}}
      {{rsa-icon name='cog'}}
    {{/rsa-form-button}}
  </centered>
  <centered xs="2">
    {{#rsa-form-button isIconOnly=true}}
      {{rsa-icon name='arrow-right-9' click=closeRecon}}
    {{/rsa-form-button}}
  </centered>
</grid>
