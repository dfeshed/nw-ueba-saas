<hbox class='heading'>
  {{#rsa-form-select
      multiple=false
      prompt=displayTitle
      alwaysUsePrompt=true
      onchange=(action 'findNewReconstructionView')}}
    {{#each reconViewsConfig as |item|}}
      <option value={{item.code}} selected={{item.selected}}>{{item.label}}</option>
    {{/each}}
  {{/rsa-form-select}}
</hbox>

{{rsa-icon
  active=showHeaderData
  class='toggle-header'
  click=toggleHeaderData
  name='layout-6'
  size='large'}}

{{rsa-icon
  active=showResponseData
  name='arrow-circle-right-2'
  size='large'}}

{{rsa-icon
  active=showRequestData
  name='arrow-circle-left-2'
  size='large'}}

{{rsa-icon
  active=true
  name='view-agenda'
  size='large'}}

{{rsa-icon
  name='layout-4'
  size='large'}}

{{rsa-icon
  active=showMetaDetails
  class='toggle-meta'
  click=(action 'toggleMetaDetails')
  name='layout-2'
  size='large'}}

<div class="divider"></div>

{{rsa-icon
  name='cog'
  size='large'}}

{{rsa-icon
  click=(action 'toggleExpanded')
  name=(concat 'arrow-' arrowDirection '-9')
  size='large'}}

{{rsa-icon
  click=closeRecon
  name='close'
  size='large'}}
