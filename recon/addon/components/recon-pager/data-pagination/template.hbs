
{{#rsa-form-button
  defaultAction=(action "pageFirst")
  isIconOnly=true
  isDisabled=cannotGoToPreviousPage
  class="page-first-button"}}
  {{rsa-icon
    title=(t "recon.reconPager.packetPagnationPageFirst")
    class="rsa-icon-arrow-left-9"
    size="smaller"}}
{{/rsa-form-button}}

{{#rsa-form-button
  defaultAction=(action "pagePrevious")
  isIconOnly=true
  isDisabled=cannotGoToPreviousPage
  class="page-previous-button"}}
  {{rsa-icon
    title=(t "recon.reconPager.packetPagnationPagePrevious")
    class="rsa-icon-arrow-left-12"
    size="smaller"}}
{{/rsa-form-button}}

<label class="page-text-box">
  <input class="input-page-number" type="number" value={{currentPage}} onkeypress={{action "setPageNumber"}} >
  <span class="input-span">of</span>
  <span class="last-page">{{lastPageNumber}}</span>
</label>

{{#rsa-form-button
  defaultAction=(action "pageNext")
  isIconOnly=true
  isDisabled=cannotGoToNextPage
  class="page-next-button"}}
  {{rsa-icon
    title=(t "recon.reconPager.packetPagnationPageNext")
    class="rsa-icon-arrow-right-12"
    size="smaller"}}
{{/rsa-form-button}}

{{#rsa-form-button
  defaultAction=(action "pageLast")
  isIconOnly=true
  isDisabled=cannotGoToNextPage
  class="page-last-button"}}
  {{rsa-icon
    title=(t "recon.reconPager.packetPagnationPageLast")
    class="rsa-icon-arrow-right-9"
    size="smaller"}}
{{/rsa-form-button}}

<label class="rsa-form-label power-select-dropdown">
  {{#power-select
    triggerClass="inline"
    options=options
    selected=packetsPageSize
    searchEnabled=false
    onchange=(action "changePacketsPerPage") as |option|}}
    {{option}}
  {{/power-select}}
  <div class="label-text">
    {{packetsPerPageText}}
  </div>
</label>
