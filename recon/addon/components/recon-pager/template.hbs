{{#if (and eventIndex eventTotal)}}
  <div class="event-info">
    <span class="lighter">{{eventIndex}} of {{eventTotal}}</span>
    events
  </div>
{{/if}}
{{#if isPacket}}
  <div class="packet-info">
    Rendered
    <span class="lighter">{{packetCount}} of {{packetTotal}}</span>
    packets
    {{unless isHidden 'to improve performance'}}
  </div>
{{/if}}
{{#if (and isText maxPacketMessaging)}}
  <div class="packet-info">
    {{#rsa-content-tethered-panel-trigger panel='packetDisclaimerInfo'}}
      <div class="disclaimer">
        {{rsa-icon name='report-problem-triangle'}} {{maxPacketMessaging.message}}
      </div>
    {{/rsa-content-tethered-panel-trigger}}
    {{#rsa-content-tethered-panel
      displayCloseButton=false
      panelId='packetDisclaimerInfo'
      position='top'}}
      <p>{{maxPacketMessaging.disclaimer}}</p>
    {{/rsa-content-tethered-panel}}
  </div>
{{/if}}
