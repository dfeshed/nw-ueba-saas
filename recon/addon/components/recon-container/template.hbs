{{recon-event-header
  headerItems=headerItems
  index=index
  total=total
  closeRecon=closeAction
  expandRecon=expandAction
  reconstructionType=reconstructionType
  showMetaDetails=showMetaDetails
  showRequestData=showRequestData
  showResponseData=showResponseData
  shrinkRecon=shrinkAction
  toggleMetaDetails=(action 'toggleMetaDetails')
  toggleRequest=(action 'toggleRequest')
  toggleResponse=(action 'toggleResponse')
  updateReconstructionView=(action 'updateReconstructionView')
}}

<hbox>
  {{recon-event-content
    eventId=eventId
    endpointId=endpointId
    packetFields=packetFields
    meta=meta
    reconstructionType=reconstructionType
    showMetaDetails=showMetaDetails
    showRequestData=showRequestData
    showResponseData=showResponseData
  }}

  {{#if showMetaDetails}}
    <vbox xs="4" class="event-content-box">
      {{recon-meta-content meta=meta}}
    </vbox>
  {{/if}}
</hbox>
