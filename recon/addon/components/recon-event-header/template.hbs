<vbox fit class="recon-event-header">
  {{recon-event-titlebar}}
  {{recon-event-actionbar}}

  {{#if headerError}}
    {{rsa-panel-message message=(t 'recon.error.generic')}}
  {{else}}
    {{#if isHeaderOpen}}
      <div class="header-data">
        {{#if displayedHeaderItems}}
          <grid responsive>
            {{#each displayedHeaderItems as |item|}}
              {{#if item.value}}
                {{recon-event-header-item name=item.name value=item.value type=item.type}}
              {{/if}}
            {{/each}}
          </grid>
        {{/if}}
      </div>
    {{/if}}
  {{/if}}
</vbox>
