<hbox xs="4" class="meta-name" align="center">
  {{name}}
</hbox>
<hbox xs="7" class="meta-value" align="center">
  {{#if (or (eq name 'time') (eq name 'event.time'))}}
    {{rsa-content-datetime
      displayMilliseconds=false
      timestamp=value}}
  {{else if showTextWithTooltip}}
    {{rsa-text-with-tooltip value=(get lengthyMetas translatedName) tipPosition='left' showNote=true}}
  {{else}}
    {{#rsa-context-menu
      contextSelection=contextSelection
      contextDetails=contextMenuData}}
      <span class="entity" data-entity-id={{value}} data-meta-key={{name}}>{{value}}</span>
    {{/rsa-context-menu}}
  {{/if}}
</hbox>
<hbox xs="1" align="center">
  {{#if shouldShowBinoculars}}
    {{rsa-icon
      click=(action 'clickBinoculars')
      name="binoculars"}}
  {{/if}}
</hbox>
{{#if shouldShowHighlightScroller}}
  {{recon-meta-content-item/meta-highlight-scroller totalCount=totalCount}}
{{/if}}
