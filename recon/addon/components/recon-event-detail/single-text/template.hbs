{{recon-event-detail/single-text/header
  isLog=isLog
  isSticky=false
  side=packet.side
}}

<div class="text-container">
  {{ initialTextEntriesToDisplay }}
</div>

{{#rsa-content-tethered-panel position='top' panelId=(concat 'span' index) hideOnLeave=false displayCloseButton=hasCloseButton}}
  {{#if isActionClicked }}
    <header>{{tooltipHeading}}</header>
    <div class='selection-name'>Original Selection</div>
    <div class='selection-value'>{{originalString}}</div>
    <div class='selection-name'>Base64 Format</div>
    <div class='selection-value'>{{encDecStrBase64}}</div>
    <div class='selection-name'>URL Format</div>
    <div class='selection-value'>{{encDecStrUrl}}</div>
  {{else}}
    <ul>
      <li class="list-item" {{action 'decodeText'}}>Decode Selected Text</li>
      <li class="list-item" {{action 'encodeText'}}>Encode Selected Text</li>
    </ul>
  {{/if}}
{{/rsa-content-tethered-panel}}

{{#if displayShowAllButton}}
  <div class="load-more-text-entries">
    {{#rsa-form-button
      defaultAction=(action 'showRemainingLines')
      isDisabled=renderingRemainingLines}}
      {{ remainingLineCountMessage }}
    {{/rsa-form-button}}
  </div>
{{/if}}
