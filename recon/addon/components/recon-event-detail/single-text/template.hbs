<div class="request-response justify-{{packet.side}}">
  <span>
    {{rsa-icon name=(concat 'arrow-circle-' arrowDirection '-2')}}
  </span>
  <span class="text">
    {{#if isLog}}
      raw log
    {{else}}
      {{packet.side}}
    {{/if}}
  </span>
</div>
<div class="text-container">
  {{packet.text}}
  {{#rsa-content-tethered-panel position='top' panelId=(concat 'span' index)}}
    <header>panel Header</header>
    <section>Here is the info!</section>
  {{/rsa-content-tethered-panel}}
</div>
