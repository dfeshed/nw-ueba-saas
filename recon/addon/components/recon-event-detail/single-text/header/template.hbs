{{#if showPercentMessage}}
  <div class="header-percent-complete">
    {{t 'recon.textView.headerShowing'}} {{percentText}}%
    {{#if showTruncatedMessage}}
      {{t 'recon.textView.singleMessageTruncated'}}
    {{/if}}
  </div>
{{/if}}

<div class="{{side}}">
  <span>
    {{rsa-icon name=(concat 'arrow-circle-' arrowDirection '-2')}}
  </span>
  <span class="text">
    {{#if isLog}}
      {{t 'recon.textView.rawLogHeader'}}
    {{else}}
      {{side}}
    {{/if}}
  </span>
</div>


