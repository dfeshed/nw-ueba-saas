{{!--
  If no visible packets, just be blank, isn't cause for error,
  user may have just hidden request/response
--}}
{{#if visiblePackets}}
  {{#if processedPackets}}
    {{#if stickyContent}}
      <div class="recon-packet-stuck-header">
        {{recon-event-detail/single-packet/header
          isSticky=true
          packet=stickyContent
        }}
      </div>
    {{/if}}
    <div class="scroll-box">
      {{#each processedPackets key="id" as |packet index|}}
        {{recon-event-detail/single-packet
          index=index
          packet=packet
          packetFields=packetFields
          tooltipData=tooltipData
        }}
      {{/each}}
    </div>

    {{recon-event-detail/single-packet/byte-tooltip }}
  {{else}}
    {{!--
      If visible packets, but no processed packets, means something else eliminated the packets
      other than just pure visibility, currently that something else is the fact that there is
      no hex data (packets with just headers)
    --}}
    {{rsa-panel-message message=(t 'recon.packetView.noHexData')}}
  {{/if}}

  {{recon-pager
    eventIndex=eventIndex
    eventTotal=eventTotal
    packetCount=packetCount
    packetTotal=packetTotal
    isPacket=true
  }}

{{else}}
  <div class="recon-loader">
    {{rsa-loader size='larger'}}
  </div>
{{/if}}
