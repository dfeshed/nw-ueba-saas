{{recon-event-detail/single-packet/header
  isPayloadOnly=isPayloadOnly
  isSticky=false
  packet=packet
  togglePacketExpansion=(action 'togglePacketExpansion')
}}

{{#if isPacketExpanded}}
  <section class="rsa-packet__body" style={{calculatedStyle}}>
    {{#if shouldRender}}
      {{recon-event-detail/single-packet/offset-table
        byteRows=packet.byteRows
      }}
      <section class="rsa-packet__hex">
        {{#each chunkedPacket key='byteRows' as |packet|}}
          {{recon-event-detail/single-packet/byte-table
            byteFormat="hex"
            hasSignaturesHighlighted=hasSignaturesHighlighted
            isPayloadOnly=isPayloadOnly
            packet=packet
          }}
        {{/each}}
      </section>
      <section class="rsa-packet__ascii">
        {{#each chunkedPacket key='byteRows' as |packet|}}
          {{recon-event-detail/single-packet/byte-table
            byteFormat="ascii"
            hasSignaturesHighlighted=hasSignaturesHighlighted
            isPayloadOnly=isPayloadOnly
            packet=packet
          }}
        {{/each}}
      </section>
    {{/if}}
  </section>
{{/if}}