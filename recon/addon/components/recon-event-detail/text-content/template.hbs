{{#if stickyContent}}
  <div class="recon-packet-stuck-header">
    {{recon-event-detail/single-text/header
      isSticky=true
      isLog=isLogEvent
      side=stickyContent.side
    }}
  </div>
{{/if}}

{{#if metaToHighlight}}
  {{recon-event-detail/text-content/meta-highlight-scroller
    metaToHighlight=metaToHighlight
  }}
{{/if}}

{{#if textContent}}
  <div class="scroll-box">
    {{#each visibleText as |text index|}}
      {{recon-event-detail/single-text
        index=index
        isLog=isLogEvent
        metaToHighlight=metaToHighlight
        packet=text
      }}
    {{/each}}
  </div>
  {{recon-pager
    eventIndex=eventIndex
    eventTotal=eventTotal
  }}
{{else}}
  {{rsa-panel-message message=(t 'recon.error.noTextContentData')}}
{{/if}}
