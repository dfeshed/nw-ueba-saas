{{#if contentError}}
  {{contentError}}
{{else}}

  {{#if isPackets}}
    {{!--
      By waiting for packetFields to be populated we ensure we do not
      retrieve packets until summary is complete, also prevents double render
    --}}
    {{#if packetFields}}
      <hbox class="event-content-box">
        {{recon-event-detail/packets eventId=eventId endpointId=endpointId packetFields=packetFields}}
      </hbox>
    {{/if}}
  {{/if}}

  {{#if isFile}}
    {{recon-event-detail/files eventId=eventId endpointId=endpointId}}
  {{/if}}

{{/if}}

{{#if showMetaDetails}}
  <hbox xs="4" class="event-content-box">
    {{recon-meta-content meta=meta}}
  </hbox>
{{/if}}
