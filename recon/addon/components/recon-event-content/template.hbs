{{#if contentError}}
  {{contentError}}
{{else}}
  <hbox class="event-content-box">
    {{!-- a hack to avoid re-render, will go with better API for packetFields --}}
    {{#if packetFields}}
      {{component
        reconstructionType.component
        eventId=eventId
        endpointId=endpointId
        packetFields=packetFields
        contentErrorAction=contentErrorAction
        showRequestData=showRequestData
        showResponseData=showResponseData
      }}
    {{/if}}
  </hbox>
{{/if}}

{{#if showMetaDetails}}
  <hbox xs="4" class="event-content-box">
    {{recon-meta-content meta=meta}}
  </hbox>
{{/if}}
