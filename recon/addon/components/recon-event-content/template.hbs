<div class="scroll-box">
  {{#if isLoading}}
    <div class="recon-loader">
      {{rsa-loader size='larger'}}
    </div>
  {{else}}
    {{#if contentError}}
      <div class="recon-error">
        {{errorMessage}}
      </div>
    {{else}}
      {{component currentReconView.component}}
    {{/if}}
  {{/if}}
</div>
