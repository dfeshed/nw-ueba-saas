{{#rsa-content-tethered-panel-trigger panel='payloadPanel'}}
  {{#x-toggle
    onLabel=(t 'recon.packetView.payloadToggleLabel')
    onToggle=(action 'togglePayloadOnly')
    showLabels=true
    value=(readonly isPayloadOnly) as |toggle|}}
    {{toggle.switch}}
    {{toggle.onLabel value=(readonly (not isPayloadOnly))}}
  {{/x-toggle}}
{{/rsa-content-tethered-panel-trigger}}
{{#rsa-content-tethered-panel
  displayCloseButton=false
  panelId='payloadPanel'
  position='bottom'}}
  <p>{{t 'recon.packetView.payloadToggleTitle'}}</p>
{{/rsa-content-tethered-panel}}