<grid>
  <hbox class="dropdowns">
    {{#if isPacketView }}
      {{recon-event-actionbar/export-packet}}
      {{#rsa-form-button
        class='payload-only-button'
        style=payloadButtonStyle
        click=(action 'togglePayloadOnly')}}
        Payload only
      {{/rsa-form-button}}
    {{/if}}
    {{#if isFileView }}
      {{recon-event-actionbar/export-files}}
    {{/if}}
    {{#if isTextView }}
      {{#unless isLogEvent}}
        {{recon-event-actionbar/export-packet}}
      {{/unless}}
      {{recon-event-actionbar/export-logs}}
      {{#unless isLogEvent}}
        {{recon-event-actionbar/decode-text}}
      {{/unless}}
    {{/if}}
  </hbox>
</grid>
