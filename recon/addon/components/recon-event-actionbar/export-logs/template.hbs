<hbox class="rsa-button-group">
  {{#rsa-form-button
    class="export-logs-button"
    defaultAction=(action 'processFiles' 'LOG')
    isDisabled=isDownloading
  }}
    {{#if isDownloading}}{{rsa-loader size="small"}}{{/if}}
    {{caption}}
  {{/rsa-form-button}}
  {{#click-outside action=(action "clickOutside")}}
    {{#rsa-form-button
      class="rsa-split-dropdown"
      defaultAction=(action 'toggleExpand')
    }}
      {{rsa-icon name="arrow-down-12"}}
    {{/rsa-form-button}}
    {{#recon-button-menu isExpanded=isExpanded style=offsetsStyle}}
      <li>
        <a {{action 'processMenuItem' 'LOG'}}>{{defaultOption}}</a>
      </li>
      <li>
        <a {{action 'processMenuItem' 'CSV'}}>{{t 'recon.textView.downloadCsv'}}</a>
      </li>
      <li>
        <a {{action 'processMenuItem' 'XML'}}>{{t 'recon.textView.downloadXml'}}</a>
      </li>
      <li>
        <a {{action 'processMenuItem' 'JSON'}}>{{t 'recon.textView.downloadJson'}}</a>
      </li>
    {{/recon-button-menu}}
  {{/click-outside}}
</hbox>
<iframe src="{{iframeSrc}}" class="export-logs-iframe js-export-logs-iframe"></iframe>
