{{#rsa-data-table columnsConfig=certificatesColumns items=certificatesItems}}
  {{#rsa-data-table/header as |column|}}
    {{t column.title}}
  {{/rsa-data-table/header}}

  {{#if areCertificatesLoading}}
    <centered>
      {{rsa-loader size='larger'}}
    </centered>
  {{else}}
    {{#rsa-data-table/body as |item index column|}}
      {{#rsa-data-table/body-cell index=index item=item column=column}}
        {{get item column.field}}
      {{/rsa-data-table/body-cell}}
    {{/rsa-data-table/body}}
    {{rsa-data-table/load-more status=loadMoreStatus click=(action 'getPageOfCertificates')}}
  {{/if}}
{{/rsa-data-table}}