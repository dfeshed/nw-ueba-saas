<section class="rules-toolbar__btns">
  {{#if accessControl.respondCanManageAlertRules}}
    <div class="action-control create-rule-button">
      {{#link-to 'respond.incident-rule-create'}}
        {{#rsa-form-button}}
          {{t 'configure.incidentRules.createRule'}}
        {{/rsa-form-button}}
      {{/link-to}}
    </div>
    <div class="action-control export-rules-button">
      {{#rsa-form-button
        isDisabled=isNoneSelected
        defaultAction=(action 'export')
      }}
        {{t 'configure.incidentRules.export'}}
      {{/rsa-form-button}}
    </div>
    <div class="action-control enable-rules-button">
      {{#rsa-form-button
        isDisabled=(or isNoneSelected isAllEnabled)
        defaultAction=(action 'enable')
      }}
        {{t 'configure.incidentRules.enable'}}
      {{/rsa-form-button}}
    </div>
    <div class="action-control disable-rules-button">
      {{#rsa-form-button
        isDisabled=(or isNoneSelected isAllDisabled)
        defaultAction=(action 'disable')
      }}
        {{t 'configure.incidentRules.disable'}}
      {{/rsa-form-button}}
    </div>
    <div class="action-control clone-rule-button">
      {{#rsa-form-button
        isDisabled=(not hasOneSelectedRule)
        defaultAction=(action 'clone')
      }}
        {{t 'configure.incidentRules.cloneRule'}}
      {{/rsa-form-button}}
    </div>
    <div class="action-control delete-rule-button">
      {{#rsa-form-button
        style='danger'
        isDisabled=(not hasOneSelectedRule)
        defaultAction=(action 'delete')
      }}
        {{t 'configure.incidentRules.deleteRule'}}
      {{/rsa-form-button}}
    </div>
  {{/if}}
</section>
{{#if showConfirmationDialog}}
  {{#rsa-application-modal eventId='delete-rule' label=(t "configure.incidentRules.deleteRule") style="standard respond-confirmation-dialog"}}
    <div class='modal-content'>
      <p>{{t 'configure.incidentRules.actionMessages.deleteRuleConfirmation'}}</p>
    </div>
    <footer>
      <hbox class="modal-footer-buttons">
        {{#rsa-form-button class='cancel-button' defaultAction=(action 'cancel')}}
          {{t 'forms.cancel'}}
        {{/rsa-form-button}}
        {{#rsa-form-button style='primary' class='confirm-button' defaultAction=(action 'confirm')}}
          {{t 'forms.ok'}}
        {{/rsa-form-button}}
      </hbox>
    </footer>
  {{/rsa-application-modal}}
  {{#rsa-application-modal eventId='enable-rules' label=(t "configure.incidentRules.enable") style="standard respond-confirmation-dialog"}}
    <div class='modal-content'>
      <p>{{t 'configure.incidentRules.actionMessages.enableRulesConfirmation' count=confirmationData.numSelected}}</p>
    </div>
    <footer>
      <hbox class="modal-footer-buttons">
        {{#rsa-form-button class='cancel-button' defaultAction=(action 'cancel')}}
          {{t 'forms.cancel'}}
        {{/rsa-form-button}}
        {{#rsa-form-button style='primary' class='confirm-button' defaultAction=(action 'confirm')}}
          {{t 'forms.ok'}}
        {{/rsa-form-button}}
      </hbox>
    </footer>
  {{/rsa-application-modal}}
  {{#rsa-application-modal eventId='disable-rules' label=(t "configure.incidentRules.disable") style="standard respond-confirmation-dialog"}}
    <div class='modal-content'>
      <p>{{t 'configure.incidentRules.actionMessages.disableRulesConfirmation' count=confirmationData.numSelected}}</p>
    </div>
    <footer>
      <hbox class="modal-footer-buttons">
        {{#rsa-form-button class='cancel-button' defaultAction=(action 'cancel')}}
          {{t 'forms.cancel'}}
        {{/rsa-form-button}}
        {{#rsa-form-button style='primary' class='confirm-button' defaultAction=(action 'confirm')}}
          {{t 'forms.ok'}}
        {{/rsa-form-button}}
      </hbox>
    </footer>
  {{/rsa-application-modal}}
{{/if}}
