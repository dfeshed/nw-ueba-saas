<hbox class="action-control add-new-parser-rule">
  {{#rsa-application-modal
    label=(t 'configure.logsParser.modals.addRule.title')
    eventId='addNewRule'}}

    {{content/log-parser-rules/parser-rules-list/add-log-parser-rule}}

  {{/rsa-application-modal}}
</hbox>

<hbox class="rsa-button-with-confirmation action-control deleteRule">
  {{#rsa-button-with-confirmation
    title=(t 'configure.logsParser.modals.deleteRule.title')
    confirmationMessage=(t 'configure.logsParser.modals.deleteRule.confirm' ruleName=selectedParserRuleName)
    confirmButtonLabel=(t 'configure.logsParser.modals.deleteRule.ok')
    isDisabled=cannotDeleteRule
    cancelButtonLabel=(t 'configure.logsParser.modals.cancel')
    onConfirm=( action 'deleteParserRule')}}
    {{t 'configure.logsParser.buttons.delete'}}
  {{/rsa-button-with-confirmation}}
</hbox>
