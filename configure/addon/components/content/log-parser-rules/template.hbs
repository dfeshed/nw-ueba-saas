<div class="parserWrapper">
  {{#if isLoading}}
    <div class='loading'>
      {{rsa-loader size='large' label=(t 'configure.logsParser.wait')}}
    </div>
  {{else if isLoadingError}}
    <div class='loading'>
      {{t 'configure.logsParser.error.generic'}}
    </div>
  {{else}}
    <table class='parserContainer'>
      <tr class='trTop'>
        <td rowspan="2" class='border leftArea'>
          {{content/log-parser-rules/log-parsers}}
        </td>
        <td class='centerArea'>
          <h1>
            {{logParserName}}
            {{#if parserRuleName}}
              - {{parserRuleName}}
            {{/if}}
          </h1>
          <div class='centerTop'>
            {{#if canShowSelectedParserRule}}
              {{content/log-parser-rules/parser-rule}}
              {{content/log-parser-rules/save-reset-rule}}
            {{/if}}
          </div>
        </td>
        <td rowspan="2" class='border rightArea'>
          {{content/log-parser-rules/parser-rules-list}}
        </td>
      </tr>
      <tr class='trMessage'>
        <td class='tdMessage'>{{content/log-parser-rules/log-message}}</td>
      </tr>
    </table>
  {{/if}}
</div>
{{! Overlay to prevent interactions during transactions }}
{{#if isTransactionUnderway}}
  <div class="transaction-overlay">
    <centered>
      {{rsa-loader size="large"}}
    </centered>
  </div>
{{/if}}