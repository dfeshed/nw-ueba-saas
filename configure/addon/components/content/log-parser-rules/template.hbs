<div class="parserWrapper">
  {{#if isLoading}}
    <div class='loading'>
      {{rsa-loader size='large' label=(t 'configure.logsParser.wait')}}
    </div>
  {{else if isLoadingError}}
    <div class='loading'>
      {{t 'configure.logsParser.error.generic'}}
    </div>
  {{else}}
    <table class='parserContainer'>
      <tr class='trTop'>
        <td rowspan="2" class='border leftArea'>
          {{content/log-parser-rules/log-parsers}}
        </td>
        <td class='centerArea'>
          <table class='matchingMapping'>
            <tr>
              <td colspan="4">
                <h1>
                  {{content/log-parser-rules/save-reset-rule}}
                  <div class='parserRuleName'>
                    {{#if parserRuleName}}
                      <div>{{parserRuleName}}</div>
                    {{/if}}
                  </div>
                </h1>
              </td>
            </tr>
            {{#if canShowSelectedParserRule}}
              <tr>
                <td>
                  <h2> {{t 'configure.logsParser.tokens'}} </h2>
                </td>
                <td>
                  <h2> {{t 'configure.logsParser.values'}} </h2>
                </td>
                <td>
                  <h2>{{t 'configure.logsParser.mapping'}} </h2>
                </td>
              </tr>
              <tr>
                <td class='token'>
                  {{content/log-parser-rules/token-matching}}
                </td>
                <td class='values'>
                  {{content/log-parser-rules/value-matching}}
                </td>
                <td class="meta">
                  {{content/log-parser-rules/value-mapping}}
                </td>
              </tr>
            {{/if}}
          </table>
        </td>
        <td rowspan="2" class='border rightArea'>
          {{content/log-parser-rules/parser-rules-list}}
        </td>
      </tr>
      <tr class='trMessage'>
        <td class='tdMessage'>{{content/log-parser-rules/log-message}}</td>
      </tr>
    </table>
  {{/if}}
</div>
{{! Overlay to prevent interactions during transactions }}
{{#if isTransactionUnderway}}
  <div class="transaction-overlay">
    <centered>
      {{rsa-loader size="large"}}
    </centered>
  </div>
{{/if}}