{{#if (eq downloadStatus 'completed')}}
  {{#rsa-form-button click=(action 'exportFileAsCSV')}}
    {{t 'investigateFiles.button.exportToCSV'}}
  {{/rsa-form-button}}
{{else}}
  {{#rsa-form-button isDisabled=true}}
    {{rsa-loader}} {{t 'investigateFiles.button.downloading'}}
  {{/rsa-form-button}}
{{/if}}
<iframe src="{{exportLink}}" class="export-files-iframe"></iframe>