<vbox class='files-host-list scroll-box'>
  {{#if isHostListLoading}}
    <centered class='loader_icon'>
      {{rsa-loader size='large'}}
    </centered>
  {{else}}
    {{#if items}}
      <div class="count-info">{{t 'investigateFiles.fields.hostCount'}} {{t countLabelKey count=hostListCount}}</div>
      {{#each items as |item|}}
        <div class='host_details_link'>
          <a class='host_list_content navigate_host_details' title={{item}} href='#' target='_blank' rel='noopener' {{action 'openHost' item}}>
            {{item}}
          </a>
        </div>
        <span class='host_list_content divider'></span>
        {{endpoint/pivot-to-investigate
          itemList=itemList
          serviceId=serviceId
          metaName=metaName
          metaValue=item
          serviceList=serviceList
          showOnlyIcons=showOnlyIcons
          getAllServices=getAllServices
          disabled=false}}
      {{/each}}
    {{else}}
      {{rsa-panel-message message=(t 'investigateFiles.message.noResultsFoundMessage') messageType='no-results-message'}}
    {{/if}}
  {{/if}}

</vbox>
