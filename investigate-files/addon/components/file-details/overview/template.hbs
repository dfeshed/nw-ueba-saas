{{#rsa-page-layout as |layout|}}
  {{#layout.center}}
    <hbox class="file-detail-box scroll-box">
      <box class="alerts">
        {{endpoint/risk-properties
          defaultAction=(action 'getUpdatedRiskScoreContext')
          setSelectedAlert=(action 'setSelectedAlert')
          riskState=risk}}
      </box>
      <box class="events">
        {{endpoint/risk-properties/events-list-container
          riskState=risk
          expandEvent=(action "expandEvent")}}
      </box>
    </hbox>
  {{/layout.center}}
{{/rsa-page-layout}}
