{{#rsa-page-layout showRightZone=false as |layout|}}

  {{#layout.left as |leftPanel|}}
    {{leftPanel.header iconName='filter-2' title=(t 'investigateFiles.filter.filter')}}
    {{filters-wrapper}}
  {{/layout.left}}

  {{#layout.center}}
    <section class="rsa-files-toolbar flexi-fit">
      {{files-toolbar openFilterPanel=(action layout.open 'left')}}
    </section>
    <box class="files-body">
      {{#if (eq areFilesLoading 'wait')}}
        <centered>
          {{rsa-loader size='larger'}}
        </centered>
      {{else}}
        {{#if isSchemaLoaded}}
          {{file-list openRiskPanel=(action layout.open 'right') closeRiskPanel=(action layout.close 'right')}}
        {{/if}}
      {{/if}}
    </box>
    <box class="files-footer">
      {{file-pager}}
    </box>
  {{/layout.center}}

  {{#layout.right as |rightPanel|}}
    {{#rightPanel.header class="investigate-file-tab"}}
      {{#title-bar tabs=dataSourceTabs defaultAction=(action 'setDataSourceTab') as |tab|}}
        <div class="label">{{t tab.label}}</div>
      {{/title-bar}}
      {{#rsa-form-button class='close-zone' isIconOnly=true click=(action layout.close 'right') }}
        {{rsa-icon class='close-icon' name='close' title=(t 'investigateHosts.context.button.close')}}
      {{/rsa-form-button}}
    {{/rightPanel.header}}
    {{endpoint/file-details-panel activeDataSourceTab=activeDataSourceTab data=context errorMessage=false}}
  {{/layout.right}}
{{/rsa-page-layout}}




