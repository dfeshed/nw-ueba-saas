<table>
  <caption class="sr-only" test-id="eventTableCaption">{{t "respond.eventDetails.caption"}}</caption>
  <thead>
    <tr>
      <th></th>
      <th scope="col" test-id="eventTableFileNameLabel">{{t "respond.eventsList.endpoint.tableFILENAME"}}</th>
      <th scope="col" test-id="eventTableLaunchLabel">{{t "respond.eventsList.endpoint.tableLAUNCH"}}</th>
      <th scope="col" test-id="eventTablePathLabel">{{t "respond.eventsList.endpoint.tablePATH"}}</th>
      <th scope="col" test-id="eventTableHashLabel">{{t "respond.eventsList.endpoint.tableHASH"}}</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row" test-id="eventSourceLabel">{{t "respond.eventsList.endpoint.sourceLabel"}}</th>
      {{properties-for/determine-value key="filename" value=item.source.filename tag="td" testId="eventSourceFileNameValue"}}
      <td test-id="eventSourceLaunchValue">{{properties-for/determine-value value=item.source.launch_argument}}</td>
      <td test-id="eventSourcePathValue">{{properties-for/determine-value value=item.source.path}}</td>
      {{properties-for/determine-value class="hash" key="hash" value=item.source.hash tag="td" testId="eventSourceHashValue"}}
    </tr>
    <tr>
      <th scope="row" test-id="eventTargetLabel">{{t "respond.eventsList.endpoint.targetLabel"}}</th>
      {{properties-for/determine-value key="filename" value=item.destination.filename tag="td" testId="eventTargetFileNameValue"}}
      <td test-id="eventTargetLaunchValue">{{properties-for/determine-value value=item.destination.launch_argument}}</td>
      <td test-id="eventTargetPathValue">{{properties-for/determine-value value=item.destination.path}}</td>
      {{properties-for/determine-value class="hash" key="hash" value=item.destination.hash tag="td" testId="eventTargetHashValue"}}
    </tr>
  </tbody>
</table>
