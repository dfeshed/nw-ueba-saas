{{#events-list-row/trigger showDetail=(action "showDetail") ariaControls=ariaControls expanded=expanded role="button" tabIndex="0"}}
  {{#if associatedAlert}}
    <div class="events-list-alert-detail">
      {{rsa-risk-score score=associatedAlert.severity size="small" testId="eventsAlertScore" focusable="false"}}
      <h3 class="inline-alert-name" test-id="eventsAlertName">{{associatedAlert.name}}</h3>
      <span class="inline-events-summary" test-id="eventsAlertSummary">({{t 'respond.eventsList.eventOfTotal' eventIndex=eventIndex numEvents=associatedAlert.numEvents}})</span>
    </div>
  {{/if}}
  {{component componentClasses.header item=item}}
{{/events-list-row/trigger}}
{{#liquid-if expanded}}
  <div tabIndex={{tabIndex}} id={{ariaControls}} aria-hidden="{{collapsed}}" class="events-list-detail" test-id="eventsListDetail">
    <h4 class="sr-only">{{t 'respond.eventDetails.title'}}</h4>
    {{component componentClasses.detail item=item}}
  </div>
{{else}}
  {{component componentClasses.footer item=item}}
  <div tabIndex={{tabIndex}} id={{ariaControls}} aria-hidden="{{collapsed}}" class="events-list-detail" test-id="eventsListDetail" hidden={{collapsed}}>
    <h4 class="sr-only">{{t 'respond.eventDetails.title'}}</h4>
  </div>
{{/liquid-if}}
