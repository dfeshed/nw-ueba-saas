{{#if isListManagerReady}}
  {{#if isDisabled}}
    {{list-manager/list-manager-container/list-menu-trigger
      stateLocation=stateLocation
      isDisabled=isDisabled
    }}
  {{else}}
    {{#list-manager/list-manager-container
      stateLocation=stateLocation
      itemSelection=itemSelection
      as |manager|
    }}
      {{yield manager}}
    {{/list-manager/list-manager-container}}
  {{/if}}
{{/if}}
