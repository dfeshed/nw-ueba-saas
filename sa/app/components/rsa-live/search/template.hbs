{{#rsa-application-layout-manager class="rsa-live-content-layout-manager"}}
  {{! SEARCH CRITERIA PANEL }}
  {{#rsa-application-layout-panel class="panel-A rsa-live-search-criteria-panel"}}
    <vbox>
      <vbox fit>
        {{#rsa-content-section-header}}
          <h1>{{t 'live.search.searchCriteria'}}</h1>
          <span class="panel-toggle" {{action 'toggleSearchCriteriaPanel'}}>
            {{#if isCriteriaPanelCollapsed}}
              {{rsa-icon name="search"}}
            {{else}}
              {{rsa-icon name="close"}}
            {{/if}}
          </span>
        {{/rsa-content-section-header}}
      </vbox>
      {{! SEARCH CRITERIA COMPONENT }}
    </vbox>
  {{/rsa-application-layout-panel}}

  {{! SEARCH RESULTS PANEL }}
  {{#rsa-application-layout-panel class="panel-B rsa-live-search-results-panel"}}
    <vbox>
      <vbox fit>
        {{! SEARCH RESULTS PANEL HEADER }}
        {{#rsa-content-section-header}}
          <h1><span class="result-count">{{searchResults.totalItems}}</span>{{t 'live.search.matchingResources'}}</h1>
        {{/rsa-content-section-header}}
      </vbox>

      {{! SEARCH RESULTS COMPONENT }}

    </vbox>
  {{/rsa-application-layout-panel}}

  {{! SEARCH RESULT DETAILS PANEL }}
  {{#rsa-application-layout-panel class="panel-C rsa-live-search-result-details-panel"}}
    <vbox>
      <vbox fit>
        {{#rsa-content-section-header}}
          <span class="panel-toggle" {{action 'toggleSearchCriteriaPanel'}}>
            {{rsa-icon name="close"}}
          </span>
          <h1>{{t 'live.search.resourceDetailsTitle'}}</h1>
        {{/rsa-content-section-header}}
      </vbox>
      <vbox class="resource-details">
        <div class="scroll-box">
          {{! RESOURCE DETAILS COMPONENT }}
        </div>
      </vbox>
    </vbox>
  {{/rsa-application-layout-panel}}
{{/rsa-application-layout-manager}}