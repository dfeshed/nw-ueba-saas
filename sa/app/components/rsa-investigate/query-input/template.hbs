{{rsa-icon
  class="rsa-investigate-query-input__icon"
  name='search'
  size='large'
  style='lined'
}}
{{rsa-form-input
  class="rsa-investigate-query-input__input"
  type="text"
  value=queryString
  placeholder=placeholder
}}
{{#if queryString}}
  {{rsa-icon
    class="rsa-investigate-query-input__clear"
    name='remove-circle-1'
    style='lined'
    click=(action 'clear')
  }}
{{/if}}