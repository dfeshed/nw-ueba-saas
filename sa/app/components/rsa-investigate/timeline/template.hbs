<header class="rsa-investigate-timeline__header">
  <h2>{{t "investigate.events.title"}}</h2>
</header>
<section class="rsa-investigate-timeline__body">
  {{#rsa-chart
    data=chartData
    margin=chartMargin
    xScaleFn=xScaleFn
    xDomain=xDomain
    xProp=xProp
    yProp=yProp as |params|
  }}
    {{rsa-chart-grids
      xScale=params.xScale
      yScale=params.yScale
      yTickCount=6
      width=params.graphWidth
      height=params.graphHeight
    }}
    {{rsa-line-series
      data=params.data
      dataIndex=0
      xScale=params.xScale
      yScale=params.yScale
      xProp=xProp
      yProp=yProp
      duration=params.duration
    }}
    {{rsa-x-axis
      height=params.graphHeight
      scale=params.xScale
      tickFormat=tickformat
      duration=params.duration
    }}
    {{rsa-y-axis
      scale=params.yScale
      tickCount=6
      duration=params.duration
    }}
  {{/rsa-chart}}
  {{#if isStatusWaitOrRejected}}
    <div class="status">
      {{#if (is-equal status 'wait')}}
        <div class="wait js-test-wait">
          {{rsa-loader size="small" label=(t 'investigate.loading')}}
        </div>
      {{else if (is-equal status 'rejected')}}
        <div class="rejected js-test-rejected">
          <h2>{{t 'investigate.error.title'}}</h2>
          {{#rsa-form-button isDanger=true class="js-test-retry" click=(action "safeCallback" retryAction)}}
            {{t 'investigate.tryAgain'}}
          {{/rsa-form-button}}
        </div>
      {{/if}}
    </div>
  {{/if}}
</section>
