{{#if (is-equal size 'min')}}
  <div class="mask size default" {{action "safeCallback" defaultSizeAction}}>{{rsa-icon name="arrow-right-9"}}</div>
{{/if}}
<section class="rsa-investigate-meta__content {{if hideDom 'hidden'}}">
  <header class="rsa-investigate-meta__header">
    <nav class="rsa-investigate-meta__nav">
      <h2>
        <span class="title">{{t "investigate.meta.title"}}</span>
        {{#if group.keys.length}}
          <span class="size js-group-keys-count">({{group.keys.length}})</span>
        {{/if}}
      </h2>
    </nav>
    <span class="rsa-investigate-meta__tools">
      {{#if (is-equal size 'max')}}
        <button class="size default" {{action "safeCallback" defaultSizeAction}}>{{rsa-icon name="arrow-left-9"}}</button>
        <button class="size min" {{action "safeCallback" minSizeAction}}>{{rsa-icon name="close"}}</button>
      {{else}}
        <button class="size max" {{action "safeCallback" maxSizeAction}}>{{rsa-icon name="arrow-right-9"}}</button>
        <button class="size min" {{action "safeCallback" minSizeAction}}>{{rsa-icon name="close"}}</button>
      {{/if}}
    </span>
  </header>
  <section class="rsa-investigate-meta__body">
    {{rsa-investigate/meta/values-panel
      query=query
      group=group
      language=language
      aliases=aliases
      metaKeyStates=metaKeyStates
      clickValueAction=(action "safeCallback" clickValueAction)
      contextLookupAction=(action "safeCallback" contextLookupAction)
      toggleAction=(action "safeCallback" toggleAction)}}
  </section>
</section>
