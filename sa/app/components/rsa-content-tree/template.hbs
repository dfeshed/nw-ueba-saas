<div class="rsa-content-tree__arrow-container">
  {{rsa-icon size="smaller" name="arrow-down-12" click=(action 'toggleTreeVisibilityAction')}}
</div>
<div class="rsa-content-tree__tree-container">
  {{#each rawCategoryData as |treeNode|}}
    {{#rsa-content-accordion isCollapsed=true label=treeNode.name}}
      {{#each treeNode.children as |child|}}
        <div class="rsa-content-tree__child-label {{if child.selected 'selected'}}" {{action 'addAction' child}}>{{child.name}}</div>
      {{/each}}
    {{/rsa-content-accordion}}
  {{/each}}
</div>
