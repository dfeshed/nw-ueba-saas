<div class="scroll-box rsa-hide-webkit-scrollbar">
  <div class="rsa-nav-tab-group rsa-application-incident-queue-panel__tab" isActive=true>
    {{#rsa-nav-tab class="js-my-incidents" isActive=(eq activeTab "my") click=(action 'fetchIncidents' 'my')}}
      {{t 'incident.queue.myQueue'}}
    {{/rsa-nav-tab}}
    {{#rsa-nav-tab class='js-all-incidents' isActive=(eq activeTab "all") click=(action 'fetchIncidents' 'all')}}
      {{t 'incident.queue.allIncidents'}}
    {{/rsa-nav-tab}}
  </div>
  {{#if loadingData}}
    {{rsa-loader size="large" class="rsa-application-incident-queue-panel__loader"}}
  {{else}}
    {{#if incidents}}
      {{#rsa-data-table lazy=true items=incidents columnsConfig=customColumnConfig}}
        {{#rsa-data-table/body as |item index column|}}
          {{#rsa-data-table/body-cell item=item column=column index=index}}
            {{#link-to 'protected.respond.incident' item.id click=(action 'gotoIncidentDetail')}}
              {{#rsa-content-card class="rsa-incident-content-card small-size"}}
                {{rsa-respond/landing-page/incident-tile incident=item size='small' mode='queue'}}
              {{/rsa-content-card}}
            {{/link-to}}
          {{/rsa-data-table/body-cell}}
        {{/rsa-data-table/body}}
      {{/rsa-data-table}}
    {{else}}
      {{t "incident.emptyMessage"}}
    {{/if}}
  {{/if}}
</div>
