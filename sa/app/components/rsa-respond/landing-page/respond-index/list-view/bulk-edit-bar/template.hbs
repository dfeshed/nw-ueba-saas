{{#rsa-application-modal eventId='bulk-edit-delete' label=(t "incident.edit.delete.confirmationTitle") }}
  <div class='modal-content rsa-respond-bulk-edit-delete-confirm'>
    <p>{{ t "incident.edit.delete.confirmationBody" count=totalIncidentsDeleted}}</p>
    {{#rsa-form-button isFullWidth=true defaultAction=(action 'closeDeleteConfirmModal')}}
      {{t 'forms.cancel'}}
    {{/rsa-form-button}}
    {{#rsa-form-button isFullWidth=true style='danger' defaultAction=(action 'confirmDelete')}}
      {{t 'forms.delete'}}
    {{/rsa-form-button}}
  </div>
{{/rsa-application-modal}}

{{#rsa-content-section-header}}
  <div class="rsa-bulk-edit-options-group">

    {{#power-select
      class='rsa-form-status-select'
      tagName='div'
      options=statusList
      selected=selected.statusSort
      disabled=isStatusSelectorDisabled
      placeholder=(t 'incident.fields.status')
      allowClear=true
      searchEnabled=false
      onchange=(action 'selectElement' 'statusSort' statusList)
      as |status|}}
      {{t (concat 'incident.status.' status.id)}}
    {{/power-select}}

    {{#power-select
      class='rsa-form-assignee-select'
      tagName='div'
      options=usersList
      selected=selected.assignee
      disabled=isSelectAvailable
      placeholder=(t 'incident.fields.assignee')
      searchField="firstName"
      allowClear=true
      searchEnabled=false
      onchange=(action 'selectElement' 'assignee' usersList)
      as |user|}}
      {{userName user}}
    {{/power-select}}

    {{#power-select
      class='rsa-form-priority-select'
      tagName='div'
      options=priorityList
      selected=selected.prioritySort
      disabled=isSelectAvailable
      placeholder=(t 'incident.fields.priority')
      allowClear=true
      searchEnabled=false
      onchange=(action 'selectElement' 'prioritySort' priorityList)
      as |priority|}}
      {{t (concat 'incident.priority.' priority.id)}}
    {{/power-select}}

  </div>

  <div class="rsa-bulk-edit-button-group">
    {{#rsa-form-button style='danger' class=(concat 'rsa-bulk-edit-button-group__delete-btn') isDisabled=isDeleteDisabled defaultAction=(action 'showBulkDeleteModal')}}
      {{t 'forms.delete'}}
    {{/rsa-form-button}}

    {{#rsa-form-button class=(concat 'rsa-bulk-edit-button-group__cancel-btn' (unless isBulkEditInProgress " is-hidden")) defaultAction=(action 'cancelEdit')}}
      {{t 'forms.cancel'}}
    {{/rsa-form-button}}

    {{#rsa-form-button style='primary' class=(concat 'rsa-bulk-edit-button-group__save-btn' (unless isBulkEditInProgress " is-hidden")) defaultAction=(action 'validateBulkSave')}}
      {{t 'forms.save'}}
    {{/rsa-form-button}}

  </div>

{{/rsa-content-section-header}}
