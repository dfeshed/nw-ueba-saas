{{rsa-respond/landing-page/respond-header modelCount=(unless isCardMode filteredIncidentCount)}}

{{#if isCardMode}}
  {{rsa-respond/landing-page/respond-index/card-view model=model sortAction=(route-action "sortAction")}}
{{else}}
  {{rsa-respond/landing-page/respond-index/list-view
    allIncidents=model.allIncidents
    users=model.allIncidents.users
    categoryTags=model.allIncidents.categoryTags
    bulkSaveAction=(route-action 'bulkSave')
    gotoIncidentDetail=(route-action 'gotoIncidentDetail')
    sortAction=(route-action "sortAction")}}
{{/if}}
