<hbox class="rsa-context-panel-header__tab">
  {{#each headerButtons as | componentName | }}
    {{#if (eq componentName "add-to-list")}}
      {{#rsa-form-button defaultAction=(action "openContextAddToList" (hash type=meta id=lookupKey)) current=this}}
        {{t "context.addToList.title"}}
      {{/rsa-form-button}}
    {{else if (eq componentName "endpoint")}}
      <a href="ecatui://{{lookupKey}}" target="_blank" rel="noopener noreferrer" class="rsa-context-panel__linkButton" title= {{t "context.hostSummary.endpoint"}}>
        {{t "context.tooltip.ecat"}}
      </a>
    {{else if (eq componentName "investigate")}}
      <a href={{investigateUrl}} target="_blank" rel="noopener noreferrer" class="rsa-context-panel__linkButton">
        {{t "context.tooltip.navigate"}}
      </a>
    {{else if (eq componentName "archer")}}
      {{context-panel/header/actionbar/pivot-to-archer}}
    {{/if}}
  {{/each}}
</hbox>