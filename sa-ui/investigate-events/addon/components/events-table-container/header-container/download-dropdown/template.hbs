{{#if permissionAllowsDownload}}
  <label class="is-small power-select">
    {{#power-select
      options=downloadOptions
      selected=downloadTitle
      searchEnabled=false
      triggerClass="is-small"
      dropdownClass="download-dropdown"
      disabled=isDisabled
      loading=true
      onchange=(action "downloadFiles") as |option|}}
      {{#if isDownloading}}{{rsa-loader size="small"}}{{/if}}
      <span title={{option.name}}>{{option.name}}</span>
      <span class="right">{{option.count}}</span>
    {{/power-select}}
  </label>
  {{rsa-download-export
    extractLink=extractLink
    isAutoDownloadFile=isAutoDownloadFile
    iframeClass="export-events-iframe"
    sendMessage=(action "didDownloadFiles")}}
{{/if}}

