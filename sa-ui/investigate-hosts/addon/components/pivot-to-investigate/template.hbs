{{#if showAsRightClick}}
  {{#rsa-context-menu
    contextItems=contextItems}}
    {{yield}}
  {{/rsa-context-menu}}
{{else}}
  {{rsa-icon
    name="expand-6"
    size=size
    title=(t "investigateHosts.pivotToInvestigate.iconTitle")
    click=(action "pivotToInvestigate")}}
{{/if}}
{{#if showServiceModal}}
  {{#endpoint/core-services-modal
    onClose=(action "onModalClose")
    modalTitle=(t "investigateHosts.pivotToInvestigate.title")
    serviceList=serviceList as |selectedService isDisabled|}}

    {{#rsa-form-button defaultAction=(action "onCancel")}}
      {{t "forms.cancel"}}
    {{/rsa-form-button}}

    {{#rsa-form-button
      isDisabled=isDisabled
      style="primary"
      click=(action "pivotToInvestigateNavigate" selectedService.id)}}
      {{t "investigateHosts.pivotToInvestigate.buttonText"}}
    {{/rsa-form-button}}

    {{#rsa-form-button
      isDisabled=isDisabled
      style="primary"
      click=(action "pivotToInvestigateEventAnalysis" selectedService.id)}}
      {{t "investigateHosts.pivotToInvestigate.buttonText2"}}
    {{/rsa-form-button}}

  {{/endpoint/core-services-modal}}
{{/if}}


