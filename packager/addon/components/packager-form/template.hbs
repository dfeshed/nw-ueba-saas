<div class="form-fields">
  <div class="server-input-group rsa-form-radio-group">
    <div class="field">
      <hbox xs="12">
        <div class="col-xs-5 host-ip-js">
          {{rsa-form-input label=(t 'packager.server') value=configData.server}}
        </div>
        <div class="col-xs-4 host-port-js">
          {{rsa-form-input label=(t 'packager.port') value=configData.port}}
        </div>
      </hbox>
    </div>
  </div>
  <div class="field rsa-form-radio-group">
    <h4 class='rsa-form-radio-group-label'>{{t 'packager.certificateValidation'}}</h4>
    <label class="rsa-form-radio-label {{if (eq 'none' configData.certificateValidation) 'checked'}}">
      {{radio-button
        value='none'
        groupValue=configData.certificateValidation}}
      {{t 'packager.none'}}
    </label>
    <label class="rsa-form-radio-label {{if (eq 'fullchain' configData.certificateValidation) 'checked'}}">
      {{radio-button
        value='fullchain'
        groupValue=configData.certificateValidation}}
      {{t 'packager.fullChain'}}
    </label>
    <label class="rsa-form-radio-label {{if (eq 'thumbprint' configData.certificateValidation) 'checked'}}">
      {{radio-button
        value='thumbprint'
        groupValue=configData.certificateValidation}}
      {{t 'packager.thumbprint'}}
    </label>
  </div>
  <div class="field col-xs-7">
    {{rsa-form-datetime
      label=(t 'packager.autoUninstall')
      dateFormat='MM/DD/YYYY HH:mm'
      showTime=true
      timeLabel=(t 'Time')
      incrementMinuteBy=5
      width=100
      minDate=minDate
      value=(readonly configData.autoUninstall)
      yearRange="currentYear, 2050"
      onChange=(action (mut configData.autoUninstall))
    }}
  </div>
  <div class="field force-overwrite">
    {{#x-toggle
      showLabels=true
      onLabel=(t 'packager.forceOverwrite')
      value=(readonly configData.forceOverwrite)
      onToggle=(action (mut configData.forceOverwrite)) as |toggle|}}
      {{toggle.switch}}
      {{toggle.onLabel value=(not configData.forceOverwrite)}}
    {{/x-toggle}}
  </div>

  <div class="server-input-group rsa-form-radio-group">
    <div class="field">
      <hbox xs="12">
        <div class="col-xs-5 service-name-js">
          {{rsa-form-input label=(t 'packager.serviceName') value=configData.serviceName}}
        </div>
        <div class="col-xs-5 display-name-js">
          {{rsa-form-input label=(t 'packager.displayName') value=configData.displayName}}
        </div>
      </hbox>
    </div>
  </div>
  <div class="field">
    <div class="col-xs-12">
      {{rsa-form-input label=(t 'packager.description') value=configData.description}}
    </div>
  </div>
  <div class="field">
    <div class="col-xs-12">
      {{rsa-form-textarea label=(t 'packager.proxyServers') value=configData.proxyServers}}
    </div>
  </div>
  <div class="field">
    <div class="col-xs-12">
      {{rsa-form-textarea label=(t 'packager.exceptions') value=configData.exceptions}}
    </div>
  </div>
</div>

<div class="field buttons">
  <hbox class="rsa-button-group">
    {{#rsa-form-button isDisabled=isResetDisabled defaultAction=(action 'resetForm')}}
      {{t 'packager.reset'}}
    {{/rsa-form-button}}
    {{#rsa-form-button style='primary' isDisabled=isDisabled defaultAction=(action 'generateAgent')}}
      {{t 'packager.generateAgent'}}
    {{/rsa-form-button}}
  </hbox>
</div>