<box {{did-insert this.didInsertNode this}} class="custom-widget">
  {{#if this.isLoadingData}}
    <centered>
      <RsaLoader @size="larger" @label={{t "springboard.loading"}}/>
    </centered>
  {{else}}
    <SpringboardWidget @widget={{@widget}} as |widget|>
      <widget.header @title={{format-message "{title} ({total})" title=@widget.name total=this.totalItems}}/>
      <widget.content as |Widget content|>
        <Widget @config={{content}} @data={{this.widgetData}}/>
      </widget.content>
    </SpringboardWidget>
  {{/if}}
</box>