    <repositories>
        <!-- ASOC Tier-2 repository -->
        <repository>
            <id>repo1.rsa.lab.emc.com-build</id>
            <url>http://repo1.rsa.lab.emc.com:8081/artifactory/asoc-build-repo</url>
        </repository>
    </repositories>

    <properties>
        <presidio-app.directory>
            <!--Base application directory.
