<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>package</artifactId>
        <groupId>com.rsa.netwitness.presidio</groupId>
        <version>11.4.0-0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>rsa-nw-presidio-configserver</artifactId>
    <dependencies>
        <dependency>
            <groupId>fortscale</groupId>
            <artifactId>presidio-configuration-server</artifactId>
            <version>${presidio-core.version}</version>
        </dependency>
        <dependency>
            <groupId>fortscale</groupId>
            <artifactId>presidio-utils</artifactId>
            <version>${presidio-core.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>EncryptionUtils</finalName>
                            <archive>
                                <manifest>
                                    <mainClass>fortscale.utils.EncryptionUtils</mainClass>
                                </manifest>
                            </archive>
                            <descriptors>
                                <descriptor>src/main/resources/jar-with-deps-with-exclude.xml</descriptor>
                            </descriptors>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- download dependency chain for RPM bundling -->
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-client-dependencies</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/dependencies</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                            <stripVersion>true</stripVersion>
                            <stripClassifier>true</stripClassifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- create RPM -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>${rpm-maven-plugin.version}</version>
                <configuration>
                    <summary>Presidio(UEBA) core configuration server</summary>
                    <defaultGroupname>${presidio.username}</defaultGroupname>
                    <defaultUsername>${presidio.groupname}</defaultUsername>
                    <mappings>
                        <mapping>
                            <directoryIncluded>false</directoryIncluded>
                            <directory>/usr/sbin/presidio/configserver</directory>
                            <username>${presidio.username}</username>
                            <groupname>${presidio.groupname}</groupname>
                            <sources>
                                <source>
                                    <includes>
                                        <include>*.jar</include>
                                    </includes>
                                    <location>${project.build.directory}/dependencies</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directoryIncluded>false</directoryIncluded>
                            <directory>/usr/lib/systemd/system/</directory>
                            <username>${presidio.username}</username>
                            <groupname>${presidio.groupname}</groupname>
                            <sources>
                                <source>
                                    <includes>
                                        <include>presidio-configserver.service</include>
                                    </includes>
                                    <location>scripts/systemd</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <!--create overriding configuration folder-->
                            <directoryIncluded>true</directoryIncluded>
                            <directory>/etc/netwitness/presidio/configserver/configurations/</directory>
                            <username>${presidio.username}</username>
                            <groupname>${presidio.groupname}</groupname>
                            <recurseDirectories>true</recurseDirectories>
                            <configuration>true</configuration>
                        </mapping>
                        <mapping>
                            <directoryIncluded>false</directoryIncluded>
                            <directory>${presidio-app.directory}/install/configserver</directory>
                            <username>${presidio.username}</username>
                            <groupname>${presidio.groupname}</groupname>
                            <filemode>755</filemode>
                            <sources>
                                <source>
                                    <location>scripts/install/</location>
                                </source>
                                <source>
                                    <location>target/EncryptionUtils.jar</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <requires>
                        <require>java &gt; 11</require>
                    </requires>
                    <description>
                        Presidio(UEBA) core configuration server
                    </description>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>