<div class='rsa-context-tree-table__createList'>
  <hbox class='rsa-context-tree-table create-list-header'>
    {{t 'context.addToList.create' }}
  </hbox>
  <hbox class='rsa-context-tree-table list-name'>
    {{t 'context.addToList.name'}}
  </hbox>
  <hbox>
    {{rsa-form-input
      placeholder=(t 'context.addToList.listName')
      class="rsa-context-tree-table__metaValue"
      value=name
      isSuccess=true
      input=(action 'checkListName' name)
      isError=isError
      errorMessage=errorMessage}}
  </hbox>
  <hbox class='rsa-context-tree-table list-desc'>
    {{rsa-form-textarea value=description label=(t 'context.addToList.descriptionTitle') maxlength=255}}
  </hbox>
  <hbox>
    <vbox class="rsa-context-tree-table__button">
      {{#rsa-form-button isFullWidth=true  click=(action 'resetList') }}{{t 'context.addToList.cancel'}}{{/rsa-form-button}}
    </vbox>
    <vbox>
      {{#rsa-form-button style='primary' isFullWidth=true click=(action 'appendList') isDisabled=isDisabled}}
        {{t 'context.addToList.save'}}
      {{/rsa-form-button}}
    </vbox>
  </hbox>
</div>