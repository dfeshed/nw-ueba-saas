{{context-panel/data-source-header contextData=contextData dataSourceDetails=dataSourceDetails}}
<div class='rsa-context-panel__config-grid__panel'>
  {{#each dataSourceData as |gridData|}}
    {{#each-in gridData as |label content|}}
      <div class='rsa-context-panel__config-grid__layout col-xs-3'>
        {{#if (get dataSourceDetails.localisationField label)}}
          <div>{{rsa-content-definition label=(t (get dataSourceDetails.localisationField label))}}</div>
        {{else}}
          <div>{{rsa-content-definition label=label}}</div>
        {{/if}}
        {{if content content '-'}}
      </div>
    {{/each-in}}
  {{/each}}
</div>
