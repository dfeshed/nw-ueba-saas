<div class='users-tab_filter_filter_title'>
  {{rsa-icon name='filter-2' style='filled'}} {{t 'investigateUsers.users.filters.title'}}
</div>
<div class='users-tab_filter_options'>
  {{users-tab/filter/favorites}}
  {{users-tab/filter/filter}}
</div>
<div class='users-tab_filter_controls'>
  {{#rsa-application-modal
    label='Save As Favorites'
    eventId='saveAsFavorites'}}
    <div class='modal-trigger'>
      {{#rsa-form-button isFullWidth=true}}{{t 'investigateUsers.addToFavorites'}}{{/rsa-form-button}}
    </div>
    <div class='modal-content users-tab_filter_controls_save-as-favorites'>
      <div class='users-tab_filter_controls_save-as-favorites_name'>
        <div class='users-tab_filter_controls_save-as-favorites_name_label'>
          {{t 'investigateUsers.filterName'}}
        </div>
        <div>
          {{rsa-form-input value=name maxLength=40}}
        </div> 
      </div>
      <div class='users-tab_filter_controls_save-as-favorites_save'>
        <div class='users-tab_filter_controls_save-as-favorites_save_cancel'>
          {{#rsa-form-button click=(action 'closeFilter')}}{{t 'investigateUsers.cancel'}}{{/rsa-form-button}}
        </div>
        <div>
          {{#rsa-form-button style='primary' click=(action 'createFilter') isDisabled=isDisabled}}{{t 'investigateUsers.save'}}{{/rsa-form-button}}
        </div>
      </div>
    </div>
  {{/rsa-application-modal}}
  {{#rsa-form-button isFullWidth=true click=(action 'updateFilter' 'RESET')}}{{t 'investigateUsers.resetFilters'}}{{/rsa-form-button}}
</div>